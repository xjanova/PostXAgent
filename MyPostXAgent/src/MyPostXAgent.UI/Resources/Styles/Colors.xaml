<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ══════════════════════════════════════════════════════════════════ -->
    <!-- RGB PREMIUM THEME - Gaming Style -->
    <!-- ══════════════════════════════════════════════════════════════════ -->

    <!-- Dark Background Colors -->
    <Color x:Key="DarkBg1">#0D0D0F</Color>
    <Color x:Key="DarkBg2">#121218</Color>
    <Color x:Key="DarkBg3">#1A1A24</Color>
    <Color x:Key="DarkBg4">#242432</Color>
    <Color x:Key="DarkBgCard">#16161E</Color>
    <Color x:Key="DarkBgHover">#1E1E2E</Color>

    <!-- RGB Gradient Colors -->
    <Color x:Key="RgbCyan">#00F5FF</Color>
    <Color x:Key="RgbMagenta">#FF00FF</Color>
    <Color x:Key="RgbPurple">#8B5CF6</Color>
    <Color x:Key="RgbBlue">#3B82F6</Color>
    <Color x:Key="RgbPink">#EC4899</Color>
    <Color x:Key="RgbOrange">#F97316</Color>
    <Color x:Key="RgbGreen">#10B981</Color>
    <Color x:Key="RgbYellow">#FBBF24</Color>
    <Color x:Key="RgbRed">#EF4444</Color>

    <!-- Neon Glow Colors -->
    <Color x:Key="NeonCyan">#00FFFF</Color>
    <Color x:Key="NeonPink">#FF1493</Color>
    <Color x:Key="NeonPurple">#9D4EDD</Color>
    <Color x:Key="NeonBlue">#00BFFF</Color>
    <Color x:Key="NeonGreen">#39FF14</Color>

    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#10B981</Color>
    <Color x:Key="WarningColor">#F59E0B</Color>
    <Color x:Key="ErrorColor">#EF4444</Color>
    <Color x:Key="InfoColor">#3B82F6</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#A1A1AA</Color>
    <Color x:Key="TextMuted">#71717A</Color>

    <!-- ══════════════════════════════════════════════════════════════════ -->
    <!-- SOLID COLOR BRUSHES -->
    <!-- ══════════════════════════════════════════════════════════════════ -->

    <SolidColorBrush x:Key="DarkBg1Brush" Color="{StaticResource DarkBg1}"/>
    <SolidColorBrush x:Key="DarkBg2Brush" Color="{StaticResource DarkBg2}"/>
    <SolidColorBrush x:Key="DarkBg3Brush" Color="{StaticResource DarkBg3}"/>
    <SolidColorBrush x:Key="DarkBg4Brush" Color="{StaticResource DarkBg4}"/>
    <SolidColorBrush x:Key="DarkBgCardBrush" Color="{StaticResource DarkBgCard}"/>
    <SolidColorBrush x:Key="DarkBgHoverBrush" Color="{StaticResource DarkBgHover}"/>

    <SolidColorBrush x:Key="RgbCyanBrush" Color="{StaticResource RgbCyan}"/>
    <SolidColorBrush x:Key="RgbMagentaBrush" Color="{StaticResource RgbMagenta}"/>
    <SolidColorBrush x:Key="RgbPurpleBrush" Color="{StaticResource RgbPurple}"/>
    <SolidColorBrush x:Key="RgbBlueBrush" Color="{StaticResource RgbBlue}"/>
    <SolidColorBrush x:Key="RgbPinkBrush" Color="{StaticResource RgbPink}"/>
    <SolidColorBrush x:Key="RgbOrangeBrush" Color="{StaticResource RgbOrange}"/>
    <SolidColorBrush x:Key="RgbGreenBrush" Color="{StaticResource RgbGreen}"/>
    <SolidColorBrush x:Key="RgbYellowBrush" Color="{StaticResource RgbYellow}"/>
    <SolidColorBrush x:Key="RgbRedBrush" Color="{StaticResource RgbRed}"/>

    <SolidColorBrush x:Key="NeonCyanBrush" Color="{StaticResource NeonCyan}"/>
    <SolidColorBrush x:Key="NeonPinkBrush" Color="{StaticResource NeonPink}"/>
    <SolidColorBrush x:Key="NeonPurpleBrush" Color="{StaticResource NeonPurple}"/>
    <SolidColorBrush x:Key="NeonBlueBrush" Color="{StaticResource NeonBlue}"/>
    <SolidColorBrush x:Key="NeonGreenBrush" Color="{StaticResource NeonGreen}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>

    <!-- ══════════════════════════════════════════════════════════════════ -->
    <!-- GRADIENT BRUSHES - RGB Effects -->
    <!-- ══════════════════════════════════════════════════════════════════ -->

    <!-- Main RGB Gradient (Cyan -> Magenta -> Purple) -->
    <LinearGradientBrush x:Key="RgbGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource RgbCyan}" Offset="0"/>
        <GradientStop Color="{StaticResource RgbMagenta}" Offset="0.5"/>
        <GradientStop Color="{StaticResource RgbPurple}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Horizontal RGB -->
    <LinearGradientBrush x:Key="RgbHorizontalBrush" StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Color="{StaticResource RgbCyan}" Offset="0"/>
        <GradientStop Color="{StaticResource RgbBlue}" Offset="0.25"/>
        <GradientStop Color="{StaticResource RgbPurple}" Offset="0.5"/>
        <GradientStop Color="{StaticResource RgbPink}" Offset="0.75"/>
        <GradientStop Color="{StaticResource RgbMagenta}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Neon Glow Gradient -->
    <LinearGradientBrush x:Key="NeonGlowBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource NeonCyan}" Offset="0"/>
        <GradientStop Color="{StaticResource NeonPink}" Offset="0.5"/>
        <GradientStop Color="{StaticResource NeonPurple}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Card Gradient Background -->
    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1A1A2E" Offset="0"/>
        <GradientStop Color="#16162A" Offset="1"/>
    </LinearGradientBrush>

    <!-- Sidebar Gradient -->
    <LinearGradientBrush x:Key="SidebarGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0F0F14" Offset="0"/>
        <GradientStop Color="#1A1A24" Offset="1"/>
    </LinearGradientBrush>

    <!-- Button Gradient -->
    <LinearGradientBrush x:Key="ButtonGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="{StaticResource RgbPurple}" Offset="0"/>
        <GradientStop Color="{StaticResource RgbPink}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Success Gradient -->
    <LinearGradientBrush x:Key="SuccessGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#10B981" Offset="0"/>
        <GradientStop Color="#34D399" Offset="1"/>
    </LinearGradientBrush>

    <!-- Warning Gradient -->
    <LinearGradientBrush x:Key="WarningGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#F59E0B" Offset="0"/>
        <GradientStop Color="#FBBF24" Offset="1"/>
    </LinearGradientBrush>

    <!-- Error Gradient -->
    <LinearGradientBrush x:Key="ErrorGradientBrush" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#EF4444" Offset="0"/>
        <GradientStop Color="#F87171" Offset="1"/>
    </LinearGradientBrush>

    <!-- ══════════════════════════════════════════════════════════════════ -->
    <!-- PLATFORM COLORS - Social Media -->
    <!-- ══════════════════════════════════════════════════════════════════ -->

    <SolidColorBrush x:Key="FacebookBrush" Color="#1877F2"/>
    <SolidColorBrush x:Key="InstagramBrush" Color="#E4405F"/>
    <SolidColorBrush x:Key="TikTokBrush" Color="#00F2EA"/>
    <SolidColorBrush x:Key="TwitterBrush" Color="#1DA1F2"/>
    <SolidColorBrush x:Key="YouTubeBrush" Color="#FF0000"/>
    <SolidColorBrush x:Key="LineBrush" Color="#00B900"/>
    <SolidColorBrush x:Key="LinkedInBrush" Color="#0A66C2"/>
    <SolidColorBrush x:Key="PinterestBrush" Color="#BD081C"/>
    <SolidColorBrush x:Key="ThreadsBrush" Color="#FFFFFF"/>

    <!-- Instagram Gradient -->
    <LinearGradientBrush x:Key="InstagramGradientBrush" StartPoint="0,1" EndPoint="1,0">
        <GradientStop Color="#405DE6" Offset="0"/>
        <GradientStop Color="#5851DB" Offset="0.1"/>
        <GradientStop Color="#833AB4" Offset="0.2"/>
        <GradientStop Color="#C13584" Offset="0.4"/>
        <GradientStop Color="#E1306C" Offset="0.6"/>
        <GradientStop Color="#FD1D1D" Offset="0.8"/>
        <GradientStop Color="#F56040" Offset="0.9"/>
        <GradientStop Color="#FCAF45" Offset="1"/>
    </LinearGradientBrush>

    <!-- TikTok Gradient -->
    <LinearGradientBrush x:Key="TikTokGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#00F2EA" Offset="0"/>
        <GradientStop Color="#FF0050" Offset="1"/>
    </LinearGradientBrush>

    <!-- ══════════════════════════════════════════════════════════════════ -->
    <!-- DROP SHADOW EFFECTS -->
    <!-- ══════════════════════════════════════════════════════════════════ -->

    <DropShadowEffect x:Key="NeonGlowEffect" Color="{StaticResource NeonCyan}" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
    <DropShadowEffect x:Key="NeonPinkGlowEffect" Color="{StaticResource NeonPink}" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
    <DropShadowEffect x:Key="NeonPurpleGlowEffect" Color="{StaticResource NeonPurple}" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
    <DropShadowEffect x:Key="CardShadowEffect" Color="#000000" BlurRadius="30" ShadowDepth="5" Opacity="0.3"/>
    <DropShadowEffect x:Key="SubtleShadowEffect" Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>

    <!-- Legacy compatibility -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource RgbPurple}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource RgbCyan}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource RgbPink}"/>

</ResourceDictionary>
