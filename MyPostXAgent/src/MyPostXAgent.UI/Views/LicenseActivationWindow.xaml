<Window x:Class="MyPostXAgent.UI.Views.LicenseActivationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MyPostXAgent - เปิดใช้งาน"
        Height="550" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
            <TextBlock Text="MyPostXAgent"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryHueMidBrush}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="AI Social Media Automation"
                       FontSize="14"
                       Opacity="0.6"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Content -->
        <StackPanel Grid.Row="1">
            <!-- Machine ID -->
            <TextBlock Text="Machine ID ของคุณ:"
                       Opacity="0.7"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="MachineIdTextBox"
                     Text="{Binding MachineId}"
                     IsReadOnly="True"
                     FontFamily="Consolas"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="Machine ID"/>

            <!-- License Key Input -->
            <TextBlock Text="License Key:"
                       Opacity="0.7"
                       Margin="0,20,0,5"/>
            <TextBox x:Name="LicenseKeyTextBox"
                     Text="{Binding LicenseKey, UpdateSourceTrigger=PropertyChanged}"
                     FontFamily="Consolas"
                     FontSize="16"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="XXXX-XXXX-XXXX-XXXX"
                     CharacterCasing="Upper"/>

            <!-- Activate Button -->
            <Button Content="เปิดใช้งาน License"
                    Command="{Binding ActivateLicenseCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Height="45"
                    Margin="0,20,0,0"
                    IsEnabled="{Binding IsActivating, Converter={StaticResource InverseBoolConverter}}"/>

            <!-- Separator -->
            <Grid Margin="0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Separator Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="หรือ" Margin="15,0" Opacity="0.5"/>
                <Separator Grid.Column="2" VerticalAlignment="Center"/>
            </Grid>

            <!-- Demo Button -->
            <Button Content="ทดลองใช้ฟรี 3 วัน"
                    Command="{Binding StartDemoCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Height="45"
                    IsEnabled="{Binding CanStartDemo}"/>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}"
                       Margin="0,20,0,0"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource SecondaryHueMidBrush}"/>

            <!-- Progress -->
            <ProgressBar IsIndeterminate="True"
                         Margin="0,15,0,0"
                         Visibility="{Binding IsActivating, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="ซื้อ License"
                    Command="{Binding OpenPurchasePageCommand}"
                    Style="{StaticResource MaterialDesignFlatButton}"/>
            <TextBlock Text="ต้องเชื่อมต่อ Internet เพื่อเปิดใช้งาน"
                       FontSize="11"
                       Opacity="0.5"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
