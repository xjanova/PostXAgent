<Page x:Class="MyPostXAgent.UI.Views.Pages.PostsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Title="Posts"
      Background="Transparent">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock FontSize="28" FontWeight="Bold">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FFFFFF" Offset="0"/>
                            <GradientStop Color="#A1A1AA" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                    <Run Text="Posts"/>
                </TextBlock>
                <TextBlock Text="สร้างและจัดการโพสต์ทั้งหมด" FontSize="14" Foreground="{StaticResource TextMutedBrush}" Margin="0,4,0,0"/>
            </StackPanel>

            <Button Grid.Column="1" Height="44" Padding="20,0" Cursor="Hand"
                    Command="{Binding CreatePostCommand}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="22" Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#10B981" Offset="0"/>
                                    <GradientStop Color="#059669" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#10B981" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Plus" Width="20" Height="20" Foreground="White" VerticalAlignment="Center"/>
                                <TextBlock Text="สร้างโพสต์ใหม่" Foreground="White" FontWeight="SemiBold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!-- FILTERS -->
        <Border Grid.Row="1" CornerRadius="12" Padding="16" Margin="0,0,0,16" Background="#1A1A2E">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="กรองตามสถานะ:" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center" Margin="0,0,12,0"/>

                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding StatusFilters}"
                          SelectedItem="{Binding SelectedStatusFilter}"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Background="#16161E"
                          Foreground="White">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="White"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button Grid.Column="3" Command="{Binding RefreshCommand}" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="8" Padding="12,8" Background="#242432">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Refresh" Width="18" Height="18" Foreground="{StaticResource RgbCyanBrush}"/>
                                    <TextBlock Text="รีเฟรช" Foreground="{StaticResource TextSecondaryBrush}" Margin="6,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- POSTS LIST -->
        <Border Grid.Row="2" CornerRadius="16" Background="#1A1A2E">
            <Grid>
                <!-- Loading Indicator -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" Width="100" Height="4"
                                 Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                    <TextBlock Text="กำลังโหลด..." Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,12,0,0" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Posts Cards -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding IsBusy, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                              Margin="16">
                    <ItemsControl ItemsSource="{Binding Posts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="12" Margin="0,0,0,12" Padding="20" Background="#16161E">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Platform Icon -->
                                        <Border Width="48" Height="48" CornerRadius="12" VerticalAlignment="Top">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Platform}" Value="Facebook">
                                                            <Setter Property="Background" Value="#1877F2"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Platform}" Value="Instagram">
                                                            <Setter Property="Background">
                                                                <Setter.Value>
                                                                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                                                                        <GradientStop Color="#833AB4" Offset="0"/>
                                                                        <GradientStop Color="#E1306C" Offset="0.5"/>
                                                                        <GradientStop Color="#F56040" Offset="1"/>
                                                                    </LinearGradientBrush>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Platform}" Value="TikTok">
                                                            <Setter Property="Background" Value="#000000"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Platform}" Value="Twitter">
                                                            <Setter Property="Background" Value="#000000"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Platform}" Value="YouTube">
                                                            <Setter Property="Background" Value="#FF0000"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <materialDesign:PackIcon Width="24" Height="24" Foreground="White"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <materialDesign:PackIcon.Style>
                                                    <Style TargetType="materialDesign:PackIcon">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Platform}" Value="Facebook">
                                                                <Setter Property="Kind" Value="Facebook"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Platform}" Value="Instagram">
                                                                <Setter Property="Kind" Value="Instagram"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Platform}" Value="TikTok">
                                                                <Setter Property="Kind" Value="MusicNote"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Platform}" Value="Twitter">
                                                                <Setter Property="Kind" Value="Twitter"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Platform}" Value="YouTube">
                                                                <Setter Property="Kind" Value="Youtube"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </materialDesign:PackIcon.Style>
                                            </materialDesign:PackIcon>
                                        </Border>

                                        <!-- Post Content -->
                                        <StackPanel Grid.Column="1" Margin="16,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{Binding Platform}" FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}"/>

                                                <!-- Status Badge -->
                                                <Border Grid.Column="2" CornerRadius="8" Padding="8,3" HorizontalAlignment="Right">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Draft">
                                                                    <Setter Property="Background" Value="#2D2D3D"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Scheduled">
                                                                    <Setter Property="Background" Value="#2D1F4E"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Posting">
                                                                    <Setter Property="Background" Value="#1C3D3D"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Posted">
                                                                    <Setter Property="Background" Value="#1C3D1C"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                                    <Setter Property="Background" Value="#3D1C1C"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                    <Setter Property="Background" Value="#3D3D1C"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding Status}" FontSize="11" FontWeight="Medium">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Draft">
                                                                        <Setter Property="Foreground" Value="#A1A1AA"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Scheduled">
                                                                        <Setter Property="Foreground" Value="#8B5CF6"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Posting">
                                                                        <Setter Property="Foreground" Value="#06B6D4"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Posted">
                                                                        <Setter Property="Foreground" Value="#10B981"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                                        <Setter Property="Foreground" Value="#EF4444"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                        <Setter Property="Foreground" Value="#F59E0B"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Border>
                                            </Grid>

                                            <!-- Content Preview -->
                                            <TextBlock Text="{Binding Content}" TextWrapping="Wrap" MaxHeight="60"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="0,8,0,0" FontSize="13"/>

                                            <!-- Hashtags -->
                                            <TextBlock Foreground="{StaticResource RgbCyanBrush}"
                                                       FontSize="12" Margin="0,8,0,0">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}">
                                                        <Binding Path="FormattedContent" FallbackValue=""/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>

                                            <!-- Meta info -->
                                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                                <TextBlock FontSize="11" Foreground="{StaticResource TextMutedBrush}">
                                                    <Run Text="สร้างเมื่อ: "/>
                                                    <Run Text="{Binding CreatedAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="11" Foreground="{StaticResource TextMutedBrush}" Margin="16,0,0,0"
                                                           Visibility="{Binding ScheduledAt, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                                                    <Run Text="กำหนดโพสต์: "/>
                                                    <Run Text="{Binding ScheduledAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Actions -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">
                                            <Button Command="{Binding DataContext.EditPostCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="แก้ไข" Cursor="Hand" Margin="0,0,8,0">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Width="36" Height="36" CornerRadius="8" Background="#242432">
                                                            <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16"
                                                                                     Foreground="{StaticResource RgbCyanBrush}"
                                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Button Command="{Binding DataContext.DuplicatePostCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="คัดลอก" Cursor="Hand" Margin="0,0,8,0">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Width="36" Height="36" CornerRadius="8" Background="#242432">
                                                            <materialDesign:PackIcon Kind="ContentCopy" Width="16" Height="16"
                                                                                     Foreground="{StaticResource RgbPurpleBrush}"
                                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Button Command="{Binding DataContext.DeletePostCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="ลบ" Cursor="Hand">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Width="36" Height="36" CornerRadius="8" Background="#3D1C1C">
                                                            <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"
                                                                                     Foreground="#EF4444"
                                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty State -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            Visibility="{Binding HasNoPosts, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                    <Border Width="80" Height="80" CornerRadius="20" Background="#242432" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Post" Width="40" Height="40"
                                                 Foreground="{StaticResource TextMutedBrush}"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="ยังไม่มีโพสต์" FontSize="18" FontWeight="Medium"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" Margin="0,20,0,0"/>
                    <TextBlock Text="สร้างโพสต์ใหม่เพื่อเริ่มต้นใช้งาน" FontSize="13"
                               Foreground="{StaticResource TextMutedBrush}"
                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CREATE POST DIALOG -->
        <Border Grid.RowSpan="3"
                Visibility="{Binding ShowCreateDialog, Converter={StaticResource BooleanToVisibilityConverter}}"
                Background="#80000000">
            <Border Width="600" CornerRadius="20" Padding="32" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1A1A2E" Offset="0"/>
                        <GradientStop Color="#16162A" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="50" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock FontSize="22" FontWeight="Bold" HorizontalAlignment="Center">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#10B981" Offset="0"/>
                                <GradientStop Color="#059669" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                        <Run Text="สร้างโพสต์ใหม่"/>
                    </TextBlock>
                    <TextBlock Text="เขียนเนื้อหาสำหรับโพสต์" FontSize="13"
                               Foreground="{StaticResource TextMutedBrush}"
                               HorizontalAlignment="Center" Margin="0,8,0,24"/>

                    <!-- Platform Selection -->
                    <TextBlock Text="Platform" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding Platforms}"
                              SelectedItem="{Binding NewPostPlatform}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Background="#16161E"
                              Foreground="White"
                              Margin="0,0,0,16"/>

                    <!-- Content -->
                    <TextBlock Text="เนื้อหา" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <TextBox Text="{Binding NewPostContent, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="เขียนเนื้อหาโพสต์ที่นี่..."
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="150"
                             VerticalScrollBarVisibility="Auto"
                             Background="#16161E"
                             Foreground="White"
                             Margin="0,0,0,16"/>

                    <!-- Hashtags -->
                    <TextBlock Text="Hashtags (คั่นด้วยช่องว่าง)" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <TextBox Text="{Binding NewPostHashtags, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="#hashtag1 #hashtag2 #hashtag3"
                             Background="#16161E"
                             Foreground="White"
                             Margin="0,0,0,24"/>

                    <!-- Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Command="{Binding CancelCreateCommand}" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="12" Padding="0,14" BorderThickness="1" BorderBrush="#3F3F46" Background="#16161E">
                                        <TextBlock Text="ยกเลิก" Foreground="White"
                                                   FontWeight="Medium" HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="2" Command="{Binding SaveNewPostCommand}" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="12" Padding="0,14">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#10B981" Offset="0"/>
                                                <GradientStop Color="#059669" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <TextBlock Text="บันทึกโพสต์" Foreground="White"
                                                   FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Page>
