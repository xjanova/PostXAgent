<Page x:Class="MyPostXAgent.UI.Views.Pages.CommentManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Comment Manager"
      Background="{DynamicResource MaterialDesign.Brush.Background}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                Padding="20,15" CornerRadius="0,0,8,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="จัดการความคิดเห็น" FontSize="24" FontWeight="Bold"
                               Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"/>
                    <TextBlock Text="ตรวจสอบและตอบกลับความคิดเห็นจากทุกแพลตฟอร์ม" FontSize="13" Opacity="0.7" Margin="0,4,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding MarkAllAsReadCommand}" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckAll" VerticalAlignment="Center"/>
                            <TextBlock Text="อ่านทั้งหมด" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding ExportCommentsCommand}" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Export" VerticalAlignment="Center"/>
                            <TextBlock Text="Export" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignFlatMidBgButton}"
                            Command="{Binding RefreshCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center"/>
                            <TextBlock Text="รีเฟรช" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Cards -->
        <Border Grid.Row="1" Margin="15,15,15,0">
            <UniformGrid Columns="5">
                <Border Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                        CornerRadius="10" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="{Binding TotalComments}" FontSize="28" FontWeight="Bold"
                                   Foreground="{DynamicResource MaterialDesign.Brush.Primary}"/>
                        <TextBlock Text="ทั้งหมด" Opacity="0.6" FontSize="12"/>
                    </StackPanel>
                </Border>
                <Border Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                        CornerRadius="10" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="{Binding PendingCount}" FontSize="28" FontWeight="Bold"
                                   Foreground="#FF9800"/>
                        <TextBlock Text="รอตอบกลับ" Opacity="0.6" FontSize="12"/>
                    </StackPanel>
                </Border>
                <Border Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                        CornerRadius="10" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="{Binding RepliedCount}" FontSize="28" FontWeight="Bold"
                                   Foreground="#4CAF50"/>
                        <TextBlock Text="ตอบแล้ว" Opacity="0.6" FontSize="12"/>
                    </StackPanel>
                </Border>
                <Border Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                        CornerRadius="10" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="{Binding PositiveCount}" FontSize="28" FontWeight="Bold"
                                   Foreground="#2196F3"/>
                        <TextBlock Text="เชิงบวก" Opacity="0.6" FontSize="12"/>
                    </StackPanel>
                </Border>
                <Border Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                        CornerRadius="10" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding NegativeCount}" FontSize="28" FontWeight="Bold"
                                   Foreground="#F44336"/>
                        <TextBlock Text="เชิงลบ" Opacity="0.6" FontSize="12"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="2" Margin="15"
                    Style="{StaticResource MaterialDesignFilledTabControl}"
                    SelectedIndex="{Binding SelectedTabIndex}">

            <!-- All Comments Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CommentMultiple" VerticalAlignment="Center"/>
                        <TextBlock Text="ความคิดเห็นทั้งหมด" Margin="8,0,0,0"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="280"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Filters Panel -->
                    <Border Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                            CornerRadius="12" Padding="15" Margin="0,0,15,0">
                        <StackPanel>
                            <TextBlock Text="ตัวกรอง" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>

                            <!-- Platform Filter -->
                            <TextBlock Text="แพลตฟอร์ม" FontSize="12" Opacity="0.7" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding Platforms}"
                                      SelectedItem="{Binding SelectedPlatform}"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      Margin="0,0,0,15"
                                      materialDesign:HintAssist.Hint="ทั้งหมด"/>

                            <!-- Status Filter -->
                            <TextBlock Text="สถานะ" FontSize="12" Opacity="0.7" Margin="0,0,0,5"/>
                            <StackPanel Margin="0,0,0,15">
                                <RadioButton Content="ทั้งหมด" IsChecked="True" Margin="0,0,0,5"
                                             GroupName="StatusFilter"/>
                                <RadioButton Content="ยังไม่ได้อ่าน" Margin="0,0,0,5"
                                             GroupName="StatusFilter"/>
                                <RadioButton Content="รอตอบกลับ" Margin="0,0,0,5"
                                             GroupName="StatusFilter"/>
                                <RadioButton Content="เชิงบวก" Margin="0,0,0,5"
                                             GroupName="StatusFilter"/>
                                <RadioButton Content="เชิงลบ"
                                             GroupName="StatusFilter"/>
                            </StackPanel>

                            <!-- Search -->
                            <TextBlock Text="ค้นหา" FontSize="12" Opacity="0.7" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="ค้นหาความคิดเห็น...">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                                <Button Grid.Column="1" Style="{StaticResource MaterialDesignIconButton}"
                                        Command="{Binding SearchCommand}" Margin="5,0,0,0">
                                    <materialDesign:PackIcon Kind="Magnify"/>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Comments List -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Comments}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                                            CornerRadius="12" Margin="0,0,0,10" Padding="15">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Header -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Avatar -->
                                                <Border Width="40" Height="40" CornerRadius="20"
                                                        Background="{DynamicResource MaterialDesign.Brush.Primary}">
                                                    <TextBlock Text="{Binding AuthorName[0]}" FontWeight="Bold"
                                                               Foreground="White" FontSize="16"
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Author Info -->
                                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding AuthorName}" FontWeight="SemiBold"/>
                                                        <Border CornerRadius="4" Padding="6,2" Margin="8,0,0,0">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="#9E9E9E"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Sentiment}" Value="Positive">
                                                                            <Setter Property="Background" Value="#4CAF50"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Sentiment}" Value="Negative">
                                                                            <Setter Property="Background" Value="#F44336"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock FontSize="10" Foreground="White">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Text" Value="Neutral"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Sentiment}" Value="Positive">
                                                                                <Setter Property="Text" Value="Positive"/>
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Sentiment}" Value="Negative">
                                                                                <Setter Property="Text" Value="Negative"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Border>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                        <TextBlock Text="{Binding Platform}" Opacity="0.6" FontSize="11"/>
                                                        <TextBlock Text=" • " Opacity="0.4"/>
                                                        <TextBlock Text="{Binding TimeAgo}" Opacity="0.6" FontSize="11"/>
                                                        <TextBlock Text=" • " Opacity="0.4"/>
                                                        <TextBlock Text="{Binding PostTitle}" Opacity="0.5" FontSize="11"
                                                                   MaxWidth="200" TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Unread Indicator -->
                                                <Ellipse Grid.Column="2" Width="10" Height="10" Fill="#2196F3"
                                                         Visibility="{Binding IsRead, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                                         VerticalAlignment="Top"/>
                                            </Grid>

                                            <!-- Comment Text -->
                                            <TextBlock Grid.Row="1" Text="{Binding Text}"
                                                       TextWrapping="Wrap" Margin="50,10,0,10" FontSize="14"/>

                                            <!-- Actions -->
                                            <Grid Grid.Row="2" Margin="50,0,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Like Count -->
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="ThumbUp" Width="16" Height="16" Opacity="0.5"/>
                                                    <TextBlock Text="{Binding LikeCount}" Margin="5,0,0,0"
                                                               Opacity="0.6" FontSize="12"/>
                                                </StackPanel>

                                                <!-- Action Buttons -->
                                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                                            Command="{Binding DataContext.LikeCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                            CommandParameter="{Binding}" ToolTip="ถูกใจ" Width="32" Height="32">
                                                        <materialDesign:PackIcon Kind="ThumbUpOutline" Width="18" Height="18"/>
                                                    </Button>
                                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                                            Command="{Binding DataContext.QuickReplyCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                            CommandParameter="{Binding}" ToolTip="ตอบกลับด่วน" Width="32" Height="32">
                                                        <materialDesign:PackIcon Kind="ReplyOutline" Width="18" Height="18"/>
                                                    </Button>
                                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                                            Command="{Binding DataContext.HideCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                            CommandParameter="{Binding}" ToolTip="ซ่อน" Width="32" Height="32">
                                                        <materialDesign:PackIcon Kind="EyeOff" Width="18" Height="18"/>
                                                    </Button>
                                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                                            Command="{Binding DataContext.MarkAsSpamCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                            CommandParameter="{Binding}" ToolTip="สแปม" Width="32" Height="32">
                                                        <materialDesign:PackIcon Kind="AlertCircle" Width="18" Height="18"/>
                                                    </Button>
                                                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                                            Command="{Binding DataContext.ReplyCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                            CommandParameter="{Binding}" Padding="12,5" Margin="5,0,0,0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="Reply" VerticalAlignment="Center"/>
                                                            <TextBlock Text="ตอบกลับ" Margin="5,0,0,0"/>
                                                        </StackPanel>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding Comments.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                        <materialDesign:PackIcon Kind="CommentOffOutline" Width="60" Height="60"
                                                 Opacity="0.2" HorizontalAlignment="Center"/>
                        <TextBlock Text="ไม่มีความคิดเห็น" FontSize="14" Opacity="0.4"
                                   HorizontalAlignment="Center" Margin="0,15,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Auto Reply Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="RobotOutline" VerticalAlignment="Center"/>
                        <TextBlock Text="ตอบกลับอัตโนมัติ" Margin="8,0,0,0"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="0,15,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <ToggleButton IsChecked="{Binding AutoReplyEnabled}"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"/>
                            <TextBlock Text="เปิดใช้งานตอบกลับอัตโนมัติ" Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Grid.Column="1" Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding AddAutoReplyTemplateCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                                <TextBlock Text="เพิ่ม Template" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Templates List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding AutoReplyTemplates}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                                            CornerRadius="12" Margin="0,0,0,10" Padding="20">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                                    <Border CornerRadius="4" Padding="8,2" Margin="10,0,0,0">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#4CAF50"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                        <Setter Property="Background" Value="#757575"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock FontSize="10" Foreground="White">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text" Value="Active"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                            <Setter Property="Text" Value="Inactive"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock Opacity="0.6" FontSize="12" Margin="0,0,0,5">
                                                    <Run Text="Keywords: "/>
                                                    <Run Text="{Binding Keywords}"/>
                                                </TextBlock>
                                                <Border Background="{DynamicResource MaterialDesign.Brush.Background}"
                                                        CornerRadius="6" Padding="12">
                                                    <TextBlock Text="{Binding ReplyText}" TextWrapping="Wrap"/>
                                                </Border>
                                            </StackPanel>

                                            <Button Grid.Column="1" Style="{StaticResource MaterialDesignIconButton}"
                                                    Command="{Binding DataContext.DeleteTemplateCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}" VerticalAlignment="Top">
                                                <materialDesign:PackIcon Kind="Delete" Foreground="#F44336"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Reply Dialog -->
        <materialDesign:DialogHost Grid.RowSpan="3"
                                   IsOpen="{Binding ShowReplyDialog}"
                                   CloseOnClickAway="True">
            <materialDesign:DialogHost.DialogContent>
                <Border Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                        CornerRadius="12" Padding="25" MinWidth="500">
                    <StackPanel>
                        <TextBlock Text="ตอบกลับความคิดเห็น" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

                        <!-- Original Comment -->
                        <Border Background="{DynamicResource MaterialDesign.Brush.Background}"
                                CornerRadius="8" Padding="12" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedComment.AuthorName}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding SelectedComment.Text}" TextWrapping="Wrap"
                                           Opacity="0.8" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Quick Templates -->
                        <TextBlock Text="Templates ด่วน" FontSize="12" Opacity="0.7" Margin="0,0,0,8"/>
                        <WrapPanel Margin="0,0,0,15">
                            <ItemsControl ItemsSource="{Binding AutoReplyTemplates}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}"
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Command="{Binding DataContext.UseTemplateCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                CommandParameter="{Binding}"
                                                Margin="0,0,8,8" Padding="10,5"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </WrapPanel>

                        <!-- Reply Text -->
                        <TextBlock Text="ข้อความตอบกลับ" FontSize="12" Opacity="0.7" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ReplyText, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 AcceptsReturn="True" TextWrapping="Wrap" Height="100"
                                 Margin="0,0,0,20"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="ยกเลิก" Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding CancelReplyCommand}" Margin="0,0,10,0"/>
                            <Button Content="ส่งตอบกลับ" Style="{StaticResource MaterialDesignRaisedButton}"
                                    Command="{Binding SendReplyCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>

        <!-- Add Template Dialog -->
        <materialDesign:DialogHost Grid.RowSpan="3"
                                   IsOpen="{Binding ShowAutoReplyDialog}"
                                   CloseOnClickAway="True">
            <materialDesign:DialogHost.DialogContent>
                <Border Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                        CornerRadius="12" Padding="25" MinWidth="450">
                    <StackPanel>
                        <TextBlock Text="เพิ่ม Auto Reply Template" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                        <TextBlock Text="ชื่อ Template" FontSize="12" Opacity="0.7" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewTemplateName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="เช่น: ขอบคุณลูกค้า"
                                 Margin="0,0,0,15"/>

                        <TextBlock Text="Keywords (คั่นด้วย ,)" FontSize="12" Opacity="0.7" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewTemplateKeywords, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="ดี, ชอบ, สวย, เยี่ยม"
                                 Margin="0,0,0,15"/>

                        <TextBlock Text="ข้อความตอบกลับ" FontSize="12" Opacity="0.7" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding NewTemplateReply, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 AcceptsReturn="True" TextWrapping="Wrap" Height="80"
                                 Margin="0,0,0,20"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="ยกเลิก" Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding CancelAutoReplyTemplateCommand}" Margin="0,0,10,0"/>
                            <Button Content="บันทึก" Style="{StaticResource MaterialDesignRaisedButton}"
                                    Command="{Binding SaveAutoReplyTemplateCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             IsIndeterminate="True" Width="50" Height="50"/>
                <TextBlock Text="กำลังโหลด..." Foreground="White" Margin="0,15,0,0" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
