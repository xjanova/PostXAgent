<Page x:Class="MyPostXAgent.UI.Views.Pages.SchedulerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Title="Scheduler"
      Background="Transparent">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock FontSize="28" FontWeight="Bold">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FFFFFF" Offset="0"/>
                            <GradientStop Color="#A1A1AA" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                    <Run Text="Scheduler"/>
                </TextBlock>
                <TextBlock Text="ตั้งเวลาโพสต์อัตโนมัติ" FontSize="14" Foreground="{StaticResource TextMutedBrush}" Margin="0,4,0,0"/>
            </StackPanel>

            <Button Grid.Column="1" Command="{Binding RefreshCommand}" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12" Padding="16,10" BorderThickness="1" BorderBrush="#3F3F46">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Refresh" Width="18" Height="18" Foreground="{StaticResource RgbCyanBrush}"/>
                                <TextBlock Text="รีเฟรช" Foreground="{StaticResource TextSecondaryBrush}" Margin="6,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL - Calendar & Drafts -->
            <StackPanel>
                <!-- Calendar Card -->
                <Border CornerRadius="16" Padding="20" Background="#1A1A2E" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="เลือกวันที่" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                        <Calendar SelectedDate="{Binding SelectedDate}"
                                  DisplayDateStart="{x:Static sys:DateTime.Today}"
                                  xmlns:sys="clr-namespace:System;assembly=mscorlib"
                                  Background="Transparent"
                                  Foreground="White"
                                  BorderThickness="0"/>
                    </StackPanel>
                </Border>

                <!-- Draft Posts -->
                <Border CornerRadius="16" Padding="20" Background="#1A1A2E">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="โพสต์ Draft" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <Border Grid.Column="1" CornerRadius="8" Padding="8,2" Background="#2D2D3D">
                                <TextBlock Text="{Binding DraftPosts.Count}" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                            </Border>
                        </Grid>

                        <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding DraftPosts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10" Padding="12" Margin="0,0,0,8" Background="#16161E"
                                                Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel>
                                                    <TextBlock Text="{Binding Platform}" FontWeight="Medium" FontSize="12"
                                                               Foreground="{StaticResource RgbCyanBrush}"/>
                                                    <TextBlock Text="{Binding Content}" TextTrimming="CharacterEllipsis" MaxWidth="180"
                                                               Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" Margin="0,4,0,0"/>
                                                </StackPanel>

                                                <Button Grid.Column="1"
                                                        Command="{Binding DataContext.SchedulePostCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip="ตั้งเวลา" Cursor="Hand">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Width="28" Height="28" CornerRadius="6" Background="#242432">
                                                                <materialDesign:PackIcon Kind="ClockPlus" Width="14" Height="14"
                                                                                         Foreground="{StaticResource RgbPurpleBrush}"
                                                                                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <TextBlock Text="ไม่มีโพสต์ Draft" FontSize="12" Foreground="{StaticResource TextMutedBrush}"
                                   HorizontalAlignment="Center" Margin="0,12,0,0"
                                   Visibility="{Binding DraftPosts.Count, Converter={StaticResource InverseBoolConverter}, FallbackValue=Collapsed}"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- RIGHT PANEL - Scheduled Posts -->
            <Border Grid.Column="2" CornerRadius="16" Background="#1A1A2E">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Margin="24,20,24,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="48" Height="48" CornerRadius="12">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#8B5CF6" Offset="0"/>
                                    <GradientStop Color="#7C3AED" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <materialDesign:PackIcon Kind="CalendarClock" Width="24" Height="24" Foreground="White"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding SelectedDate, StringFormat='{}{0:dddd d MMMM yyyy}'}"
                                       FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock FontSize="12" Foreground="{StaticResource TextMutedBrush}" Margin="0,4,0,0">
                                <Run Text="{Binding ScheduledPosts.Count, Mode=OneWay}"/>
                                <Run Text="โพสต์"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>

                    <!-- Scheduled Posts List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="24,0,24,24">
                        <ItemsControl ItemsSource="{Binding ScheduledPosts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" Margin="0,0,0,12" Padding="16" Background="#16161E">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Time -->
                                            <Border Width="64" CornerRadius="10" Background="#242432" Padding="8">
                                                <StackPanel HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding ScheduledAt, StringFormat='{}{0:HH:mm}'}"
                                                               FontSize="20" FontWeight="Bold" Foreground="{StaticResource RgbCyanBrush}"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Text="น." FontSize="11" Foreground="{StaticResource TextMutedBrush}"
                                                               HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Content -->
                                            <StackPanel Grid.Column="1" Margin="16,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <Border CornerRadius="6" Padding="8,3" Background="#2D1F4E" Margin="0,0,8,0">
                                                        <TextBlock Text="{Binding Platform}" FontSize="10" FontWeight="Medium"
                                                                   Foreground="{StaticResource RgbPurpleBrush}"/>
                                                    </Border>
                                                    <Border CornerRadius="6" Padding="8,3" Background="#1C3D3D">
                                                        <TextBlock Text="Scheduled" FontSize="10" FontWeight="Medium"
                                                                   Foreground="{StaticResource RgbGreenBrush}"/>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Content}" TextWrapping="Wrap" MaxHeight="40"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           FontSize="12" Margin="0,8,0,0"/>
                                            </StackPanel>

                                            <!-- Actions -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Button Command="{Binding DataContext.PostNowCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip="โพสต์เดี๋ยวนี้" Cursor="Hand" Margin="0,0,8,0">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Width="32" Height="32" CornerRadius="8" Background="#1C3D1C">
                                                                <materialDesign:PackIcon Kind="Send" Width="14" Height="14"
                                                                                         Foreground="#10B981"
                                                                                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                                <Button Command="{Binding DataContext.UnschedulePostCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip="ยกเลิก" Cursor="Hand">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Width="32" Height="32" CornerRadius="8" Background="#3D1C1C">
                                                                <materialDesign:PackIcon Kind="Close" Width="14" Height="14"
                                                                                         Foreground="#EF4444"
                                                                                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding ScheduledPosts.Count, Converter={StaticResource InverseBoolConverter}, FallbackValue=Collapsed}">
                        <Border Width="64" Height="64" CornerRadius="16" Background="#242432" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="CalendarBlank" Width="32" Height="32"
                                                     Foreground="{StaticResource TextMutedBrush}"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="ไม่มีโพสต์ในวันนี้" FontSize="16" FontWeight="Medium"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center" Margin="0,16,0,0"/>
                        <TextBlock Text="เลือกโพสต์จาก Draft ด้านซ้ายเพื่อตั้งเวลา" FontSize="12"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- SCHEDULE DIALOG -->
        <Border Grid.RowSpan="2"
                Visibility="{Binding ShowScheduleDialog, Converter={StaticResource BooleanToVisibilityConverter}}"
                Background="#80000000">
            <Border Width="400" CornerRadius="20" Padding="32" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1A1A2E" Offset="0"/>
                        <GradientStop Color="#16162A" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="50" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock FontSize="22" FontWeight="Bold" HorizontalAlignment="Center">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#8B5CF6" Offset="0"/>
                                <GradientStop Color="#EC4899" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                        <Run Text="ตั้งเวลาโพสต์"/>
                    </TextBlock>

                    <TextBlock Text="{Binding PostToSchedule.Content}" TextTrimming="CharacterEllipsis"
                               Foreground="{StaticResource TextMutedBrush}" FontSize="12"
                               HorizontalAlignment="Center" Margin="0,8,0,24"/>

                    <!-- Date -->
                    <TextBlock Text="วันที่" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <DatePicker SelectedDate="{Binding ScheduleDate}"
                                DisplayDateStart="{x:Static sys:DateTime.Today}"
                                xmlns:sys="clr-namespace:System;assembly=mscorlib"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                Background="#16161E"
                                Foreground="White"
                                Margin="0,0,0,16"/>

                    <!-- Time -->
                    <TextBlock Text="เวลา" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox SelectedItem="{Binding ScheduleHour}"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Background="#16161E" Foreground="White">
                            <ComboBox.ItemsSource>
                                <x:Array Type="sys:Int32" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                    <sys:Int32>0</sys:Int32><sys:Int32>1</sys:Int32><sys:Int32>2</sys:Int32>
                                    <sys:Int32>3</sys:Int32><sys:Int32>4</sys:Int32><sys:Int32>5</sys:Int32>
                                    <sys:Int32>6</sys:Int32><sys:Int32>7</sys:Int32><sys:Int32>8</sys:Int32>
                                    <sys:Int32>9</sys:Int32><sys:Int32>10</sys:Int32><sys:Int32>11</sys:Int32>
                                    <sys:Int32>12</sys:Int32><sys:Int32>13</sys:Int32><sys:Int32>14</sys:Int32>
                                    <sys:Int32>15</sys:Int32><sys:Int32>16</sys:Int32><sys:Int32>17</sys:Int32>
                                    <sys:Int32>18</sys:Int32><sys:Int32>19</sys:Int32><sys:Int32>20</sys:Int32>
                                    <sys:Int32>21</sys:Int32><sys:Int32>22</sys:Int32><sys:Int32>23</sys:Int32>
                                </x:Array>
                            </ComboBox.ItemsSource>
                        </ComboBox>
                        <TextBlock Grid.Column="1" Text=":" FontSize="20" FontWeight="Bold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center" Margin="8,0"/>
                        <ComboBox Grid.Column="2" SelectedItem="{Binding ScheduleMinute}"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Background="#16161E" Foreground="White">
                            <ComboBox.ItemsSource>
                                <x:Array Type="sys:Int32" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                    <sys:Int32>0</sys:Int32><sys:Int32>15</sys:Int32>
                                    <sys:Int32>30</sys:Int32><sys:Int32>45</sys:Int32>
                                </x:Array>
                            </ComboBox.ItemsSource>
                        </ComboBox>
                    </Grid>

                    <!-- Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Command="{Binding CancelScheduleCommand}" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="12" Padding="0,14" BorderThickness="1" BorderBrush="#3F3F46" Background="#16161E">
                                        <TextBlock Text="ยกเลิก" Foreground="White"
                                                   FontWeight="Medium" HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="2" Command="{Binding ConfirmScheduleCommand}" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="12" Padding="0,14">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#8B5CF6" Offset="0"/>
                                                <GradientStop Color="#EC4899" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <TextBlock Text="ตั้งเวลา" Foreground="White"
                                                   FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Page>
