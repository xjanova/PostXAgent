<Page x:Class="MyPostXAgent.UI.Views.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Title="Settings"
      Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock FontSize="28" FontWeight="Bold">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#FFFFFF" Offset="0"/>
                                <GradientStop Color="#A1A1AA" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                        <Run Text="Settings"/>
                    </TextBlock>
                    <TextBlock Text="ตั้งค่า API Keys และการเชื่อมต่อ" FontSize="14" Foreground="{StaticResource TextMutedBrush}" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Command="{Binding ResetCommand}" Cursor="Hand" Margin="0,0,12,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="12" Padding="16,10" BorderThickness="1" BorderBrush="#3F3F46" Background="#16161E">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Restore" Width="18" Height="18" Foreground="White"/>
                                        <TextBlock Text="รีเซ็ต" Foreground="White" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Height="44" Padding="20,0" Cursor="Hand" Command="{Binding SaveCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" CornerRadius="22" Padding="{TemplateBinding Padding}">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#8B5CF6" Offset="0"/>
                                            <GradientStop Color="#EC4899" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect Color="#8B5CF6" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                                    </Border.Effect>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="ContentSave" Width="20" Height="20" Foreground="White" VerticalAlignment="Center"/>
                                        <TextBlock Text="บันทึก" Foreground="White" FontWeight="SemiBold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- SETTINGS SECTIONS -->
            <StackPanel Grid.Row="1">
                <!-- AI Content Generation -->
                <Border CornerRadius="16" Padding="24" Margin="0,0,0,16" Background="#1A1A2E">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="48" Height="48" CornerRadius="12">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#8B5CF6" Offset="0"/>
                                        <GradientStop Color="#7C3AED" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <materialDesign:PackIcon Kind="Robot" Width="24" Height="24" Foreground="White"
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="AI Content Generation" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="API Keys สำหรับสร้างเนื้อหา AI" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                            </StackPanel>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel>
                                <TextBlock Text="OpenAI API Key" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding OpenAiApiKey, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="sk-..."
                                         Background="#16161E" Foreground="White"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Anthropic API Key (Claude)" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding AnthropicApiKey, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="sk-ant-..."
                                         Background="#16161E" Foreground="White"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Margin="0,16,0,0">
                                <TextBlock Text="Google API Key (Gemini)" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding GoogleApiKey, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="AIza..."
                                         Background="#16161E" Foreground="White"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,16,0,0">
                                <TextBlock Text="Ollama Base URL (Local)" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding OllamaBaseUrl, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="http://localhost:11434"
                                         Background="#16161E" Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Image Generation -->
                <Border CornerRadius="16" Padding="24" Margin="0,0,0,16" Background="#1A1A2E">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="48" Height="48" CornerRadius="12">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#EC4899" Offset="0"/>
                                        <GradientStop Color="#DB2777" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <materialDesign:PackIcon Kind="Image" Width="24" Height="24" Foreground="White"
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Image Generation" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="API Keys สำหรับสร้างรูปภาพ AI" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                            </StackPanel>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="Leonardo.ai API Key" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding LeonardoApiKey, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="Leonardo API Key"
                                         Background="#16161E" Foreground="White"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Stable Diffusion URL (Local)" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding StableDiffusionUrl, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="http://localhost:7860"
                                         Background="#16161E" Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Video Generation -->
                <Border CornerRadius="16" Padding="24" Margin="0,0,0,16" Background="#1A1A2E">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="48" Height="48" CornerRadius="12">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#F97316" Offset="0"/>
                                        <GradientStop Color="#EA580C" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <materialDesign:PackIcon Kind="Video" Width="24" Height="24" Foreground="White"
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Video Generation" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="API Keys สำหรับสร้างวิดีโอ AI" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                            </StackPanel>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="Runway API Key" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding RunwayApiKey, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="Runway API Key"
                                         Background="#16161E" Foreground="White"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Pika Labs API Key" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding PikaLabsApiKey, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="Pika Labs API Key"
                                         Background="#16161E" Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Music Generation -->
                <Border CornerRadius="16" Padding="24" Margin="0,0,0,16" Background="#1A1A2E">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="48" Height="48" CornerRadius="12">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#10B981" Offset="0"/>
                                        <GradientStop Color="#059669" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <materialDesign:PackIcon Kind="Music" Width="24" Height="24" Foreground="White"
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Music Generation" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="API Keys สำหรับสร้างเพลง AI" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel>
                            <TextBlock Text="Suno AI API Key" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding SunoApiKey, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Suno API Key"
                                     Background="#16161E" Foreground="White" Width="400" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Social Media APIs -->
                <Border CornerRadius="16" Padding="24" Margin="0,0,0,16" Background="#1A1A2E">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Width="48" Height="48" CornerRadius="12">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#3B82F6" Offset="0"/>
                                        <GradientStop Color="#1D4ED8" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <materialDesign:PackIcon Kind="ShareVariant" Width="24" Height="24" Foreground="White"
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Social Media APIs" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="API Keys สำหรับเชื่อมต่อ Social Media" FontSize="12" Foreground="{StaticResource TextMutedBrush}"/>
                            </StackPanel>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel>
                                <TextBlock Text="Facebook App ID" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding FacebookAppId, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="Facebook App ID"
                                         Background="#16161E" Foreground="White"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Facebook App Secret" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding FacebookAppSecret, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="Facebook App Secret"
                                         Background="#16161E" Foreground="White"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Margin="0,16,0,0">
                                <TextBlock Text="Twitter API Key" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding TwitterApiKey, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="Twitter API Key"
                                         Background="#16161E" Foreground="White"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,16,0,0">
                                <TextBlock Text="Twitter API Secret" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding TwitterApiSecret, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="Twitter API Secret"
                                         Background="#16161E" Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Info Box -->
                <Border CornerRadius="12" Padding="20" Background="#1C3D3D">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Kind="InformationOutline" Width="24" Height="24" Foreground="#10B981" VerticalAlignment="Top"/>
                        <StackPanel Grid.Column="1" Margin="12,0,0,0">
                            <TextBlock Text="คำแนะนำ" FontWeight="SemiBold" Foreground="#10B981"/>
                            <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,8,0,0" FontSize="13">
                                <Run Text="• API Keys จะถูกเก็บอย่างปลอดภัยในเครื่องของคุณเท่านั้น"/>
                                <LineBreak/>
                                <Run Text="• หากใช้ Ollama หรือ Stable Diffusion แบบ Local ไม่จำเป็นต้องใส่ API Key"/>
                                <LineBreak/>
                                <Run Text="• สามารถใช้งานได้ทันทีหลังบันทึก ไม่ต้อง Restart แอพ"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
