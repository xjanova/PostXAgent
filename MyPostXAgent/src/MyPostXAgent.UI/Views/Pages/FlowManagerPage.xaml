<Page x:Class="MyPostXAgent.UI.Views.Pages.FlowManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Flow Manager"
      Background="{DynamicResource MaterialDesign.Brush.Background}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                Padding="20,15" CornerRadius="0,0,8,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="จัดการ Workflow" FontSize="24" FontWeight="Bold"
                               Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"/>
                    <TextBlock Text="สร้างและจัดการ Automation Workflows" FontSize="13" Opacity="0.7" Margin="0,4,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding ImportFlowCommand}" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Import" VerticalAlignment="Center"/>
                            <TextBlock Text="Import" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignFlatMidBgButton}"
                            Command="{Binding NewWorkflowCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                            <TextBlock Text="สร้าง Workflow" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="15"
                    Style="{StaticResource MaterialDesignFilledTabControl}"
                    SelectedIndex="{Binding SelectedTabIndex}">

            <!-- Workflows Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Sitemap" VerticalAlignment="Center"/>
                        <TextBlock Text="Workflows" Margin="8,0,0,0"/>
                        <Border Background="{DynamicResource MaterialDesign.Brush.Primary}"
                                CornerRadius="10" Padding="8,2" Margin="8,0,0,0">
                            <TextBlock Text="{Binding Workflows.Count}" FontSize="11" Foreground="White"/>
                        </Border>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <!-- Workflow List -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,15,0">
                        <ItemsControl ItemsSource="{Binding Workflows}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                                            CornerRadius="12" Margin="0,0,0,12" Padding="20">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Icon/Status -->
                                            <Border Width="50" Height="50" CornerRadius="10">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#4CAF50"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                <Setter Property="Background" Value="#9E9E9E"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <materialDesign:PackIcon Kind="Sitemap" Width="28" Height="28"
                                                                          Foreground="White" HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Info -->
                                            <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                                    <Border CornerRadius="4" Padding="8,2" Margin="10,0,0,0"
                                                            VerticalAlignment="Center">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#4CAF50"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                        <Setter Property="Background" Value="#757575"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock FontSize="10" Foreground="White">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text" Value="Active"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                            <Setter Property="Text" Value="Inactive"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Description}" Opacity="0.6" FontSize="12" Margin="0,5,0,0"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                    <Border Background="{DynamicResource MaterialDesign.Brush.Background}"
                                                            CornerRadius="4" Padding="8,3" Margin="0,0,8,0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="Lightning" Width="14" Height="14" Opacity="0.6"/>
                                                            <TextBlock Text="{Binding TriggerInfo}" FontSize="11" Margin="4,0,0,0"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <Border Background="{DynamicResource MaterialDesign.Brush.Background}"
                                                            CornerRadius="4" Padding="8,3" Margin="0,0,8,0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="StepForward" Width="14" Height="14" Opacity="0.6"/>
                                                            <TextBlock FontSize="11" Margin="4,0,0,0">
                                                                <Run Text="{Binding StepCount}"/>
                                                                <Run Text=" steps"/>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </Border>
                                                    <Border Background="{DynamicResource MaterialDesign.Brush.Background}"
                                                            CornerRadius="4" Padding="8,3">
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="Play" Width="14" Height="14" Opacity="0.6"/>
                                                            <TextBlock FontSize="11" Margin="4,0,0,0">
                                                                <Run Text="{Binding RunCount}"/>
                                                                <Run Text=" runs"/>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </Border>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Actions -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                                        Command="{Binding DataContext.ToggleActiveCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}" ToolTip="เปิด/ปิด" Width="36" Height="36">
                                                    <materialDesign:PackIcon Width="20" Height="20">
                                                        <materialDesign:PackIcon.Style>
                                                            <Style TargetType="materialDesign:PackIcon">
                                                                <Setter Property="Kind" Value="ToggleSwitch"/>
                                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                        <Setter Property="Kind" Value="ToggleSwitchOff"/>
                                                                        <Setter Property="Foreground" Value="#757575"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </materialDesign:PackIcon.Style>
                                                    </materialDesign:PackIcon>
                                                </Button>
                                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                                        Command="{Binding DataContext.EditWorkflowCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}" ToolTip="แก้ไข" Width="36" Height="36">
                                                    <materialDesign:PackIcon Kind="Pencil" Width="20" Height="20"/>
                                                </Button>
                                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                                        Command="{Binding DataContext.DuplicateWorkflowCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}" ToolTip="Duplicate" Width="36" Height="36">
                                                    <materialDesign:PackIcon Kind="ContentDuplicate" Width="20" Height="20"/>
                                                </Button>
                                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                                        Command="{Binding DataContext.ExportFlowCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}" ToolTip="Export" Width="36" Height="36">
                                                    <materialDesign:PackIcon Kind="Export" Width="20" Height="20"/>
                                                </Button>
                                                <Button Style="{StaticResource MaterialDesignIconButton}"
                                                        Command="{Binding DataContext.DeleteWorkflowCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}" ToolTip="ลบ" Width="36" Height="36">
                                                    <materialDesign:PackIcon Kind="Delete" Width="20" Height="20" Foreground="#F44336"/>
                                                </Button>
                                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                                        Command="{Binding DataContext.RunWorkflowCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                        CommandParameter="{Binding}" Margin="10,0,0,0" Padding="12,5">
                                                    <StackPanel Orientation="Horizontal">
                                                        <materialDesign:PackIcon Kind="Play" VerticalAlignment="Center"/>
                                                        <TextBlock Text="Run" Margin="5,0,0,0"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Right Panel - Templates -->
                    <Border Grid.Column="1" Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                            CornerRadius="12" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Templates" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                            <ItemsControl ItemsSource="{Binding Templates}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource MaterialDesign.Brush.Background}"
                                                CornerRadius="8" Margin="0,0,0,10" Padding="12" Cursor="Hand">
                                            <Border.InputBindings>
                                                <MouseBinding MouseAction="LeftClick"
                                                              Command="{Binding DataContext.UseTemplateCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                              CommandParameter="{Binding}"/>
                                            </Border.InputBindings>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Background="{DynamicResource MaterialDesign.Brush.Primary}"
                                                        CornerRadius="6" Width="40" Height="40">
                                                    <materialDesign:PackIcon Kind="{Binding Icon}" Width="22" Height="22"
                                                                              Foreground="White" HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                </Border>
                                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Description}" Opacity="0.6" FontSize="11"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Opacity="0.5" FontSize="10" Margin="0,4,0,0">
                                                        <Run Text="{Binding StepCount}"/>
                                                        <Run Text=" steps"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Running Status -->
                            <Border Background="{DynamicResource MaterialDesign.Brush.Background}"
                                    CornerRadius="8" Padding="15" Margin="0,20,0,0"
                                    Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="กำลังรัน Workflow" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                    <TextBlock Text="{Binding RunStatus}" FontSize="12" Margin="0,0,0,8"/>
                                    <ProgressBar Value="{Binding RunProgress}" Minimum="0" Maximum="100" Height="6"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Empty State -->
                    <StackPanel Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding Workflows.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                        <materialDesign:PackIcon Kind="SitemapOutline" Width="80" Height="80"
                                                 Opacity="0.2" HorizontalAlignment="Center"/>
                        <TextBlock Text="ยังไม่มี Workflow" FontSize="18" Opacity="0.4"
                                   HorizontalAlignment="Center" Margin="0,15,0,5"/>
                        <TextBlock Text="สร้าง Workflow ใหม่หรือใช้ Template" FontSize="12" Opacity="0.3"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- History Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="History" VerticalAlignment="Center"/>
                        <TextBlock Text="ประวัติการรัน" Margin="8,0,0,0"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="0,15,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding RunHistory}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                                            CornerRadius="10" Margin="0,0,0,10" Padding="15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Status Icon -->
                                            <Border Width="40" Height="40" CornerRadius="8" Background="#4CAF50">
                                                <materialDesign:PackIcon Kind="Check" Width="22" Height="22"
                                                                          Foreground="White" HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Info -->
                                            <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding WorkflowName}" FontWeight="SemiBold"/>
                                                <TextBlock Opacity="0.6" FontSize="12">
                                                    <Run Text="{Binding StartTime, StringFormat=dd MMM yyyy HH:mm}"/>
                                                    <Run Text=" • "/>
                                                    <Run Text="{Binding Duration, StringFormat=mm\\:ss}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- Steps -->
                                            <Border Grid.Column="2" Background="{DynamicResource MaterialDesign.Brush.Background}"
                                                    CornerRadius="6" Padding="10,5">
                                                <TextBlock FontSize="12">
                                                    <Run Text="{Binding StepsCompleted}"/>
                                                    <Run Text=" steps completed"/>
                                                </TextBlock>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding RunHistory.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                        <materialDesign:PackIcon Kind="HistoryOff" Width="60" Height="60"
                                                 Opacity="0.2" HorizontalAlignment="Center"/>
                        <TextBlock Text="ยังไม่มีประวัติการรัน" FontSize="14" Opacity="0.4"
                                   HorizontalAlignment="Center" Margin="0,15,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- New Workflow Dialog -->
        <materialDesign:DialogHost Grid.RowSpan="2"
                                   IsOpen="{Binding ShowNewWorkflowDialog}"
                                   CloseOnClickAway="True">
            <materialDesign:DialogHost.DialogContent>
                <Border Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                        CornerRadius="12" Padding="25" MinWidth="400">
                    <StackPanel>
                        <TextBlock Text="สร้าง Workflow ใหม่" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                        <TextBlock Text="ชื่อ Workflow" FontSize="12" Opacity="0.7" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding WorkflowName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="เช่น: Daily Post Automation"
                                 Margin="0,0,0,15"/>

                        <TextBlock Text="คำอธิบาย" FontSize="12" Opacity="0.7" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding WorkflowDescription, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 AcceptsReturn="True" TextWrapping="Wrap" Height="80"
                                 materialDesign:HintAssist.Hint="อธิบายว่า Workflow นี้ทำอะไร"
                                 Margin="0,0,0,20"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="ยกเลิก" Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding CancelNewWorkflowCommand}" Margin="0,0,10,0"/>
                            <Button Content="สร้าง" Style="{StaticResource MaterialDesignRaisedButton}"
                                    Command="{Binding ConfirmNewWorkflowCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="2" Background="#80000000"
                Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             IsIndeterminate="True" Width="50" Height="50"/>
                <TextBlock Text="กำลังโหลด..." Foreground="White" Margin="0,15,0,0" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
