<Page x:Class="MyPostXAgent.UI.Views.Pages.AccountsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d"
      Title="Accounts"
      Background="Transparent">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock FontSize="28" FontWeight="Bold">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FFFFFF" Offset="0"/>
                            <GradientStop Color="#A1A1AA" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                    <Run Text="Social Accounts"/>
                </TextBlock>
                <TextBlock Text="จัดการบัญชี Social Media ทั้งหมด" FontSize="14" Foreground="{StaticResource TextMutedBrush}" Margin="0,4,0,0"/>
            </StackPanel>

            <Button Grid.Column="1" Height="44" Padding="20,0" Cursor="Hand"
                    Command="{Binding AddAccountCommand}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="22" Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#3B82F6" Offset="0"/>
                                    <GradientStop Color="#8B5CF6" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#3B82F6" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="AccountPlus" Width="20" Height="20" Foreground="White" VerticalAlignment="Center"/>
                                <TextBlock Text="เพิ่มบัญชีใหม่" Foreground="White" FontWeight="SemiBold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <!-- FILTERS -->
        <Border Grid.Row="1" CornerRadius="12" Padding="16" Margin="0,0,0,16" Background="#1A1A2E">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="กรองตาม Platform:" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center" Margin="0,0,12,0"/>

                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding Platforms}"
                          SelectedItem="{Binding SelectedPlatformFilter}"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Background="#16161E"
                          Foreground="White">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="White"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button Grid.Column="3" Command="{Binding RefreshCommand}" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="8" Padding="12,8" Background="#242432">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Refresh" Width="18" Height="18" Foreground="{StaticResource RgbCyanBrush}"/>
                                    <TextBlock Text="รีเฟรช" Foreground="{StaticResource TextSecondaryBrush}" Margin="6,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- ACCOUNTS LIST -->
        <Border Grid.Row="2" CornerRadius="16" Background="#1A1A2E">
            <Grid>
                <!-- Loading Indicator -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" Width="100" Height="4"
                                 Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                    <TextBlock Text="กำลังโหลด..." Foreground="{StaticResource TextMutedBrush}"
                               Margin="0,12,0,0" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Accounts DataGrid -->
                <DataGrid ItemsSource="{Binding Accounts}"
                          SelectedItem="{Binding SelectedAccount}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          Background="Transparent"
                          BorderThickness="0"
                          RowBackground="Transparent"
                          AlternatingRowBackground="#1E1E2E"
                          Visibility="{Binding IsBusy, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                          Margin="16">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#16161E"/>
                            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="16,12"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2D1F4E"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1E1E2E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="16,12"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <!-- Platform -->
                        <DataGridTemplateColumn Header="PLATFORM" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="32" Height="32" CornerRadius="8">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Platform}" Value="Facebook">
                                                            <Setter Property="Background" Value="#1877F2"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Platform}" Value="Instagram">
                                                            <Setter Property="Background">
                                                                <Setter.Value>
                                                                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                                                                        <GradientStop Color="#833AB4" Offset="0"/>
                                                                        <GradientStop Color="#E1306C" Offset="0.5"/>
                                                                        <GradientStop Color="#F56040" Offset="1"/>
                                                                    </LinearGradientBrush>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Platform}" Value="TikTok">
                                                            <Setter Property="Background" Value="#000000"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Platform}" Value="Twitter">
                                                            <Setter Property="Background" Value="#000000"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Platform}" Value="YouTube">
                                                            <Setter Property="Background" Value="#FF0000"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Platform}" Value="Line">
                                                            <Setter Property="Background" Value="#00B900"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Platform}" Value="LinkedIn">
                                                            <Setter Property="Background" Value="#0A66C2"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Platform}" Value="Threads">
                                                            <Setter Property="Background" Value="#000000"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Platform}" Value="Pinterest">
                                                            <Setter Property="Background" Value="#BD081C"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <materialDesign:PackIcon Width="18" Height="18" Foreground="White"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <materialDesign:PackIcon.Style>
                                                    <Style TargetType="materialDesign:PackIcon">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Platform}" Value="Facebook">
                                                                <Setter Property="Kind" Value="Facebook"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Platform}" Value="Instagram">
                                                                <Setter Property="Kind" Value="Instagram"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Platform}" Value="TikTok">
                                                                <Setter Property="Kind" Value="MusicNote"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Platform}" Value="Twitter">
                                                                <Setter Property="Kind" Value="Twitter"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Platform}" Value="YouTube">
                                                                <Setter Property="Kind" Value="Youtube"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Platform}" Value="Line">
                                                                <Setter Property="Kind" Value="Chat"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Platform}" Value="LinkedIn">
                                                                <Setter Property="Kind" Value="Linkedin"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Platform}" Value="Threads">
                                                                <Setter Property="Kind" Value="At"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Platform}" Value="Pinterest">
                                                                <Setter Property="Kind" Value="Pinterest"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </materialDesign:PackIcon.Style>
                                            </materialDesign:PackIcon>
                                        </Border>
                                        <TextBlock Text="{Binding Platform}" Foreground="{StaticResource TextPrimaryBrush}"
                                                   VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Medium"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Account Name -->
                        <DataGridTemplateColumn Header="ACCOUNT" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding AccountName}" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding DisplayName}" FontSize="11" Foreground="{StaticResource TextMutedBrush}" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Status -->
                        <DataGridTemplateColumn Header="STATUS" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" Padding="10,4" HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HealthStatus}" Value="Healthy">
                                                        <Setter Property="Background" Value="#1C3D1C"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding HealthStatus}" Value="Warning">
                                                        <Setter Property="Background" Value="#3D3D1C"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding HealthStatus}" Value="Cooldown">
                                                        <Setter Property="Background" Value="#2D1F4E"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding HealthStatus}" Value="RateLimited">
                                                        <Setter Property="Background" Value="#3D2D1C"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding HealthStatus}" Value="Blocked">
                                                        <Setter Property="Background" Value="#3D1C1C"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding HealthStatus}" Value="Banned">
                                                        <Setter Property="Background" Value="#3D1C1C"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding HealthStatus}" FontSize="11" FontWeight="Medium">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HealthStatus}" Value="Healthy">
                                                            <Setter Property="Foreground" Value="#10B981"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding HealthStatus}" Value="Warning">
                                                            <Setter Property="Foreground" Value="#F59E0B"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding HealthStatus}" Value="Cooldown">
                                                            <Setter Property="Foreground" Value="#8B5CF6"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding HealthStatus}" Value="RateLimited">
                                                            <Setter Property="Foreground" Value="#F97316"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding HealthStatus}" Value="Blocked">
                                                            <Setter Property="Foreground" Value="#EF4444"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding HealthStatus}" Value="Banned">
                                                            <Setter Property="Foreground" Value="#EF4444"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Posts Today -->
                        <DataGridTemplateColumn Header="TODAY" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock FontSize="14" Foreground="{StaticResource TextPrimaryBrush}">
                                            <Run Text="{Binding DailyPostCount, Mode=OneWay}"/>
                                            <Run Text="/" Foreground="{StaticResource TextMutedBrush}"/>
                                            <Run Text="{Binding DailyLimit, Mode=OneWay}" Foreground="{StaticResource TextMutedBrush}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Success Rate -->
                        <DataGridTemplateColumn Header="SUCCESS" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock FontSize="14">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource RgbGreenBrush}"/>
                                            </Style>
                                        </TextBlock.Style>
                                        <Run Text="{Binding SuccessRate, StringFormat={}{0:P0}, Mode=OneWay}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Active Toggle -->
                        <DataGridTemplateColumn Header="ACTIVE" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ToggleButton IsChecked="{Binding IsActive, Mode=OneWay}"
                                                  Command="{Binding DataContext.ToggleActiveCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                  CommandParameter="{Binding}"
                                                  Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                  Cursor="Hand"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actions -->
                        <DataGridTemplateColumn Header="" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Command="{Binding DataContext.EditAccountCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="แก้ไข" Cursor="Hand" Margin="0,0,8,0">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Width="32" Height="32" CornerRadius="8" Background="#242432">
                                                        <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16"
                                                                                 Foreground="{StaticResource RgbCyanBrush}"
                                                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                        <Button Command="{Binding DataContext.DeleteAccountCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="ลบ" Cursor="Hand">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Width="32" Height="32" CornerRadius="8" Background="#3D1C1C">
                                                        <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"
                                                                                 Foreground="#EF4444"
                                                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Empty State -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            Visibility="{Binding HasNoAccounts, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                    <Border Width="80" Height="80" CornerRadius="20" Background="#242432" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="AccountMultiple" Width="40" Height="40"
                                                 Foreground="{StaticResource TextMutedBrush}"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="ยังไม่มีบัญชี Social Media" FontSize="18" FontWeight="Medium"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" Margin="0,20,0,0"/>
                    <TextBlock Text="เพิ่มบัญชีใหม่เพื่อเริ่มต้นใช้งาน" FontSize="13"
                               Foreground="{StaticResource TextMutedBrush}"
                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    <Button Margin="0,20,0,0" Command="{Binding AddAccountCommand}" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="12" Padding="20,12">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#3B82F6" Offset="0"/>
                                            <GradientStop Color="#8B5CF6" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccountPlus" Width="18" Height="18" Foreground="White"/>
                                        <TextBlock Text="เพิ่มบัญชีแรก" Foreground="White" FontWeight="Medium" Margin="8,0,0,0"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ADD ACCOUNT DIALOG -->
        <Border Grid.RowSpan="3"
                Visibility="{Binding ShowAddDialog, Converter={StaticResource BooleanToVisibilityConverter}}"
                Background="#80000000">
            <Border Width="500" CornerRadius="20" Padding="32" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1A1A2E" Offset="0"/>
                        <GradientStop Color="#16162A" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="50" ShadowDepth="0" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock FontSize="22" FontWeight="Bold" HorizontalAlignment="Center">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#3B82F6" Offset="0"/>
                                <GradientStop Color="#8B5CF6" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                        <Run Text="เพิ่มบัญชีใหม่"/>
                    </TextBlock>
                    <TextBlock Text="กรอกข้อมูลบัญชี Social Media" FontSize="13"
                               Foreground="{StaticResource TextMutedBrush}"
                               HorizontalAlignment="Center" Margin="0,8,0,24"/>

                    <!-- Platform Selection -->
                    <TextBlock Text="Platform" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding Platforms}"
                              SelectedItem="{Binding NewAccountPlatform}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Background="#16161E"
                              Foreground="White"
                              Margin="0,0,0,16"/>

                    <!-- Account Name -->
                    <TextBlock Text="ชื่อบัญชี" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <TextBox Text="{Binding NewAccountName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="เช่น MyShop, MyBrand"
                             Background="#16161E"
                             Foreground="White"
                             Margin="0,0,0,16"/>

                    <!-- Email -->
                    <TextBlock Text="Email (ไม่บังคับ)" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <TextBox Text="{Binding NewAccountEmail, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="email@example.com"
                             Background="#16161E"
                             Foreground="White"
                             Margin="0,0,0,16"/>

                    <!-- Password -->
                    <TextBlock Text="Password (ไม่บังคับ)" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                    <PasswordBox materialDesign:HintAssist.Hint="Password"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 Background="#16161E"
                                 Foreground="White"
                                 Margin="0,0,0,24"/>

                    <!-- Buttons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Command="{Binding CancelAddCommand}" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="12" Padding="0,14" BorderThickness="1" BorderBrush="#3F3F46">
                                        <TextBlock Text="ยกเลิก" Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontWeight="Medium" HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="2" Command="{Binding SaveNewAccountCommand}" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="12" Padding="0,14">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#3B82F6" Offset="0"/>
                                                <GradientStop Color="#8B5CF6" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <TextBlock Text="บันทึก" Foreground="White"
                                                   FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Page>
