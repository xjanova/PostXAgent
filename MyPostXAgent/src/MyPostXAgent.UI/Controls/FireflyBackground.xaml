<UserControl x:Class="MyPostXAgent.UI.Controls.FireflyBackground"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             IsHitTestVisible="False">

    <Grid>
        <!-- Dark Background -->
        <Border CornerRadius="16">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0A0A0C" Offset="0"/>
                    <GradientStop Color="#0F0F14" Offset="0.5"/>
                    <GradientStop Color="#0A0A0C" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Firefly Canvas -->
        <Canvas x:Name="FireflyCanvas" ClipToBounds="True"/>
    </Grid>
</UserControl>
