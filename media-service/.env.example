# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1
SERVICE_NAME=media-service

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Database (PostgreSQL)
DATABASE_URL="postgresql://mediauser:mediapass@localhost:5432/mediadb?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Storage (S3 / MinIO)
STORAGE_PROVIDER=s3  # s3 | local
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET=postxagent-media
S3_REGION=us-east-1

# Local Storage (fallback)
LOCAL_STORAGE_PATH=./storage

# FFmpeg
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Playwright
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SLOW_MO=0

# Video Generation Providers

## Runway ML
RUNWAY_EMAIL=
RUNWAY_PASSWORD=
RUNWAY_API_KEY=
RUNWAY_SESSION_PATH=./sessions/runway-session.json

## Pika Labs (via Discord)
PIKA_DISCORD_TOKEN=
PIKA_CHANNEL_ID=
PIKA_BOT_ID=

## Luma AI
LUMA_EMAIL=
LUMA_PASSWORD=
LUMA_SESSION_PATH=./sessions/luma-session.json

# Music Generation Providers

## Suno AI
SUNO_EMAIL=
SUNO_PASSWORD=
SUNO_SESSION_PATH=./sessions/suno-session.json

# Queue Configuration
QUEUE_VIDEO_CONCURRENCY=3
QUEUE_MUSIC_CONCURRENCY=2
QUEUE_PROCESSING_CONCURRENCY=5

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
JWT_SECRET=your-jwt-secret-key
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Webhooks (Optional)
WEBHOOK_URL=
WEBHOOK_SECRET=

# External Services

## Laravel Backend
LARAVEL_API_URL=http://localhost:8000/api
LARAVEL_API_KEY=

## AI Manager Core
AI_MANAGER_URL=http://localhost:5000/api
AI_MANAGER_API_KEY=
