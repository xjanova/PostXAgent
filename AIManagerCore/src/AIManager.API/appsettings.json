{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Orchestrator": {
    "NumCores": 0,
    "ApiPort": 5000,
    "WebSocketPort": 5001,
    "SignalRPort": 5002,
    "MaxWorkersPerPlatform": 10,
    "TaskTimeoutSeconds": 300
  },

  "Redis": {
    "ConnectionString": "localhost:6379"
  },

  "Database": {
    "ConnectionString": "Host=localhost;Database=postxagent;Username=postgres;Password="
  },

  "Laravel": {
    "Url": "http://localhost:8000"
  },

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    }
  },

  "AICodeGeneration": {
    "MaxAttempts": 3,
    "MaxConsecutiveFailuresBeforeEscalation": 3,
    "OllamaBaseUrl": "http://localhost:11434",
    "OllamaModel": "llama3.2",
    "ExternalAIProvider": "openai",
    "OpenAIModel": "gpt-4-turbo-preview",
    "AnthropicModel": "claude-3-opus-20240229",
    "GoogleModel": "gemini-pro",
    "CodeGenerationTimeoutSeconds": 120,
    "EnableCodeValidation": true,
    "AllowedCodePatterns": ["async", "await", "return"],
    "BlockedCodePatterns": ["eval(", "Function(", "document.cookie"]
  },

  "SelfHealing": {
    "MaxRetryAttempts": 3,
    "RetryDelayMs": 1000,
    "EnableAICodeGeneration": true,
    "EnableHumanTraining": true,
    "MaxAICodeAttemptsBeforeHuman": 3
  },

  "ClaudeDesktop": {
    "Enabled": false,
    "McpServerPort": 5010,
    "WorkspacePath": "",
    "AutoConnect": false
  }
}
