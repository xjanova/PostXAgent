{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "AIManager": "Information"
    }
  },
  "AllowedHosts": "*",

  "Orchestrator": {
    "NumCores": 0,
    "ApiPort": 5000,
    "WebSocketPort": 5001,
    "SignalRPort": 5002,
    "MaxWorkersPerPlatform": 10,
    "TaskTimeoutSeconds": 300
  },

  "Redis": {
    "ConnectionString": "${REDIS_CONNECTION_STRING}"
  },

  "Database": {
    "ConnectionString": "${DATABASE_CONNECTION_STRING}"
  },

  "Laravel": {
    "Url": "${LARAVEL_URL}"
  },

  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://0.0.0.0:5000",
        "Certificate": {
          "Path": "${SSL_CERT_PATH}",
          "Password": "${SSL_CERT_PASSWORD}"
        }
      }
    }
  },

  "AICodeGeneration": {
    "MaxAttempts": 3,
    "MaxConsecutiveFailuresBeforeEscalation": 3,
    "OllamaBaseUrl": "${OLLAMA_BASE_URL}",
    "OllamaModel": "llama3.2",
    "ExternalAIProvider": "openai",
    "OpenAIModel": "gpt-4-turbo-preview",
    "AnthropicModel": "claude-3-opus-20240229",
    "GoogleModel": "gemini-pro",
    "CodeGenerationTimeoutSeconds": 120,
    "EnableCodeValidation": true,
    "AllowedCodePatterns": ["async", "await", "return"],
    "BlockedCodePatterns": ["eval(", "Function(", "document.cookie"]
  },

  "SelfHealing": {
    "MaxRetryAttempts": 3,
    "RetryDelayMs": 1000,
    "EnableAICodeGeneration": true,
    "EnableHumanTraining": true,
    "MaxAICodeAttemptsBeforeHuman": 3
  },

  "ClaudeDesktop": {
    "Enabled": false,
    "McpServerPort": 5010,
    "WorkspacePath": "",
    "AutoConnect": false
  },

  "ApiKey": {
    "ExcludedPaths": [
      "/swagger",
      "/health",
      "/api/status/health",
      "/hub/aimanager/negotiate"
    ]
  },

  "RateLimiting": {
    "EnableRateLimiting": true,
    "PermitLimit": 100,
    "WindowSeconds": 60,
    "QueueLimit": 10
  },

  "Security": {
    "RequireHttps": true,
    "EnableHsts": true,
    "HstsMaxAgeSeconds": 31536000,
    "EnableCors": true,
    "AllowedOrigins": ["${ALLOWED_ORIGINS}"]
  }
}
