<Window x:Class="AIManager.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="clr-namespace:AIManager.UI.Controls"
        mc:Ignorable="d"
        Title="PostXAgent - AI Manager Dashboard"
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        TextElement.Foreground="White"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <Style TargetType="Window">
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome CaptionHeight="0"
                                  CornerRadius="20"
                                  GlassFrameThickness="0"
                                  ResizeBorderThickness="5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" ClipToBounds="True">
        <Grid>
            <!-- ═══════════════════════════════════════════════════════ -->
            <!-- LAVA LAMP BACKGROUND                                    -->
            <!-- ═══════════════════════════════════════════════════════ -->
            <controls:LavaLampBackground x:Name="LavaBackground"/>

            <!-- Main Content Grid -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ═══════════════════════════════════════════════════════ -->
                <!-- SIDEBAR (Glass Effect)                                  -->
                <!-- ═══════════════════════════════════════════════════════ -->
                <Border Grid.Column="0" CornerRadius="0,20,20,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#40000000" Offset="0"/>
                            <GradientStop Color="#60000000" Offset="0.5"/>
                            <GradientStop Color="#40000000" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="30" ShadowDepth="5" Direction="0" Opacity="0.5"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- ═══════════════════════════════════════════════ -->
                        <!-- LOGO & TITLE                                    -->
                        <!-- ═══════════════════════════════════════════════ -->
                        <StackPanel Grid.Row="0" Margin="20,30,20,30">
                            <!-- RGB Glow Ring around Logo -->
                            <Border x:Name="RgbGlowRing" Width="90" Height="90" CornerRadius="45" HorizontalAlignment="Center">
                                <!-- RGB Glow Effect -->
                                <Border.Effect>
                                    <DropShadowEffect x:Name="RgbGlowEffect" Color="#8B5CF6" BlurRadius="30" ShadowDepth="0" Opacity="0.9"/>
                                </Border.Effect>
                                <Border.Background>
                                    <LinearGradientBrush x:Name="RgbGradient" StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop x:Name="RgbColor1" Color="#FF0000" Offset="0"/>
                                        <GradientStop x:Name="RgbColor2" Color="#00FF00" Offset="0.5"/>
                                        <GradientStop x:Name="RgbColor3" Color="#0000FF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <!-- Inner Logo Container - fits exactly inside the glow ring -->
                                <Border x:Name="LogoContainer" Width="80" Height="80" CornerRadius="40"
                                        HorizontalAlignment="Center" VerticalAlignment="Center"
                                        ClipToBounds="True">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#1a1a2e" Offset="0"/>
                                            <GradientStop Color="#16213e" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Grid>
                                        <!-- Custom Logo Image - Full circle crop with proper clipping -->
                                        <Border x:Name="LogoImageContainer" CornerRadius="40" ClipToBounds="True" Visibility="Collapsed"
                                                Width="80" Height="80">
                                            <Border.OpacityMask>
                                                <VisualBrush>
                                                    <VisualBrush.Visual>
                                                        <Ellipse Width="80" Height="80" Fill="White"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Border.OpacityMask>
                                            <Image x:Name="CustomLogoImage"
                                                   Width="80" Height="80"
                                                   Stretch="UniformToFill"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        </Border>
                                        <!-- Fallback Icon with background -->
                                        <Border x:Name="FallbackLogoBg" CornerRadius="40" Visibility="Visible"
                                                Width="80" Height="80">
                                            <materialDesign:PackIcon x:Name="FallbackLogoIcon"
                                                                     Kind="RobotExcited"
                                                                     Width="45" Height="45"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"
                                                                     Foreground="White"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Border>

                            <TextBlock Text="PostXAgent" Style="{StaticResource GradientText}"
                                       HorizontalAlignment="Center" Margin="0,15,0,0"/>
                            <TextBlock Text="AI Manager Dashboard"
                                       FontSize="12" Opacity="0.6"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- ═══════════════════════════════════════════════ -->
                        <!-- NAVIGATION MENU                                 -->
                        <!-- ═══════════════════════════════════════════════ -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,0">
                            <StackPanel>
                                <!-- Dashboard -->
                                <Button x:Name="BtnDashboard" Click="NavButton_Click" Tag="Dashboard"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8" Background="#208B5CF6">
                                            <materialDesign:PackIcon Kind="ViewDashboard" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#8B5CF6"/>
                                        </Border>
                                        <TextBlock Text="Dashboard" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Workers -->
                                <Button x:Name="BtnWorkers" Click="NavButton_Click" Tag="Workers"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8" Background="#2006B6D4">
                                            <materialDesign:PackIcon Kind="AccountGroup" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#06B6D4"/>
                                        </Border>
                                        <TextBlock Text="Workers" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Tasks -->
                                <Button x:Name="BtnTasks" Click="NavButton_Click" Tag="Tasks"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8" Background="#2010B981">
                                            <materialDesign:PackIcon Kind="FormatListBulleted" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#10B981"/>
                                        </Border>
                                        <TextBlock Text="Tasks Queue" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Platforms -->
                                <Button x:Name="BtnPlatforms" Click="NavButton_Click" Tag="Platforms"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8" Background="#20EC4899">
                                            <materialDesign:PackIcon Kind="ShareVariant" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#EC4899"/>
                                        </Border>
                                        <TextBlock Text="Platforms" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Separator -->
                                <Border Height="1" Background="#20FFFFFF" Margin="15,15"/>

                                <!-- AI Section Label -->
                                <TextBlock Text="AI TOOLS" FontSize="10" Opacity="0.4"
                                           Margin="20,5,0,10" FontWeight="SemiBold"/>

                                <!-- AI Providers -->
                                <Button x:Name="BtnAIProviders" Click="NavButton_Click" Tag="AIProviders"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8" Background="#20F59E0B">
                                            <materialDesign:PackIcon Kind="Brain" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#F59E0B"/>
                                        </Border>
                                        <TextBlock Text="AI Providers" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Content Creator -->
                                <Button x:Name="BtnContentCreator" Click="NavButton_Click" Tag="ContentCreator"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#208B5CF6" Offset="0"/>
                                                    <GradientStop Color="#2010B981" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <materialDesign:PackIcon Kind="Creation" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#8B5CF6"/>
                                        </Border>
                                        <TextBlock Text="Content Creator" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                        <Border Background="#8B5CF6" CornerRadius="8" Padding="6,2" Margin="8,0,0,0">
                                            <TextBlock Text="NEW" FontSize="9" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                </Button>

                                <!-- AI Chat -->
                                <Button x:Name="BtnChat" Click="NavButton_Click" Tag="Chat"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#208B5CF6" Offset="0"/>
                                                    <GradientStop Color="#20EC4899" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <materialDesign:PackIcon Kind="Chat" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#A78BFA"/>
                                        </Border>
                                        <TextBlock Text="AI Chat" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Image/Video Generator -->
                                <Button x:Name="BtnImageGen" Click="NavButton_Click" Tag="ImageGenerator"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#2006B6D4" Offset="0"/>
                                                    <GradientStop Color="#2010B981" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <materialDesign:PackIcon Kind="ImageMultiple" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#22D3EE"/>
                                        </Border>
                                        <TextBlock Text="Image/Video" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Model Manager -->
                                <Button x:Name="BtnModels" Click="NavButton_Click" Tag="ModelManager"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8" Background="#203B82F6">
                                            <materialDesign:PackIcon Kind="PackageDown" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#3B82F6"/>
                                        </Border>
                                        <TextBlock Text="Model Manager" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Workflow Editor -->
                                <Button x:Name="BtnWorkflow" Click="NavButton_Click" Tag="WorkflowEditor"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#20EF4444" Offset="0"/>
                                                    <GradientStop Color="#20F97316" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <materialDesign:PackIcon Kind="Sitemap" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#FB923C"/>
                                        </Border>
                                        <TextBlock Text="Workflow Editor" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                        <Border Background="#F97316" CornerRadius="8" Padding="6,2" Margin="8,0,0,0">
                                            <TextBlock Text="NEW" FontSize="9" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                </Button>

                                <!-- Posting Strategies -->
                                <Button x:Name="BtnStrategies" Click="NavButton_Click" Tag="Strategies"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#2010B981" Offset="0"/>
                                                    <GradientStop Color="#208B5CF6" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <materialDesign:PackIcon Kind="Strategy" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#34D399"/>
                                        </Border>
                                        <TextBlock Text="Strategies" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                        <Border Background="#10B981" CornerRadius="8" Padding="6,2" Margin="10,0,0,0">
                                            <TextBlock Text="NEW" FontSize="9" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                </Button>

                                <!-- Workflow Monitor -->
                                <Button x:Name="BtnWorkflowMonitor" Click="NavButton_Click" Tag="WorkflowMonitor"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#2006B6D4" Offset="0"/>
                                                    <GradientStop Color="#2022D3EE" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <materialDesign:PackIcon Kind="MonitorEye" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#22D3EE"/>
                                        </Border>
                                        <TextBlock Text="Workflow Monitor" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                        <Border Background="#06B6D4" CornerRadius="8" Padding="6,2" Margin="10,0,0,0">
                                            <TextBlock Text="LIVE" FontSize="9" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                </Button>

                                <!-- Web Learning -->
                                <Button x:Name="BtnWebLearning" Click="NavButton_Click" Tag="WebLearning"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#20FF6B6B" Offset="0"/>
                                                    <GradientStop Color="#204ECDC4" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <materialDesign:PackIcon Kind="School" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#FF6B6B"/>
                                        </Border>
                                        <TextBlock Text="Web Learning" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                        <Border Background="#FF6B6B" CornerRadius="8" Padding="6,2" Margin="10,0,0,0">
                                            <TextBlock Text="TEACH" FontSize="9" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                </Button>

                                <!-- Worker WebView -->
                                <Button x:Name="BtnWorkerWebView" Click="NavButton_Click" Tag="WorkerWebView"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#208B5CF6" Offset="0"/>
                                                    <GradientStop Color="#20EF4444" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <materialDesign:PackIcon Kind="MonitorEye" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#A78BFA"/>
                                        </Border>
                                        <TextBlock Text="Worker View" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                        <Border Background="#EF4444" CornerRadius="8" Padding="6,2" Margin="10,0,0,0">
                                            <TextBlock Text="LIVE" FontSize="9" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                </Button>

                                <!-- Separator -->
                                <Border Height="1" Background="#20FFFFFF" Margin="15,15"/>

                                <!-- System Label -->
                                <TextBlock Text="SYSTEM" FontSize="10" Opacity="0.4"
                                           Margin="20,5,0,10" FontWeight="SemiBold"/>

                                <!-- Logs -->
                                <Button x:Name="BtnLogs" Click="NavButton_Click" Tag="Logs"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8" Background="#20808080">
                                            <materialDesign:PackIcon Kind="TextBox" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#9CA3AF"/>
                                        </Border>
                                        <TextBlock Text="Logs" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- API Keys -->
                                <Button x:Name="BtnApiKeys" Click="NavButton_Click" Tag="ApiKeys"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8" Background="#20EF4444">
                                            <materialDesign:PackIcon Kind="Key" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#EF4444"/>
                                        </Border>
                                        <TextBlock Text="API Keys" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                        <Border Background="#EF4444" CornerRadius="8" Padding="6,2" Margin="10,0,0,0">
                                            <TextBlock Text="NEW" FontSize="9" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                </Button>

                                <!-- Settings -->
                                <Button x:Name="BtnSettings" Click="NavButton_Click" Tag="Settings"
                                        Style="{StaticResource FuturisticNavButton}" Margin="5,3">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="36" Height="36" CornerRadius="8" Background="#20808080">
                                            <materialDesign:PackIcon Kind="Cog" Width="20" Height="20"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="#9CA3AF"/>
                                        </Border>
                                        <TextBlock Text="Settings" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- ═══════════════════════════════════════════════ -->
                        <!-- SERVER STATUS (Glass Card)                      -->
                        <!-- ═══════════════════════════════════════════════ -->
                        <Border Grid.Row="2" Style="{StaticResource GlassCardDark}" Margin="15,10,15,20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="12" Height="12" CornerRadius="6" x:Name="StatusIndicatorBorder">
                                        <Border.Background>
                                            <SolidColorBrush Color="#4CAF50"/>
                                        </Border.Background>
                                        <Border.Effect>
                                            <DropShadowEffect Color="#4CAF50" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                        </Border.Effect>
                                    </Border>
                                    <TextBlock x:Name="StatusText" Text="Server Running"
                                               Margin="10,0,0,0" FontWeight="SemiBold"/>
                                </StackPanel>

                                <Grid Margin="0,12,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0" Content="Start" x:Name="BtnStart"
                                            Click="StartButton_Click"
                                            Style="{StaticResource NeonButtonCyan}"
                                            Padding="0,8" Margin="0,0,5,0"/>
                                    <Button Grid.Column="1" Content="Stop" x:Name="BtnStop"
                                            Click="StopButton_Click"
                                            Style="{StaticResource NeonButtonPink}"
                                            Padding="0,8" Margin="5,0,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- ═══════════════════════════════════════════════════════ -->
                <!-- MAIN CONTENT AREA                                       -->
                <!-- ═══════════════════════════════════════════════════════ -->
                <Grid Grid.Column="1" Margin="20,20,20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ═══════════════════════════════════════════════ -->
                    <!-- HEADER                                          -->
                    <!-- ═══════════════════════════════════════════════ -->
                    <Grid Grid.Row="0" Margin="0,10,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="PageTitle" Text="Dashboard" Style="{StaticResource HeadingXL}"/>
                            <TextBlock Text="Real-time monitoring of AI Manager system"
                                       Style="{StaticResource BodyText}" Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                            <!-- Clock Display -->
                            <Border Style="{StaticResource GlassCardDark}" Padding="15,8" CornerRadius="10">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Clock" Width="18" Height="18"
                                                             VerticalAlignment="Center" Opacity="0.6"/>
                                    <TextBlock x:Name="ClockDisplay" Text="00:00:00"
                                               FontSize="18" FontWeight="SemiBold" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Window Controls -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top">
                            <Button Click="MinimizeButton_Click"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Width="36" Height="36" Margin="0,0,5,0">
                                <materialDesign:PackIcon Kind="WindowMinimize" Width="18" Height="18"/>
                            </Button>
                            <Button Click="MaximizeButton_Click"
                                    Style="{StaticResource MaterialDesignIconButton}"
                                    Width="36" Height="36" Margin="0,0,5,0">
                                <materialDesign:PackIcon Kind="WindowMaximize" Width="18" Height="18" x:Name="MaximizeIcon"/>
                            </Button>
                            <Button Click="CloseButton_Click" Width="36" Height="36">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#E53935"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <materialDesign:PackIcon Kind="Close" Width="18" Height="18"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- ═══════════════════════════════════════════════ -->
                    <!-- CONTENT FRAME (Glass Container)                 -->
                    <!-- ═══════════════════════════════════════════════ -->
                    <Border Grid.Row="1" Style="{StaticResource GlassCard}" Padding="0" Margin="0,0,0,10">
                        <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
                    </Border>

                    <!-- ═══════════════════════════════════════════════ -->
                    <!-- STATUS BAR                                      -->
                    <!-- ═══════════════════════════════════════════════ -->
                    <controls:StatusBar x:Name="AppStatusBar" Grid.Row="2" Margin="-20,0,-20,0"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
