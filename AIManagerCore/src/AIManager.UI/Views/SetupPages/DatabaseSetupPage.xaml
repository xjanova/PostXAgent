<Page x:Class="AIManager.UI.Views.SetupPages.DatabaseSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Background="Transparent">

    <Grid>
        <StackPanel MaxWidth="600" VerticalAlignment="Center">
            <!-- Title -->
            <TextBlock Text="Database Configuration"
                      FontSize="28"
                      FontWeight="Bold"
                      Foreground="White"
                      Margin="0,0,0,10"/>

            <TextBlock Text="Configure your database connection for campaign and post management"
                      FontSize="14"
                      Foreground="#aaaaaa"
                      TextWrapping="Wrap"
                      Margin="0,0,0,30"/>

            <!-- Database Type -->
            <TextBlock Text="Database Type" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="CmbDatabaseType"
                     Background="#2a2a3e"
                     Foreground="White"
                     Margin="0,0,0,20">
                <ComboBoxItem Content="MySQL" IsSelected="True"/>
                <ComboBoxItem Content="PostgreSQL"/>
                <ComboBoxItem Content="SQLite (Local)"/>
            </ComboBox>

            <!-- Host -->
            <TextBlock Text="Host" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtHost"
                    Text="localhost"
                    Background="#2a2a3e"
                    Foreground="White"
                    Padding="10"
                    Margin="0,0,0,20"/>

            <!-- Port -->
            <TextBlock Text="Port" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtPort"
                    Text="3306"
                    Background="#2a2a3e"
                    Foreground="White"
                    Padding="10"
                    Margin="0,0,0,20"/>

            <!-- Database Name -->
            <TextBlock Text="Database Name" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtDatabase"
                    Text="postxagent"
                    Background="#2a2a3e"
                    Foreground="White"
                    Padding="10"
                    Margin="0,0,0,20"/>

            <!-- Username -->
            <TextBlock Text="Username" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtUsername"
                    Text="root"
                    Background="#2a2a3e"
                    Foreground="White"
                    Padding="10"
                    Margin="0,0,0,20"/>

            <!-- Password -->
            <TextBlock Text="Password" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox x:Name="TxtPassword"
                        Background="#2a2a3e"
                        Foreground="White"
                        Padding="10"
                        Margin="0,0,0,20"/>

            <!-- Test Connection Button -->
            <Button x:Name="BtnTestConnection"
                   Content="Test Connection"
                   Width="150"
                   Height="35"
                   HorizontalAlignment="Left"
                   Click="BtnTestConnection_Click"
                   Style="{StaticResource MaterialDesignOutlinedButton}"
                   Foreground="White"/>

            <!-- Status Message -->
            <TextBlock x:Name="TxtStatus"
                      Foreground="#00ff88"
                      FontSize="12"
                      Margin="0,10,0,0"
                      Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Page>
