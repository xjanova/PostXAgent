<Page x:Class="AIManager.UI.Views.SetupPages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Background="Transparent">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Welcome Icon -->
            <materialDesign:PackIcon Kind="RocketLaunch"
                                    Width="100" Height="100"
                                    Foreground="#00d4ff"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,30"/>

            <!-- Welcome Title -->
            <TextBlock Text="Welcome to PostXAgent!"
                      FontSize="32"
                      FontWeight="Bold"
                      Foreground="White"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <!-- Description -->
            <TextBlock TextWrapping="Wrap"
                      FontSize="16"
                      Foreground="#cccccc"
                      HorizontalAlignment="Center"
                      TextAlignment="Center"
                      MaxWidth="600"
                      Margin="0,0,0,30">
                <Run Text="PostXAgent is your AI-powered social media automation platform."/><LineBreak/>
                <Run Text="Let's set up your system in just a few steps."/>
            </TextBlock>

            <!-- Features List -->
            <StackPanel Margin="0,30,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <materialDesign:PackIcon Kind="CheckCircle" Foreground="#00ff88" Width="24" Height="24" Margin="0,0,15,0"/>
                    <TextBlock Text="Multi-platform social media posting (9 platforms)" Foreground="White" FontSize="14"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <materialDesign:PackIcon Kind="CheckCircle" Foreground="#00ff88" Width="24" Height="24" Margin="0,0,15,0"/>
                    <TextBlock Text="AI-powered content generation (Ollama, GPT-4, Gemini)" Foreground="White" FontSize="14"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <materialDesign:PackIcon Kind="CheckCircle" Foreground="#00ff88" Width="24" Height="24" Margin="0,0,15,0"/>
                    <TextBlock Text="Intelligent scheduling and campaign management" Foreground="White" FontSize="14"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <materialDesign:PackIcon Kind="CheckCircle" Foreground="#00ff88" Width="24" Height="24" Margin="0,0,15,0"/>
                    <TextBlock Text="AI video and music generation" Foreground="White" FontSize="14"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
