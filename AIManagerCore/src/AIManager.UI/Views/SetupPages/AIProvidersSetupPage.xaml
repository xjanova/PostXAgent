<Page x:Class="AIManager.UI.Views.SetupPages.AIProvidersSetupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Background="Transparent">

    <Grid>
        <StackPanel MaxWidth="700" VerticalAlignment="Center">
            <!-- Title -->
            <TextBlock Text="AI Providers Configuration"
                      FontSize="28"
                      FontWeight="Bold"
                      Foreground="White"
                      Margin="0,0,0,10"/>

            <TextBlock Text="Configure your AI providers for content generation (you can configure more later)"
                      FontSize="14"
                      Foreground="#aaaaaa"
                      TextWrapping="Wrap"
                      Margin="0,0,0,30"/>

            <!-- Ollama (Free) -->
            <Border Background="#2a2a3e" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Brain" Width="24" Height="24" Foreground="#00d4ff" Margin="0,0,15,0"/>
                        <TextBlock Text="Ollama (Local AI - Free)" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <Border Background="#00aa55" CornerRadius="3" Padding="5,2" Margin="10,0,0,0">
                            <TextBlock Text="Recommended" FontSize="10" Foreground="White"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Text="Run AI models locally on your machine"
                              FontSize="12"
                              Foreground="#aaaaaa"
                              Margin="39,5,0,15"/>

                    <CheckBox x:Name="ChkOllama"
                             Content="Install and use Ollama"
                             Foreground="White"
                             IsChecked="True"
                             Margin="39,0,0,10"/>

                    <TextBlock Text="Ollama URL:" Foreground="White" FontSize="12" Margin="39,0,0,5"/>
                    <TextBox x:Name="TxtOllamaUrl"
                            Text="http://localhost:11434"
                            Background="#1e1e2e"
                            Foreground="White"
                            Padding="8"
                            Margin="39,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Google Gemini -->
            <Border Background="#2a2a3e" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Google" Width="24" Height="24" Foreground="#4285f4" Margin="0,0,15,0"/>
                        <TextBlock Text="Google Gemini (Cloud AI)" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <Border Background="#ff9800" CornerRadius="3" Padding="5,2" Margin="10,0,0,0">
                            <TextBlock Text="Optional" FontSize="10" Foreground="White"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Text="Google's advanced AI with free tier available"
                              FontSize="12"
                              Foreground="#aaaaaa"
                              Margin="39,5,0,15"/>

                    <CheckBox x:Name="ChkGemini"
                             Content="Use Google Gemini"
                             Foreground="White"
                             Margin="39,0,0,10"/>

                    <TextBlock Text="API Key:" Foreground="White" FontSize="12" Margin="39,0,0,5"/>
                    <TextBox x:Name="TxtGeminiKey"
                            Background="#1e1e2e"
                            Foreground="White"
                            Padding="8"
                            Margin="39,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- OpenAI GPT-4 -->
            <Border Background="#2a2a3e" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Robot" Width="24" Height="24" Foreground="#10a37f" Margin="0,0,15,0"/>
                        <TextBlock Text="OpenAI GPT-4 (Cloud AI)" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <Border Background="#ff9800" CornerRadius="3" Padding="5,2" Margin="10,0,0,0">
                            <TextBlock Text="Optional" FontSize="10" Foreground="White"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Text="Most powerful AI model (paid service)"
                              FontSize="12"
                              Foreground="#aaaaaa"
                              Margin="39,5,0,15"/>

                    <CheckBox x:Name="ChkOpenAI"
                             Content="Use OpenAI GPT-4"
                             Foreground="White"
                             Margin="39,0,0,10"/>

                    <TextBlock Text="API Key:" Foreground="White" FontSize="12" Margin="39,0,0,5"/>
                    <TextBox x:Name="TxtOpenAIKey"
                            Background="#1e1e2e"
                            Foreground="White"
                            Padding="8"
                            Margin="39,0,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
