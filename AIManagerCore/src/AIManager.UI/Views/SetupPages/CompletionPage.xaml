<Page x:Class="AIManager.UI.Views.SetupPages.CompletionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Background="Transparent">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Success Icon with Animation -->
            <Viewbox Width="120" Height="120" HorizontalAlignment="Center" Margin="0,0,0,30">
                <materialDesign:PackIcon Kind="CheckCircle" Foreground="#00ff88">
                    <materialDesign:PackIcon.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </materialDesign:PackIcon.RenderTransform>
                    <materialDesign:PackIcon.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                   From="0" To="1" Duration="0:0:0.5">
                                        <DoubleAnimation.EasingFunction>
                                            <ElasticEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                   From="0" To="1" Duration="0:0:0.5">
                                        <DoubleAnimation.EasingFunction>
                                            <ElasticEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </materialDesign:PackIcon.Triggers>
                </materialDesign:PackIcon>
            </Viewbox>

            <!-- Completion Title -->
            <TextBlock Text="Setup Complete!"
                      FontSize="36"
                      FontWeight="Bold"
                      Foreground="White"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <!-- Description -->
            <TextBlock TextWrapping="Wrap"
                      FontSize="16"
                      Foreground="#cccccc"
                      HorizontalAlignment="Center"
                      TextAlignment="Center"
                      MaxWidth="600"
                      Margin="0,0,0,40">
                <Run Text="PostXAgent is now configured and ready to use!"/><LineBreak/><LineBreak/>
                <Run Text="You can start creating campaigns, scheduling posts, and automating your social media presence."/>
            </TextBlock>

            <!-- Quick Tips -->
            <Border Background="#2a2a3e" CornerRadius="10" Padding="25" MaxWidth="600">
                <StackPanel>
                    <TextBlock Text="Quick Tips to Get Started:"
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="#00d4ff"
                              Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" Margin="0,8">
                        <materialDesign:PackIcon Kind="Numeric1Circle" Foreground="#00d4ff" Width="20" Height="20" Margin="0,0,12,0"/>
                        <TextBlock Text="Go to Settings to configure your social media accounts"
                                  Foreground="White"
                                  FontSize="14"
                                  TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,8">
                        <materialDesign:PackIcon Kind="Numeric2Circle" Foreground="#00d4ff" Width="20" Height="20" Margin="0,0,12,0"/>
                        <TextBlock Text="Visit AI Providers page to test your AI connections"
                                  Foreground="White"
                                  FontSize="14"
                                  TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,8">
                        <materialDesign:PackIcon Kind="Numeric3Circle" Foreground="#00d4ff" Width="20" Height="20" Margin="0,0,12,0"/>
                        <TextBlock Text="Create your first campaign from the Dashboard"
                                  Foreground="White"
                                  FontSize="14"
                                  TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,8">
                        <materialDesign:PackIcon Kind="Numeric4Circle" Foreground="#00d4ff" Width="20" Height="20" Margin="0,0,12,0"/>
                        <TextBlock Text="Use Content Creator to generate AI-powered posts"
                                  Foreground="White"
                                  FontSize="14"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Final Message -->
            <TextBlock Text="Click 'Finish' to start using PostXAgent!"
                      FontSize="14"
                      Foreground="#aaaaaa"
                      HorizontalAlignment="Center"
                      Margin="0,30,0,0"/>
        </StackPanel>
    </Grid>
</Page>
