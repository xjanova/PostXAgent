<Window x:Class="AIManager.UI.Views.Pages.AddWorkerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add GPU Worker"
        Height="280" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1A1A2E">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <materialDesign:PackIcon Kind="Gpu" Width="28" Height="28" Foreground="#10B981" VerticalAlignment="Center"/>
            <TextBlock Text="Add GPU Worker" FontSize="18" FontWeight="Bold" Foreground="White" Margin="12,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Worker Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,16">
            <TextBlock Text="Worker Name" FontSize="12" Foreground="#9090A8" Margin="0,0,0,6"/>
            <TextBox x:Name="TxtWorkerName"
                     Text="My GPU Worker"
                     Background="#2D2D4A" Foreground="White" BorderThickness="0"
                     Padding="12,10" FontSize="14">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
        </StackPanel>

        <!-- Worker URL -->
        <StackPanel Grid.Row="2" Margin="0,0,0,16">
            <TextBlock Text="Worker URL" FontSize="12" Foreground="#9090A8" Margin="0,0,0,6"/>
            <TextBox x:Name="TxtWorkerUrl"
                     Text="http://localhost:8080"
                     Background="#2D2D4A" Foreground="White" BorderThickness="0"
                     Padding="12,10" FontSize="14">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBlock Text="Enter the ngrok URL from Colab or local worker URL"
                       FontSize="11" Foreground="#6B6B8A" Margin="0,6,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Click="Cancel_Click" Margin="0,0,8,0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#2D2D4A" CornerRadius="8" Padding="20,10">
                            <TextBlock Text="Cancel" FontSize="13" Foreground="#9090A8"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Add Worker" Click="Add_Click" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Padding="20,10">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#10B981" Offset="0"/>
                                    <GradientStop Color="#059669" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="Add Worker" FontSize="13" FontWeight="SemiBold" Foreground="White"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
