<Page x:Class="AIManager.UI.Views.Pages.ModelManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Model Manager">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- System Resources Header -->
        <materialDesign:Card Grid.Row="0" Padding="20" Margin="20,20,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- RAM -->
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Memory" Width="24" Height="24" VerticalAlignment="Center" Foreground="#2196F3"/>
                        <TextBlock Text="RAM" FontWeight="Bold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="TxtRam" Text="-- GB" FontSize="20" FontWeight="Bold" Margin="32,5,0,0"/>
                    <ProgressBar x:Name="RamProgress" Value="0" Maximum="100" Height="6" Margin="0,5,20,0"
                                 Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                </StackPanel>

                <!-- VRAM -->
                <StackPanel Grid.Column="1">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Gpu" Width="24" Height="24" VerticalAlignment="Center" Foreground="#4CAF50"/>
                        <TextBlock Text="VRAM (GPU)" FontWeight="Bold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="TxtVram" Text="-- GB" FontSize="20" FontWeight="Bold" Margin="32,5,0,0"/>
                    <ProgressBar x:Name="VramProgress" Value="0" Maximum="100" Height="6" Margin="0,5,20,0"
                                 Foreground="#4CAF50" Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                </StackPanel>

                <!-- GPU Info -->
                <StackPanel Grid.Column="2">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ExpansionCard" Width="24" Height="24" VerticalAlignment="Center" Foreground="#FF9800"/>
                        <TextBlock Text="GPU" FontWeight="Bold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="TxtGpu" Text="Detecting..." FontSize="14" Margin="32,5,0,0" TextTrimming="CharacterEllipsis"/>
                    <TextBlock x:Name="TxtCuda" Text="" FontSize="12" Foreground="#AAAAAA" Margin="32,2,0,0"/>
                </StackPanel>

                <!-- Refresh Button -->
                <Button Grid.Column="3" Click="RefreshResources_Click"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Refresh">
                    <materialDesign:PackIcon Kind="Refresh" Width="24" Height="24"/>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- Category Tabs -->
        <materialDesign:Card Grid.Row="1" Margin="20,0,20,10">
            <StackPanel Orientation="Horizontal" Margin="10">
                <RadioButton x:Name="TabLLM" Content="LLM (Chat)" IsChecked="True" GroupName="ModelCategory"
                             Style="{StaticResource MaterialDesignChoiceChipPrimaryRadioButton}"
                             Checked="CategoryTab_Checked" Tag="LLM" Margin="0,0,5,0"/>
                <RadioButton x:Name="TabImage" Content="Image Generation" GroupName="ModelCategory"
                             Style="{StaticResource MaterialDesignChoiceChipPrimaryRadioButton}"
                             Checked="CategoryTab_Checked" Tag="Image" Margin="0,0,5,0"/>
                <RadioButton x:Name="TabVideo" Content="Video Generation" GroupName="ModelCategory"
                             Style="{StaticResource MaterialDesignChoiceChipPrimaryRadioButton}"
                             Checked="CategoryTab_Checked" Tag="Video" Margin="0,0,5,0"/>
                <RadioButton x:Name="TabVAE" Content="VAE" GroupName="ModelCategory"
                             Style="{StaticResource MaterialDesignChoiceChipPrimaryRadioButton}"
                             Checked="CategoryTab_Checked" Tag="VAE"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Models List -->
        <ScrollViewer Grid.Row="2" Margin="20,0,20,10" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ModelsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="0,0,0,10" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Status Icon -->
                                <Border Grid.Column="0" Width="50" Height="50" CornerRadius="25" Margin="0,0,15,0"
                                        Background="{Binding StatusBackground}">
                                    <materialDesign:PackIcon Kind="{Binding StatusIcon}" Width="28" Height="28"
                                                             HorizontalAlignment="Center" VerticalAlignment="Center"
                                                             Foreground="{Binding StatusIconColor}"/>
                                </Border>

                                <!-- Model Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DisplayName}" FontSize="16" FontWeight="Bold"/>
                                        <Border Background="#E3F2FD" CornerRadius="4" Padding="6,2" Margin="10,0,0,0"
                                                Visibility="{Binding IsRecommendedVisibility}">
                                            <TextBlock Text="Recommended" FontSize="10" Foreground="#1976D2"/>
                                        </Border>
                                        <Border Background="#FFEBEE" CornerRadius="4" Padding="6,2" Margin="5,0,0,0"
                                                Visibility="{Binding IncompatibleVisibility}">
                                            <TextBlock Text="Not Compatible" FontSize="10" Foreground="#C62828"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="#AAAAAA" Margin="0,4,0,0"
                                               Visibility="{Binding DescriptionVisibility}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="{Binding SizeDisplay}" FontSize="12" Foreground="#AAAAAA"/>
                                        <TextBlock Text=" | " Foreground="#CCCCCC"/>
                                        <TextBlock Text="{Binding RequirementsDisplay}" FontSize="12" Foreground="#AAAAAA"/>
                                    </StackPanel>

                                    <!-- Tags -->
                                    <ItemsControl ItemsSource="{Binding Tags}" Margin="0,5,0,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#2D2D44" CornerRadius="3" Padding="5,2" Margin="0,0,5,0">
                                                    <TextBlock Text="{Binding}" FontSize="10" Foreground="#B8B8D0"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Download Progress -->
                                    <Grid Margin="0,8,0,0" Visibility="{Binding ProgressVisibility}">
                                        <ProgressBar Value="{Binding Progress}" Maximum="100" Height="8"
                                                     Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                                        <TextBlock Text="{Binding ProgressText}" FontSize="10" HorizontalAlignment="Center"
                                                   Margin="0,12,0,0"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Status Text -->
                                <TextBlock Grid.Column="2" Text="{Binding StatusText}" VerticalAlignment="Center"
                                           FontSize="12" Foreground="{Binding StatusColor}" Margin="0,0,15,0"/>

                                <!-- Action Button -->
                                <Button Grid.Column="3" Content="{Binding ActionText}"
                                        Command="{Binding ActionCommand}"
                                        IsEnabled="{Binding ActionEnabled}"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Width="100"/>
                            </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Download Queue / Status Bar -->
        <materialDesign:Card Grid.Row="3" Margin="20,0,20,20" Padding="15"
                             Visibility="{Binding DownloadBarVisibility}" x:Name="DownloadBar">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,15,0">
                    <materialDesign:PackIcon Kind="Download" Width="24" Height="24" VerticalAlignment="Center"
                                             Foreground="#2196F3"/>
                    <TextBlock x:Name="TxtDownloadModel" Text="Downloading..." VerticalAlignment="Center"
                               FontWeight="Bold" Margin="8,0,0,0"/>
                </StackPanel>

                <Grid Grid.Column="1" Margin="0,0,15,0">
                    <ProgressBar x:Name="DownloadProgress" Value="0" Maximum="100" Height="10"
                                 Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                </Grid>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,15,0">
                    <TextBlock x:Name="TxtDownloadSpeed" Text="0 MB/s" VerticalAlignment="Center" FontSize="12"/>
                    <TextBlock Text=" | " Foreground="#CCC" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtDownloadProgress" Text="0%" VerticalAlignment="Center" FontSize="12"/>
                </StackPanel>

                <Button Grid.Column="3" Click="CancelDownload_Click"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Cancel" x:Name="BtnCancelDownload">
                    <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay" Grid.RowSpan="4" Background="#80000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Style="{StaticResource MaterialDesignCircularProgressBar}"
                             Width="50" Height="50"/>
                <TextBlock x:Name="TxtLoadingMessage" Text="Loading..." Foreground="White" Margin="0,15,0,0" FontSize="14"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
