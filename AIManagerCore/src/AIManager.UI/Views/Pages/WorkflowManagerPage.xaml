<Page x:Class="AIManager.UI.Views.Pages.WorkflowManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Workflow Manager"
      Loaded="Page_Loaded">

    <Page.Resources>
        <!-- Boolean to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Platform Card Style -->
        <Style x:Key="PlatformCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#25FFFFFF"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#35FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Workflow Type Button Style -->
        <Style x:Key="WorkflowTypeButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Foreground" Value="#CCFFFFFF"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="3"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <!-- DialogHost wraps everything -->
    <materialDesign:DialogHost x:Name="WorkflowOptionsDialog" DialogTheme="Inherit">
        <materialDesign:DialogHost.DialogContent>
            <Border Background="#1E1E2E" CornerRadius="16" Padding="25" MinWidth="450" MaxWidth="600">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Dialog Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock x:Name="DialogTitle" Text="Workflow Options" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="DialogSubtitle" Text="กำหนดค่าก่อนเริ่มรัน Workflow"
                                   FontSize="12" Foreground="#99FFFFFF" Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Dialog Content -->
                    <ScrollViewer Grid.Row="1" MaxHeight="400" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Workflow Type Selection -->
                            <TextBlock Text="WORKFLOW TYPE" FontSize="11" FontWeight="SemiBold"
                                       Foreground="#66FFFFFF" Margin="0,0,0,10"/>
                            <ComboBox x:Name="CboWorkflowType" Margin="0,0,0,20"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="Select Workflow Type">
                                <ComboBoxItem Content="Signup - สมัครสมาชิก"/>
                                <ComboBoxItem Content="Login - เข้าสู่ระบบ"/>
                                <ComboBoxItem Content="Create Video - สร้างวีดีโอ"/>
                                <ComboBoxItem Content="Create Music - สร้างเพลง"/>
                                <ComboBoxItem Content="Create Image - สร้างรูปภาพ"/>
                                <ComboBoxItem Content="Post - โพสต์เนื้อหา"/>
                            </ComboBox>

                            <!-- Keywords/Conditions -->
                            <TextBlock Text="KEYWORDS / CONDITIONS" FontSize="11" FontWeight="SemiBold"
                                       Foreground="#66FFFFFF" Margin="0,0,0,10"/>
                            <RadioButton x:Name="RbKeywordPreset" Content="ใช้ค่าที่กำหนดไว้ (Preset)"
                                         GroupName="KeywordMode" IsChecked="True" Margin="0,0,0,8"/>
                            <RadioButton x:Name="RbKeywordAsk" Content="ถามระหว่างรัน Workflow"
                                         GroupName="KeywordMode" Margin="0,0,0,8"/>
                            <RadioButton x:Name="RbKeywordOllama" Content="ให้ Ollama สร้าง Prompt อัตโนมัติ"
                                         GroupName="KeywordMode" Margin="0,0,0,15"/>

                            <!-- Prompt Input -->
                            <TextBox x:Name="TxtPrompt" materialDesign:HintAssist.Hint="Prompt / Keywords"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     AcceptsReturn="True" TextWrapping="Wrap" MinLines="3" MaxLines="5"
                                     Margin="0,0,0,20"/>

                            <!-- Ollama Settings -->
                            <Border x:Name="OllamaSettingsPanel" Background="#15FFFFFF" CornerRadius="8" Padding="15"
                                    Margin="0,0,0,15" Visibility="Collapsed">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <materialDesign:PackIcon Kind="Brain" Width="18" Height="18" Foreground="#F59E0B"/>
                                        <TextBlock Text="Ollama Settings" FontWeight="SemiBold" Foreground="#F59E0B" Margin="8,0,0,0"/>
                                    </StackPanel>

                                    <ComboBox x:Name="CboOllamaModel" Margin="0,0,0,10"
                                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Select Model">
                                        <ComboBoxItem Content="llama3.2:latest" IsSelected="True"/>
                                        <ComboBoxItem Content="mistral:latest"/>
                                        <ComboBoxItem Content="gemma2:latest"/>
                                        <ComboBoxItem Content="qwen2.5:latest"/>
                                    </ComboBox>

                                    <TextBox x:Name="TxtOllamaContext" materialDesign:HintAssist.Hint="Context/Instructions for Ollama"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             AcceptsReturn="True" MinLines="2" MaxLines="4"
                                             Text="Generate a creative prompt for..."/>
                                </StackPanel>
                            </Border>

                            <!-- Content Type -->
                            <TextBlock Text="CONTENT TYPE" FontSize="11" FontWeight="SemiBold"
                                       Foreground="#66FFFFFF" Margin="0,0,0,10"/>
                            <ComboBox x:Name="CboContentType" Margin="0,0,0,15"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      materialDesign:HintAssist.Hint="Select Content Type">
                                <ComboBoxItem Content="Video - 9:16 (TikTok/Reels)" IsSelected="True"/>
                                <ComboBoxItem Content="Video - 16:9 (YouTube)"/>
                                <ComboBoxItem Content="Video - 1:1 (Instagram)"/>
                                <ComboBoxItem Content="Image - Portrait"/>
                                <ComboBoxItem Content="Image - Landscape"/>
                                <ComboBoxItem Content="Image - Square"/>
                                <ComboBoxItem Content="Music - Short (30s)"/>
                                <ComboBoxItem Content="Music - Medium (1-2min)"/>
                                <ComboBoxItem Content="Music - Long (3-5min)"/>
                            </ComboBox>

                            <!-- Additional Options -->
                            <CheckBox x:Name="ChkAutoDownload" Content="ดาวน์โหลดอัตโนมัติหลังสร้างเสร็จ"
                                      IsChecked="True" Margin="0,0,0,8"/>
                            <CheckBox x:Name="ChkSaveToPool" Content="บันทึก Credentials ไปยัง Account Pool"
                                      IsChecked="True" Margin="0,0,0,8"/>
                            <CheckBox x:Name="ChkNotifyComplete" Content="แจ้งเตือนเมื่อเสร็จสิ้น"
                                      IsChecked="True"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Dialog Actions -->
                    <Grid Grid.Row="2" Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1" Content="Cancel" Click="DialogCancel_Click"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="#99FFFFFF" Margin="0,0,10,0"/>
                        <Button Grid.Column="2" Content="Start Workflow" Click="DialogStart_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatMidBgButton}">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#8B5CF6" Offset="0"/>
                                                <GradientStop Color="#06B6D4" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </materialDesign:DialogHost.DialogContent>

        <!-- Main Page Content -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Workflow Manager" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="จัดการ Workflow สำหรับทุก Platform - บันทึก, เล่นซ้ำ, และ Export Templates"
                               FontSize="13" Foreground="#99FFFFFF" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- View Toggle -->
                    <Border Background="#20FFFFFF" CornerRadius="8" Padding="4" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="RbGridView" Content="Grid" GroupName="ViewMode"
                                         IsChecked="True" Checked="ViewMode_Changed"
                                         Style="{StaticResource MaterialDesignTabRadioButton}"
                                         Foreground="White" Padding="12,6"/>
                            <RadioButton x:Name="RbListView" Content="List" GroupName="ViewMode"
                                         Checked="ViewMode_Changed"
                                         Style="{StaticResource MaterialDesignTabRadioButton}"
                                         Foreground="White" Padding="12,6"/>
                        </StackPanel>
                    </Border>

                    <!-- Import/Export -->
                    <Button Content="Import" Click="BtnImport_Click" Margin="0,0,10,0"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            BorderBrush="#4006B6D4" Foreground="White" Padding="15,8"/>
                    <Button Content="Export All" Click="BtnExportAll_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            BorderBrush="#408B5CF6" Foreground="White" Padding="15,8"/>
                </StackPanel>
            </Grid>

            <!-- DOWNLOAD FOLDER -->
            <Border Grid.Row="1" Background="#20FFFFFF" CornerRadius="12" Padding="15" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="FolderDownload" Width="24" Height="24"
                                                 Foreground="#06B6D4" VerticalAlignment="Center"/>
                        <StackPanel Margin="12,0,0,0">
                            <TextBlock Text="Download Folder" FontWeight="SemiBold" Foreground="White"/>
                            <TextBlock Text="โฟลเดอร์สำหรับเก็บไฟล์ที่ดาวน์โหลด (Video, Music, Image) รอการ Auto-Edit"
                                       FontSize="11" Foreground="#99FFFFFF"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBox x:Name="TxtDownloadFolder" Grid.Column="1" Margin="20,0"
                             IsReadOnly="True" VerticalAlignment="Center"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             BorderBrush="#40FFFFFF" Foreground="#CCFFFFFF"
                             Text="C:\PostXAgent\Downloads"/>

                    <Button Grid.Column="2" Content="Browse" Click="BtnBrowseFolder_Click"
                            Style="{StaticResource MaterialDesignFlatMidBgButton}"
                            Background="#3006B6D4" Foreground="White" Padding="15,8"/>
                </Grid>
            </Border>

            <!-- PLATFORM LIST (Simplified for now) -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="PlatformGridView">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource PlatformCardStyle}" Width="280" Margin="10"
                                    MouseLeftButtonDown="PlatformCard_Click" Tag="{Binding}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Platform Header -->
                                    <Grid Grid.Row="0" Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Width="48" Height="48" CornerRadius="10" Background="#30FFFFFF">
                                            <materialDesign:PackIcon Kind="{Binding IconKind}" Width="28" Height="28"
                                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                     Foreground="White"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" Foreground="White"/>
                                            <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#99FFFFFF"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <!-- Status Badge -->
                                        <Border Grid.Column="2" Background="#4010B981"
                                                CornerRadius="6" Padding="8,4" VerticalAlignment="Top">
                                            <TextBlock Text="{Binding WorkflowCount, StringFormat='{}{0} Workflows'}"
                                                       FontSize="10" Foreground="White"/>
                                        </Border>
                                    </Grid>

                                    <!-- Workflow Types -->
                                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                                        <TextBlock Text="WORKFLOW TYPES" FontSize="10" Foreground="#66FFFFFF"
                                                   FontWeight="SemiBold" Margin="0,0,0,8"/>
                                        <WrapPanel>
                                            <Button Content="Signup" Tag="Signup" Click="WorkflowType_Click"
                                                    Style="{StaticResource WorkflowTypeButton}">
                                                <Button.Background>
                                                    <SolidColorBrush Color="#10B981" Opacity="0.2"/>
                                                </Button.Background>
                                            </Button>
                                            <Button Content="Login" Tag="Login" Click="WorkflowType_Click"
                                                    Style="{StaticResource WorkflowTypeButton}">
                                                <Button.Background>
                                                    <SolidColorBrush Color="#06B6D4" Opacity="0.2"/>
                                                </Button.Background>
                                            </Button>
                                            <Button Content="{Binding PrimaryAction}" Tag="{Binding PrimaryActionTag}"
                                                    Click="WorkflowType_Click"
                                                    Style="{StaticResource WorkflowTypeButton}"
                                                    Visibility="{Binding ShowPrimaryAction, Converter={StaticResource BoolToVisibility}}">
                                                <Button.Background>
                                                    <SolidColorBrush Color="#8B5CF6" Opacity="0.2"/>
                                                </Button.Background>
                                            </Button>
                                        </WrapPanel>
                                    </StackPanel>

                                    <!-- Quick Actions -->
                                    <Border Grid.Row="2" BorderThickness="0,1,0,0" BorderBrush="#20FFFFFF" Padding="0,10,0,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Button Grid.Column="0" ToolTip="Record New Workflow"
                                                    Click="BtnRecord_Click" Tag="{Binding}"
                                                    Style="{StaticResource MaterialDesignIconButton}">
                                                <materialDesign:PackIcon Kind="Record" Foreground="#EF4444"/>
                                            </Button>

                                            <Button Grid.Column="1" ToolTip="Play Workflow"
                                                    Click="BtnPlay_Click" Tag="{Binding}"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    IsEnabled="{Binding HasAnyWorkflow}">
                                                <materialDesign:PackIcon Kind="Play" Foreground="#10B981"/>
                                            </Button>

                                            <Button Grid.Column="2" ToolTip="Export Template"
                                                    Click="BtnExport_Click" Tag="{Binding}"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    IsEnabled="{Binding HasAnyWorkflow}">
                                                <materialDesign:PackIcon Kind="Export" Foreground="#06B6D4"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- List View (hidden, toggled) -->
            <DataGrid x:Name="PlatformListView" Grid.Row="2" Visibility="Collapsed"
                      AutoGenerateColumns="False" IsReadOnly="True"
                      Background="Transparent" BorderThickness="0"
                      RowBackground="#15FFFFFF" AlternatingRowBackground="#20FFFFFF"
                      HeadersVisibility="Column" GridLinesVisibility="None"
                      SelectionMode="Single" SelectionUnit="FullRow"
                      MouseDoubleClick="PlatformList_DoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Platform" Binding="{Binding Name}" Width="200" Foreground="White"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="300" Foreground="#CCFFFFFF"/>
                    <DataGridTextColumn Header="Workflows" Binding="{Binding WorkflowCount}" Width="100" Foreground="#CCFFFFFF"/>
                    <DataGridTextColumn Header="Primary Action" Binding="{Binding PrimaryAction}" Width="150" Foreground="#CCFFFFFF"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- FOOTER -->
            <Border Grid.Row="3" Background="#15FFFFFF" CornerRadius="12" Padding="15" Margin="0,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Information" Width="18" Height="18"
                                                 Foreground="#06B6D4" VerticalAlignment="Center"/>
                        <TextBlock Text="Tip: กดปุ่ม Record เพื่อเริ่มบันทึก Workflow ใหม่ หรือ Play เพื่อรันที่มีอยู่"
                                   FontSize="12" Foreground="#99FFFFFF" Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Border Grid.Column="1" Background="#2010B981" CornerRadius="8" Padding="12,6" Margin="10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Check" Width="16" Height="16" Foreground="#10B981"/>
                            <TextBlock x:Name="TxtTotalWorkflows" Text="0 Total Workflows"
                                       FontSize="12" Foreground="#10B981" Margin="6,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="#20F59E0B" CornerRadius="8" Padding="12,6" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Brain" Width="16" Height="16" Foreground="#F59E0B"/>
                            <TextBlock x:Name="TxtOllamaStatus" Text="Ollama: Ready"
                                       FontSize="12" Foreground="#F59E0B" Margin="6,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Background="#2006B6D4" CornerRadius="8" Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FolderOpen" Width="16" Height="16" Foreground="#06B6D4"/>
                            <TextBlock x:Name="TxtDownloadCount" Text="0 Files Pending"
                                       FontSize="12" Foreground="#06B6D4" Margin="6,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <Button Grid.Column="4" Content="Open Folder" Click="BtnOpenDownloadFolder_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="#06B6D4" Margin="10,0,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </materialDesign:DialogHost>
</Page>
