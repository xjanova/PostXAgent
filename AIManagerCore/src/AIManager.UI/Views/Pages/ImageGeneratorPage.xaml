<Page x:Class="AIManager.UI.Views.Pages.ImageGeneratorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="AI Image / Video Studio"
      Background="#0D0D15">

    <Page.Resources>
        <!-- Modern ScrollBar Style -->
        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb Background="#3D3D5C" Opacity="0.6">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Section Header -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#B8B8D0"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#9090A8"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Value Text -->
        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#E8E8F0"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- LEFT PANEL - Settings -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Border Grid.Column="0" Background="#12121A" BorderBrush="#2D2D4A" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                <StackPanel>
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <materialDesign:PackIcon Kind="Creation" Width="24" Height="24" Foreground="#8B5CF6" VerticalAlignment="Center"/>
                        <TextBlock Text="AI Studio" FontSize="18" FontWeight="Bold" Foreground="White" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Mode Toggle -->
                    <Border Style="{StaticResource ModernCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <RadioButton x:Name="RbImage" GroupName="Mode" IsChecked="True" Checked="Mode_Changed">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border x:Name="border" Background="Transparent" CornerRadius="8" Padding="12,10" Cursor="Hand">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <materialDesign:PackIcon Kind="Image" Width="18" Height="18" VerticalAlignment="Center" Foreground="#9090A8"/>
                                                <TextBlock Text="Image" Margin="8,0,0,0" FontWeight="SemiBold" Foreground="#9090A8" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="border" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#8B5CF6" Offset="0"/>
                                                            <GradientStop Color="#7C3AED" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>

                            <RadioButton x:Name="RbVideo" Grid.Column="1" GroupName="Mode" Checked="Mode_Changed">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border x:Name="border" Background="Transparent" CornerRadius="8" Padding="12,10" Cursor="Hand">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <materialDesign:PackIcon Kind="Video" Width="18" Height="18" VerticalAlignment="Center" Foreground="#9090A8"/>
                                                <TextBlock Text="Video" Margin="8,0,0,0" FontWeight="SemiBold" Foreground="#9090A8" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="border" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#EC4899" Offset="0"/>
                                                            <GradientStop Color="#DB2777" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                        </Grid>
                    </Border>

                    <!-- Model Selection -->
                    <Border Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <TextBlock Text="MODEL" Style="{StaticResource SectionHeader}"/>
                            <ComboBox x:Name="CboModel"
                                      Background="#2D2D4A" Foreground="White" BorderThickness="0"
                                      Padding="12,10" FontSize="13">
                                <ComboBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </ComboBox.Resources>
                            </ComboBox>
                            <TextBlock x:Name="TxtModelInfo" Text="SDXL 1.0 - 8GB VRAM"
                                       FontSize="11" Foreground="#6B6B8A" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Prompt -->
                    <Border Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <TextBlock Text="PROMPT" Style="{StaticResource SectionHeader}"/>
                            <TextBox x:Name="TxtPrompt"
                                     Background="#2D2D4A" Foreground="White" BorderThickness="0"
                                     Padding="12" FontSize="13" AcceptsReturn="True" TextWrapping="Wrap"
                                     Height="100" VerticalScrollBarVisibility="Auto"
                                     Text="A beautiful sunset over mountains, cinematic lighting, 8k, highly detailed">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>

                            <TextBlock Text="NEGATIVE PROMPT" Style="{StaticResource SectionHeader}" Margin="0,16,0,12"/>
                            <TextBox x:Name="TxtNegativePrompt"
                                     Background="#2D2D4A" Foreground="White" BorderThickness="0"
                                     Padding="12" FontSize="13" AcceptsReturn="True" TextWrapping="Wrap"
                                     Height="60" VerticalScrollBarVisibility="Auto"
                                     Text="blurry, bad quality, distorted, ugly, watermark">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>
                    </Border>

                    <!-- Image Settings -->
                    <Border x:Name="ImageSettings" Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <TextBlock Text="IMAGE SETTINGS" Style="{StaticResource SectionHeader}"/>

                            <!-- Aspect Ratio -->
                            <TextBlock Text="Aspect Ratio" Style="{StaticResource LabelText}"/>
                            <UniformGrid Columns="4" Margin="0,0,0,16">
                                <RadioButton x:Name="Ratio1_1" GroupName="Ratio" IsChecked="True" Margin="0,0,4,0">
                                    <RadioButton.Template>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Border x:Name="border" Background="#2D2D4A" CornerRadius="6" Padding="8,6" Cursor="Hand">
                                                <TextBlock Text="1:1" HorizontalAlignment="Center" FontSize="11" Foreground="#9090A8"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#8B5CF6"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RadioButton.Template>
                                </RadioButton>
                                <RadioButton x:Name="Ratio16_9" GroupName="Ratio" Margin="2,0">
                                    <RadioButton.Template>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Border x:Name="border" Background="#2D2D4A" CornerRadius="6" Padding="8,6" Cursor="Hand">
                                                <TextBlock Text="16:9" HorizontalAlignment="Center" FontSize="11" Foreground="#9090A8"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#8B5CF6"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RadioButton.Template>
                                </RadioButton>
                                <RadioButton x:Name="Ratio9_16" GroupName="Ratio" Margin="2,0">
                                    <RadioButton.Template>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Border x:Name="border" Background="#2D2D4A" CornerRadius="6" Padding="8,6" Cursor="Hand">
                                                <TextBlock Text="9:16" HorizontalAlignment="Center" FontSize="11" Foreground="#9090A8"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#8B5CF6"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RadioButton.Template>
                                </RadioButton>
                                <RadioButton x:Name="Ratio4_3" GroupName="Ratio" Margin="4,0,0,0">
                                    <RadioButton.Template>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Border x:Name="border" Background="#2D2D4A" CornerRadius="6" Padding="8,6" Cursor="Hand">
                                                <TextBlock Text="4:3" HorizontalAlignment="Center" FontSize="11" Foreground="#9090A8"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#8B5CF6"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RadioButton.Template>
                                </RadioButton>
                            </UniformGrid>

                            <!-- Steps -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Steps" Style="{StaticResource LabelText}" Margin="0"/>
                                <TextBlock x:Name="TxtStepsValue" Grid.Column="1" Text="30" Style="{StaticResource ValueText}"/>
                            </Grid>
                            <Slider x:Name="SliderSteps" Minimum="10" Maximum="50" Value="30"
                                    ValueChanged="Slider_ValueChanged" Margin="0,0,0,16"/>

                            <!-- CFG Scale -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="CFG Scale" Style="{StaticResource LabelText}" Margin="0"/>
                                <TextBlock x:Name="TxtCfgValue" Grid.Column="1" Text="7.5" Style="{StaticResource ValueText}"/>
                            </Grid>
                            <Slider x:Name="SliderCfg" Minimum="1" Maximum="20" Value="7.5"
                                    ValueChanged="Slider_ValueChanged" Margin="0,0,0,16"/>

                            <!-- Seed -->
                            <TextBlock Text="Seed (-1 = random)" Style="{StaticResource LabelText}"/>
                            <TextBox x:Name="TxtSeed" Text="-1"
                                     Background="#2D2D4A" Foreground="White" BorderThickness="0"
                                     Padding="12,10" FontSize="13">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>
                    </Border>

                    <!-- Video Settings -->
                    <Border x:Name="VideoSettings" Style="{StaticResource ModernCard}" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="VIDEO SETTINGS" Style="{StaticResource SectionHeader}"/>

                            <!-- Frames -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Frames" Style="{StaticResource LabelText}" Margin="0"/>
                                <TextBlock x:Name="TxtFramesValue" Grid.Column="1" Text="16" Style="{StaticResource ValueText}"/>
                            </Grid>
                            <Slider x:Name="SliderFrames" Minimum="8" Maximum="32" Value="16"
                                    ValueChanged="Slider_ValueChanged" Margin="0,0,0,16"/>

                            <!-- FPS -->
                            <TextBlock Text="FPS" Style="{StaticResource LabelText}"/>
                            <UniformGrid Columns="3" Margin="0,0,0,16">
                                <RadioButton x:Name="Fps8" GroupName="Fps" IsChecked="True" Margin="0,0,4,0">
                                    <RadioButton.Template>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Border x:Name="border" Background="#2D2D4A" CornerRadius="6" Padding="12,8" Cursor="Hand">
                                                <TextBlock Text="8 FPS" HorizontalAlignment="Center" FontSize="12" Foreground="#9090A8"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#EC4899"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RadioButton.Template>
                                </RadioButton>
                                <RadioButton x:Name="Fps12" GroupName="Fps" Margin="2,0">
                                    <RadioButton.Template>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Border x:Name="border" Background="#2D2D4A" CornerRadius="6" Padding="12,8" Cursor="Hand">
                                                <TextBlock Text="12 FPS" HorizontalAlignment="Center" FontSize="12" Foreground="#9090A8"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#EC4899"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RadioButton.Template>
                                </RadioButton>
                                <RadioButton x:Name="Fps24" GroupName="Fps" Margin="4,0,0,0">
                                    <RadioButton.Template>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Border x:Name="border" Background="#2D2D4A" CornerRadius="6" Padding="12,8" Cursor="Hand">
                                                <TextBlock Text="24 FPS" HorizontalAlignment="Center" FontSize="12" Foreground="#9090A8"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#EC4899"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RadioButton.Template>
                                </RadioButton>
                            </UniformGrid>

                            <!-- Duration -->
                            <TextBlock Text="Duration" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="TxtDuration" Text="2 seconds" FontSize="12" Foreground="#6B6B8A"/>
                        </StackPanel>
                    </Border>

                    <!-- Generate Button -->
                    <Button x:Name="BtnGenerate" Click="Generate_Click" Height="48" Cursor="Hand"
                            Margin="0,8,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" CornerRadius="10" Padding="16,12">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#8B5CF6" Offset="0"/>
                                            <GradientStop Color="#EC4899" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect Color="#8B5CF6" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                                    </Border.Effect>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Creation" Width="20" Height="20" Foreground="White" VerticalAlignment="Center"/>
                                        <TextBlock Text="Generate" FontSize="15" FontWeight="SemiBold" Foreground="White" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="BtnCancel" Click="Cancel_Click" Visibility="Collapsed" Height="48" Margin="0,8,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#EF4444" CornerRadius="10" Padding="16,12">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Stop" Width="20" Height="20" Foreground="White" VerticalAlignment="Center"/>
                                        <TextBlock Text="Cancel" FontSize="15" FontWeight="SemiBold" Foreground="White" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- CENTER - Preview Area -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Preview" FontSize="16" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnSave" Click="Save_Click" Visibility="Collapsed" Margin="0,0,8,0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#2D2D4A" CornerRadius="8" Padding="12,8">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Download" Width="16" Height="16" Foreground="#9090A8"/>
                                        <TextBlock Text="Save" Margin="6,0,0,0" FontSize="12" Foreground="#9090A8"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="BtnOpenFolder" Click="OpenFolder_Click" Visibility="Collapsed" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#2D2D4A" CornerRadius="8" Padding="12,8">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FolderOpen" Width="16" Height="16" Foreground="#9090A8"/>
                                        <TextBlock Text="Open Folder" Margin="6,0,0,0" FontSize="12" Foreground="#9090A8"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Preview Container -->
            <Border Grid.Row="1" Background="#1A1A2E" CornerRadius="16" ClipToBounds="True">
                <Grid>
                    <!-- Placeholder -->
                    <StackPanel x:Name="PlaceholderPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border Width="120" Height="120" CornerRadius="60" Background="#2D2D4A">
                            <materialDesign:PackIcon Kind="ImageArea" Width="60" Height="60"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                     Foreground="#4D4D6A"/>
                        </Border>
                        <TextBlock Text="Your creation will appear here" FontSize="14"
                                   Foreground="#6B6B8A" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                        <TextBlock Text="Enter a prompt and click Generate" FontSize="12"
                                   Foreground="#4D4D6A" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>

                    <!-- Generated Image -->
                    <Image x:Name="PreviewImage" Stretch="Uniform" Margin="24" Visibility="Collapsed"/>

                    <!-- Generated Video -->
                    <MediaElement x:Name="PreviewVideo" LoadedBehavior="Manual" UnloadedBehavior="Stop"
                                  Stretch="Uniform" Margin="24" Visibility="Collapsed"/>

                    <!-- Progress Overlay -->
                    <Border x:Name="ProgressOverlay" Background="#E8101020" Visibility="Collapsed">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- Animated Ring -->
                            <Border Width="80" Height="80" CornerRadius="40">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#208B5CF6" Offset="0"/>
                                        <GradientStop Color="#20EC4899" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ProgressBar x:Name="GenerationProgress" IsIndeterminate="True"
                                             Style="{StaticResource MaterialDesignCircularProgressBar}"
                                             Width="50" Height="50" Foreground="#8B5CF6"/>
                            </Border>
                            <TextBlock x:Name="TxtProgressStatus" Text="Generating..." FontSize="16" FontWeight="SemiBold"
                                       Foreground="White" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                            <TextBlock x:Name="TxtProgressDetail" Text="Step 0 / 30" FontSize="13"
                                       Foreground="#9090A8" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- History -->
            <Border Grid.Row="2" Background="#1A1A2E" CornerRadius="12" Padding="16" Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="Recent Generations" FontSize="13" FontWeight="SemiBold" Foreground="#B8B8D0" Margin="0,0,0,12"/>
                    <ListBox x:Name="HistoryList" Height="70" Background="Transparent" BorderThickness="0"
                             SelectionChanged="History_SelectionChanged">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Width="60" Height="60" CornerRadius="8" ClipToBounds="True"
                                        Margin="0,0,8,0" Cursor="Hand" Background="#2D2D4A">
                                    <Image Source="{Binding Thumbnail}" Stretch="UniformToFill"/>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </Grid>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- RIGHT PANEL - GPU Pool -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Border Grid.Column="2" Background="#12121A" BorderBrush="#2D2D4A" BorderThickness="1,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                <StackPanel>
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <materialDesign:PackIcon Kind="Gpu" Width="24" Height="24" Foreground="#10B981" VerticalAlignment="Center"/>
                        <TextBlock Text="GPU Pool" FontSize="18" FontWeight="Bold" Foreground="White" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Distribution Mode -->
                    <Border Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <TextBlock Text="MODE" Style="{StaticResource SectionHeader}"/>
                            <RadioButton x:Name="RbParallel" GroupName="DistMode" IsChecked="True" Margin="0,0,0,8">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border x:Name="border" Background="#2D2D4A" CornerRadius="8" Padding="12" Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Ellipse x:Name="check" Width="16" Height="16" Stroke="#4D4D6A" StrokeThickness="2"/>
                                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                                    <TextBlock Text="Parallel" FontWeight="SemiBold" Foreground="White" FontSize="13"/>
                                                    <TextBlock Text="1 GPU = 1 Job" FontSize="11" Foreground="#6B6B8A"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="check" Property="Fill" Value="#10B981"/>
                                                <Setter TargetName="check" Property="Stroke" Value="#10B981"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="#10B981"/>
                                                <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                            <RadioButton x:Name="RbCombined" GroupName="DistMode">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border x:Name="border" Background="#2D2D4A" CornerRadius="8" Padding="12" Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Ellipse x:Name="check" Width="16" Height="16" Stroke="#4D4D6A" StrokeThickness="2"/>
                                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                                    <TextBlock Text="Combined" FontWeight="SemiBold" Foreground="White" FontSize="13"/>
                                                    <TextBlock Text="Pool all GPUs" FontSize="11" Foreground="#6B6B8A"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="check" Property="Fill" Value="#10B981"/>
                                                <Setter TargetName="check" Property="Stroke" Value="#10B981"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="#10B981"/>
                                                <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                        </StackPanel>
                    </Border>

                    <!-- Pool Stats -->
                    <Border Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <TextBlock Text="POOL STATUS" Style="{StaticResource SectionHeader}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock x:Name="TxtWorkerCount" Text="0" FontSize="24" FontWeight="Bold" Foreground="#10B981"/>
                                    <TextBlock Text="Workers" FontSize="11" Foreground="#6B6B8A"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="0,0,0,12">
                                    <TextBlock x:Name="TxtTotalVram" Text="0 GB" FontSize="24" FontWeight="Bold" Foreground="#8B5CF6"/>
                                    <TextBlock Text="Total VRAM" FontSize="11" Foreground="#6B6B8A"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1">
                                    <TextBlock x:Name="TxtQueueSize" Text="0" FontSize="24" FontWeight="Bold" Foreground="#F59E0B"/>
                                    <TextBlock Text="In Queue" FontSize="11" Foreground="#6B6B8A"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1">
                                    <TextBlock x:Name="TxtCompleted" Text="0" FontSize="24" FontWeight="Bold" Foreground="#06B6D4"/>
                                    <TextBlock Text="Completed" FontSize="11" Foreground="#6B6B8A"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Workers List -->
                    <Border Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="WORKERS" Style="{StaticResource SectionHeader}" Margin="0"/>
                                <Button x:Name="BtnAddWorker" Grid.Column="1" Click="AddWorker_Click" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="#10B981" CornerRadius="4" Padding="8,4">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Plus" Width="14" Height="14" Foreground="White"/>
                                                    <TextBlock Text="Add" Margin="4,0,0,0" FontSize="11" Foreground="White"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>

                            <!-- Workers -->
                            <ItemsControl x:Name="WorkersList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#2D2D4A" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Status Indicator -->
                                                <Ellipse Width="8" Height="8" Fill="{Binding StatusColor}" VerticalAlignment="Center"/>

                                                <!-- Info -->
                                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="White" FontSize="12"/>
                                                    <TextBlock Text="{Binding GpuInfo}" FontSize="10" Foreground="#6B6B8A"/>
                                                </StackPanel>

                                                <!-- VRAM -->
                                                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding VramText}" FontSize="12" Foreground="#9090A8" HorizontalAlignment="Right"/>
                                                    <ProgressBar Value="{Binding VramPercent}" Maximum="100" Height="4" Width="50"
                                                                 Background="#1A1A2E" Foreground="#8B5CF6"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Empty State -->
                            <StackPanel x:Name="NoWorkersPanel" Visibility="Visible" Margin="0,8,0,0">
                                <TextBlock Text="No workers connected" FontSize="12" Foreground="#6B6B8A" HorizontalAlignment="Center"/>
                                <TextBlock Text="Add a GPU worker to start" FontSize="11" Foreground="#4D4D6A" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Quick Actions -->
                    <Border Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <TextBlock Text="QUICK ACTIONS" Style="{StaticResource SectionHeader}"/>

                            <Button x:Name="BtnColabSetup" Click="ColabSetup_Click" Margin="0,0,0,8" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="#2D2D4A" CornerRadius="8" Padding="12">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="GoogleDrive" Width="18" Height="18" Foreground="#F59E0B"/>
                                                <TextBlock Text="Setup Colab Worker" Margin="10,0,0,0" Foreground="White" FontSize="12"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button x:Name="BtnRefreshPool" Click="RefreshConnection_Click" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="#2D2D4A" CornerRadius="8" Padding="12">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Refresh" Width="18" Height="18" Foreground="#06B6D4"/>
                                                <TextBlock Text="Refresh Pool" Margin="10,0,0,0" Foreground="White" FontSize="12"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
