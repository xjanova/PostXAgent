<Page x:Class="AIManager.UI.Views.Pages.PlatformsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Platforms">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Social Media Platforms" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <ItemsControl Grid.Row="1" x:Name="PlatformsList">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card Width="200" Height="150" Margin="10" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="{Binding Icon}" Width="40" Height="40"
                                                         Foreground="{Binding Color}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"
                                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            </StackPanel>
                            <Button Grid.Row="1" Content="Connect" Style="{StaticResource MaterialDesignOutlinedButton}"
                                    HorizontalAlignment="Stretch"/>
                        </Grid>
                    </materialDesign:Card>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
