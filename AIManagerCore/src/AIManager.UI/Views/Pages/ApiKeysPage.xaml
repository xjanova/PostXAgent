<Page x:Class="AIManager.UI.Views.Pages.ApiKeysPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="API Keys">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="API Keys Management" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Manage API keys for external system authentication"
                               FontSize="12" Foreground="#B8B8D0" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnRefresh" Content="Refresh" Click="RefreshKeys_Click"
                            Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,10,0"/>
                    <Button x:Name="BtnCreateKey" Content="Create New Key" Click="CreateKey_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- API Keys List -->
        <materialDesign:Card Grid.Row="1" Padding="0">
            <DataGrid x:Name="DgApiKeys" AutoGenerateColumns="False" CanUserAddRows="False"
                      IsReadOnly="True" SelectionMode="Single"
                      Style="{StaticResource MaterialDesignDataGrid}"
                      GridLinesVisibility="Horizontal"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <!-- Status Indicator -->
                    <DataGridTemplateColumn Header="" Width="40">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Ellipse Width="10" Height="10" HorizontalAlignment="Center">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="#4CAF50"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                    <Setter Property="Fill" Value="#9E9E9E"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                    <DataGridTextColumn Header="Key Prefix" Binding="{Binding KeyPrefix}" Width="100"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>

                    <!-- Scopes -->
                    <DataGridTemplateColumn Header="Scopes" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ScopesDisplay}" TextTrimming="CharacterEllipsis"
                                           ToolTip="{Binding ScopesTooltip}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- IP Restrictions -->
                    <DataGridTemplateColumn Header="IP Restrictions" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding IpDisplay}" TextTrimming="CharacterEllipsis"
                                           ToolTip="{Binding IpTooltip}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Usage Count" Binding="{Binding UsageCount}" Width="100"/>
                    <DataGridTextColumn Header="Last Used" Binding="{Binding LastUsedDisplay}" Width="130"/>
                    <DataGridTextColumn Header="Created" Binding="{Binding CreatedAtDisplay}" Width="130"/>

                    <!-- Expiry -->
                    <DataGridTemplateColumn Header="Expires" Width="130">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ExpiresAtDisplay}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsExpired}" Value="True">
                                                    <Setter Property="Foreground" Value="#F44336"/>
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Actions -->
                    <DataGridTemplateColumn Header="Actions" Width="180">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button ToolTip="Edit" Click="EditKey_Click"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            Width="30" Height="30" Margin="2,0">
                                        <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16"/>
                                    </Button>
                                    <Button ToolTip="Regenerate Key" Click="RegenerateKey_Click"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            Width="30" Height="30" Margin="2,0">
                                        <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16"/>
                                    </Button>
                                    <Button ToolTip="Toggle Active" Click="ToggleKey_Click"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            Width="30" Height="30" Margin="2,0">
                                        <materialDesign:PackIcon Kind="Power" Width="16" Height="16"/>
                                    </Button>
                                    <Button ToolTip="Delete" Click="DeleteKey_Click"
                                            Style="{StaticResource MaterialDesignIconButton}"
                                            Width="30" Height="30" Margin="2,0"
                                            Foreground="#F44336">
                                        <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>

        <!-- New Key Dialog Overlay -->
        <Grid x:Name="CreateKeyDialog" Grid.Row="0" Grid.RowSpan="3"
              Background="#80000000" Visibility="Collapsed">
            <materialDesign:Card Width="500" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="20">
                <StackPanel>
                    <TextBlock Text="Create New API Key" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                    <TextBox x:Name="TxtNewKeyName" materialDesign:HintAssist.Hint="Key Name *"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"/>

                    <TextBox x:Name="TxtNewKeyDescription" materialDesign:HintAssist.Hint="Description"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"
                             AcceptsReturn="True" TextWrapping="Wrap" Height="80"/>

                    <TextBlock Text="Scopes" FontWeight="Bold" Margin="0,0,0,10"/>
                    <WrapPanel Margin="0,0,0,15">
                        <CheckBox x:Name="ChkScopeAll" Content="All (Full Access)" Margin="0,0,15,5"/>
                        <CheckBox x:Name="ChkScopeAdmin" Content="Admin" Margin="0,0,15,5"/>
                        <CheckBox x:Name="ChkScopeTasks" Content="Tasks" Margin="0,0,15,5"/>
                        <CheckBox x:Name="ChkScopeWorkers" Content="Workers" Margin="0,0,15,5"/>
                        <CheckBox x:Name="ChkScopeContent" Content="Content" Margin="0,0,15,5"/>
                        <CheckBox x:Name="ChkScopeImages" Content="Images" Margin="0,0,15,5"/>
                        <CheckBox x:Name="ChkScopeAutomation" Content="Automation" Margin="0,0,15,5"/>
                        <CheckBox x:Name="ChkScopeAnalytics" Content="Analytics" Margin="0,0,15,5"/>
                        <CheckBox x:Name="ChkScopeReadOnly" Content="Read Only" Margin="0,0,15,5"/>
                    </WrapPanel>

                    <TextBox x:Name="TxtNewKeyAllowedIps" materialDesign:HintAssist.Hint="Allowed IPs (comma separated, leave empty for all)"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <CheckBox x:Name="ChkHasExpiry" Content="Set Expiry Date" Margin="0,0,20,0"/>
                        <DatePicker x:Name="DpExpiry" IsEnabled="{Binding IsChecked, ElementName=ChkHasExpiry}"
                                    Style="{StaticResource MaterialDesignOutlinedDatePicker}" Width="200"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Click="CancelCreateKey_Click"
                                Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,10,0"/>
                        <Button Content="Create Key" Click="ConfirmCreateKey_Click"
                                Style="{StaticResource MaterialDesignRaisedButton}"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Show Key Dialog -->
        <Grid x:Name="ShowKeyDialog" Grid.Row="0" Grid.RowSpan="3"
              Background="#80000000" Visibility="Collapsed">
            <materialDesign:Card Width="550" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <materialDesign:PackIcon Kind="Key" Width="24" Height="24"
                                                 Foreground="#4CAF50" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="API Key Generated Successfully" FontSize="18" FontWeight="Bold"
                                   Foreground="#4CAF50" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Border Background="#FFF3E0" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Important: Save this API key now!" FontWeight="Bold"
                                       Foreground="#E65100" Margin="0,0,0,5"/>
                            <TextBlock Text="This is the only time you will see this key. Store it securely."
                                       Foreground="#E65100" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Your API Key:" FontWeight="Bold" Margin="0,0,0,8"/>
                    <Border Background="#252540" CornerRadius="4" Padding="12" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtGeneratedKey" IsReadOnly="True"
                                     FontFamily="Consolas" FontSize="13"
                                     BorderThickness="0" Background="Transparent" Foreground="White"/>
                            <Button Grid.Column="1" Content="Copy" Click="CopyKey_Click"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Height="30" Padding="10,0"/>
                        </Grid>
                    </Border>

                    <TextBlock Text="Usage Example:" FontWeight="Bold" Margin="0,0,0,8"/>
                    <Border Background="#252540" CornerRadius="4" Padding="12" Margin="0,0,0,20">
                        <TextBlock FontFamily="Consolas" FontSize="12" TextWrapping="Wrap">
                            <Run Text="curl -H &quot;X-API-Key: "/>
                            <Run x:Name="RunKeyExample" FontWeight="Bold"/>
                            <Run Text="&quot; \"/>
                            <LineBreak/>
                            <Run Text="     http://localhost:5000/api/status/health"/>
                        </TextBlock>
                    </Border>

                    <Button Content="Done" Click="CloseShowKeyDialog_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            HorizontalAlignment="Right"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#2A2A2A" CornerRadius="4" Padding="10" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="TxtStatus" Text="Ready" Foreground="#B8B8D0" VerticalAlignment="Center"/>
                <TextBlock x:Name="TxtKeyCount" Grid.Column="1" Foreground="#B8B8D0" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Page>
