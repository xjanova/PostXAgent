<Page x:Class="AIManager.UI.Views.Pages.WorkflowMonitorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="Workflow Monitor">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Job Status Colors -->
        <SolidColorBrush x:Key="StatusRunning" Color="#4CAF50"/>
        <SolidColorBrush x:Key="StatusPending" Color="#FF9800"/>
        <SolidColorBrush x:Key="StatusPaused" Color="#2196F3"/>
        <SolidColorBrush x:Key="StatusCompleted" Color="#8BC34A"/>
        <SolidColorBrush x:Key="StatusFailed" Color="#F44336"/>
        <SolidColorBrush x:Key="StatusCancelled" Color="#9E9E9E"/>
    </Page.Resources>

    <Grid Background="{DynamicResource MaterialDesign.Brush.Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource MaterialDesign.Brush.Primary}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Workflow Monitor"
                               Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                               Foreground="White"/>
                    <TextBlock Text="ดูและจัดการ Workflows และ Jobs แบบ Real-time"
                               Foreground="#CCFFFFFF" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="RefreshButton" Click="RefreshButton_Click"
                            Style="{StaticResource MaterialDesignFlatLightButton}"
                            Foreground="White" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center"/>
                            <TextBlock Text="Refresh" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="CleanupButton" Click="CleanupButton_Click"
                            Style="{StaticResource MaterialDesignFlatLightButton}"
                            Foreground="White">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="DeleteSweep" VerticalAlignment="Center"/>
                            <TextBlock Text="Cleanup" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Statistics & Workflows -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Statistics Cards -->
                <materialDesign:Card Grid.Row="0" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="สถิติระบบ" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Background="#E3F2FD" CornerRadius="8" Padding="10" Margin="0,0,5,5">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="TotalWorkflowsText" Text="0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#1976D2"/>
                                    <TextBlock Text="Workflows" FontSize="12" HorizontalAlignment="Center" Foreground="#666"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="0" Grid.Column="1" Background="#E8F5E9" CornerRadius="8" Padding="10" Margin="5,0,0,5">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="RunningJobsText" Text="0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#388E3C"/>
                                    <TextBlock Text="Running" FontSize="12" HorizontalAlignment="Center" Foreground="#666"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="1" Grid.Column="0" Background="#FFF3E0" CornerRadius="8" Padding="10" Margin="0,5,5,5">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="PendingJobsText" Text="0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#F57C00"/>
                                    <TextBlock Text="Pending" FontSize="12" HorizontalAlignment="Center" Foreground="#666"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="1" Grid.Column="1" Background="#FFEBEE" CornerRadius="8" Padding="10" Margin="5,5,0,5">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="FailedJobsText" Text="0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#D32F2F"/>
                                    <TextBlock Text="Failed" FontSize="12" HorizontalAlignment="Center" Foreground="#666"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Background="#F3E5F5" CornerRadius="8" Padding="10" Margin="0,5,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock x:Name="CompletedJobsText" Text="0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#7B1FA2"/>
                                    <TextBlock Text="Completed Today" FontSize="12" HorizontalAlignment="Center" Foreground="#666"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Workflows List -->
                <materialDesign:Card Grid.Row="1" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Workflows" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock x:Name="WorkflowCountText" Text="(0)" Foreground="#666" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <ListBox x:Name="WorkflowsListBox" Grid.Row="1"
                                 SelectionChanged="WorkflowsListBox_SelectionChanged"
                                 VirtualizingStackPanel.IsVirtualizing="True"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                    <materialDesign:Chip Content="{Binding Platform}" Height="20" Padding="5,0"/>
                                                    <TextBlock Text="{Binding TaskType}" Foreground="#666" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding VersionText}" Foreground="#999" FontSize="11" Margin="0,3,0,0"/>
                                            </StackPanel>

                                            <ToggleButton Grid.Column="1"
                                                          IsChecked="{Binding IsActive}"
                                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                          ToolTip="Active/Inactive"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Center Panel: Active Jobs -->
            <Grid Grid.Column="1" Margin="10,0">
                <materialDesign:Card Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Active Jobs" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock x:Name="ActiveJobsCountText" Text="(0)" Foreground="#666" Margin="5,0,0,0" VerticalAlignment="Center"/>

                            <ComboBox x:Name="JobFilterComboBox" Margin="20,0,0,0" Width="150"
                                      SelectionChanged="JobFilterComboBox_SelectionChanged"
                                      materialDesign:HintAssist.Hint="Filter by status">
                                <ComboBoxItem Content="All" IsSelected="True"/>
                                <ComboBoxItem Content="Running"/>
                                <ComboBoxItem Content="Pending"/>
                                <ComboBoxItem Content="Paused"/>
                                <ComboBoxItem Content="Completed"/>
                                <ComboBoxItem Content="Failed"/>
                            </ComboBox>
                        </StackPanel>

                        <ListView x:Name="JobsListView" Grid.Row="1"
                                  SelectionChanged="JobsListView_SelectionChanged"
                                  VirtualizingStackPanel.IsVirtualizing="True"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Status" Width="80">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding StatusColor}" CornerRadius="10" Padding="8,3">
                                                    <TextBlock Text="{Binding StatusText}" Foreground="White" FontSize="11"/>
                                                </Border>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Workflow" Width="150" DisplayMemberBinding="{Binding WorkflowName}"/>
                                    <GridViewColumn Header="Progress" Width="150">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <ProgressBar Value="{Binding ProgressPercentage}"
                                                                 Height="18"
                                                                 Foreground="{Binding StatusColor}"/>
                                                    <TextBlock Text="{Binding ProgressText}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               FontSize="11"/>
                                                </Grid>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Current Step" Width="150" DisplayMemberBinding="{Binding CurrentStep}"/>
                                    <GridViewColumn Header="Duration" Width="80" DisplayMemberBinding="{Binding DurationText}"/>
                                    <GridViewColumn Header="Actions" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                                            Width="28" Height="28"
                                                            Click="PauseResumeJob_Click"
                                                            Tag="{Binding Id}"
                                                            ToolTip="{Binding PauseResumeTooltip}"
                                                            Visibility="{Binding CanPauseResume, Converter={StaticResource BoolToVis}}">
                                                        <materialDesign:PackIcon Kind="{Binding PauseResumeIcon}" Width="16" Height="16"/>
                                                    </Button>
                                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                                            Width="28" Height="28"
                                                            Click="CancelJob_Click"
                                                            Tag="{Binding Id}"
                                                            Foreground="#F44336"
                                                            ToolTip="Cancel Job"
                                                            Visibility="{Binding CanCancel, Converter={StaticResource BoolToVis}}">
                                                        <materialDesign:PackIcon Kind="Stop" Width="16" Height="16"/>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Right Panel: Details -->
            <Grid Grid.Column="2" Margin="10,0,0,0">
                <materialDesign:Card Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="DetailsPanel">
                                <!-- Placeholder -->
                                <TextBlock Text="Select a workflow or job to view details"
                                           Foreground="#999"
                                           HorizontalAlignment="Center"
                                           Margin="0,50,0,0"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </Grid>
</Page>
