<Page x:Class="AIManager.UI.Views.Pages.WorkersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:converters="clr-namespace:AIManager.UI.Converters"
      Title="Workers Dashboard">

    <Page.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>

        <!-- Blinking Animation for Active Data Transfer -->
        <Storyboard x:Key="BlinkAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1" To="0.3" Duration="0:0:0.5"
                           AutoReverse="True"/>
        </Storyboard>

        <!-- Pulse Animation for Online Status -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(Ellipse.Effect).(DropShadowEffect.BlurRadius)"
                           From="6" To="15" Duration="0:0:1"
                           AutoReverse="True"/>
        </Storyboard>

        <!-- Worker Card Style -->
        <Style x:Key="WorkerCard" TargetType="Border">
            <Setter Property="Background" Value="#1E1E2E"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Indicator Base -->
        <Style x:Key="StatusIndicator" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
        </Style>
    </Page.Resources>

    <Grid Background="#0D0D15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#12121A" Padding="20">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ServerNetwork" Width="32" Height="32"
                                             Foreground="#10B981" VerticalAlignment="Center"/>
                    <TextBlock Text="GPU Pool &amp; Worker Manager" FontSize="24" FontWeight="Bold"
                               Foreground="White" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    <Border Background="#1E3A2F" CornerRadius="4" Padding="8,4" Margin="15,0,0,0"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="ConnectionIndicator" Width="8" Height="8" Fill="#10B981" Margin="0,0,6,0">
                                <Ellipse.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#10B981"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <TextBlock x:Name="TxtConnectionStatus" Text="Connected" FontSize="11" Foreground="#10B981"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BtnAddWorker" Style="{StaticResource MaterialDesignOutlinedButton}"
                            Foreground="#10B981" BorderBrush="#10B981"
                            Margin="0,0,10,0" Click="BtnAddWorker_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                            <TextBlock Text="Add Worker" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnRefresh" Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,10,0" Click="BtnRefresh_Click" ToolTip="Refresh All">
                        <materialDesign:PackIcon Kind="Refresh"/>
                    </Button>
                    <ToggleButton x:Name="BtnDistributionMode" Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                  IsChecked="True" ToolTip="Parallel Mode (Toggle for Combined)"
                                  Checked="DistributionMode_Changed" Unchecked="DistributionMode_Changed"/>
                    <TextBlock x:Name="TxtDistributionMode" Text="Parallel" Foreground="#B8B8D0"
                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- GPU Pool Stats -->
        <Border Grid.Row="1" Background="#12121A" Padding="20,15" Margin="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Workers -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="WORKERS" Foreground="#6B6B8A" FontSize="10" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Server" Foreground="#8B5CF6" Width="24" Height="24"/>
                        <TextBlock x:Name="TxtTotalWorkers" Text="0" FontSize="28" FontWeight="Bold"
                                   Foreground="White" Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Online Workers -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="ONLINE" Foreground="#6B6B8A" FontSize="10" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Ellipse Width="10" Height="10" Fill="#10B981" VerticalAlignment="Center">
                            <Ellipse.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#10B981"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock x:Name="TxtOnlineWorkers" Text="0" FontSize="28" FontWeight="Bold"
                                   Foreground="#10B981" Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Busy Workers -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="BUSY" Foreground="#6B6B8A" FontSize="10" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Ellipse Width="10" Height="10" Fill="#F59E0B" VerticalAlignment="Center">
                            <Ellipse.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="8" Color="#F59E0B"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock x:Name="TxtBusyWorkers" Text="0" FontSize="28" FontWeight="Bold"
                                   Foreground="#F59E0B" Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Total VRAM -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="TOTAL VRAM" Foreground="#6B6B8A" FontSize="10" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Memory" Foreground="#3B82F6" Width="24" Height="24"/>
                        <TextBlock x:Name="TxtTotalVram" Text="0 GB" FontSize="28" FontWeight="Bold"
                                   Foreground="#3B82F6" Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Queue Size -->
                <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                    <TextBlock Text="QUEUE" Foreground="#6B6B8A" FontSize="10" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="PlaylistPlay" Foreground="#EC4899" Width="24" Height="24"/>
                        <TextBlock x:Name="TxtQueueSize" Text="0" FontSize="28" FontWeight="Bold"
                                   Foreground="#EC4899" Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Completed Tasks -->
                <StackPanel Grid.Column="5" HorizontalAlignment="Center">
                    <TextBlock Text="COMPLETED" Foreground="#6B6B8A" FontSize="10" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,0,0,4"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="CheckCircle" Foreground="#10B981" Width="24" Height="24"/>
                        <TextBlock x:Name="TxtCompletedTasks" Text="0" FontSize="28" FontWeight="Bold"
                                   Foreground="#10B981" Margin="8,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Section Header -->
        <Border Grid.Row="2" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="GPU Workers" FontSize="16" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="TxtWorkerCount" Text=" (0)" FontSize="16" Foreground="#6B6B8A"/>
            </StackPanel>
        </Border>

        <!-- Workers Grid -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" Padding="12,0">
            <ItemsControl x:Name="WorkersGrid">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource WorkerCard}" Width="320"
                                BorderBrush="{Binding BorderColor}" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header with Status -->
                                <DockPanel Grid.Row="0" Margin="0,0,0,12">
                                    <!-- Status Indicator with Animation -->
                                    <Grid DockPanel.Dock="Left" Width="40" Height="40" Margin="0,0,12,0">
                                        <!-- Outer Ring (Activity Indicator) -->
                                        <Ellipse x:Name="ActivityRing" Width="40" Height="40"
                                                 Stroke="{Binding ActivityColor}" StrokeThickness="2"
                                                 Opacity="{Binding ActivityOpacity}"/>
                                        <!-- Inner Status Dot -->
                                        <Ellipse Width="16" Height="16" Fill="{Binding StatusColor}"
                                                 HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Ellipse.Effect>
                                                <DropShadowEffect ShadowDepth="0" BlurRadius="{Binding GlowRadius}"
                                                                  Color="{Binding GlowColor}"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                        <!-- Data Transfer Arrows -->
                                        <materialDesign:PackIcon Kind="{Binding TransferIcon}"
                                                                 Width="12" Height="12"
                                                                 Foreground="{Binding TransferColor}"
                                                                 HorizontalAlignment="Right"
                                                                 VerticalAlignment="Bottom"
                                                                 Visibility="{Binding TransferVisibility}"
                                                                 Opacity="{Binding TransferOpacity}"/>
                                    </Grid>

                                    <!-- Worker Info -->
                                    <StackPanel DockPanel.Dock="Left">
                                        <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"
                                                   Foreground="White"/>
                                        <TextBlock Text="{Binding GpuInfo}" FontSize="12" Foreground="#8B8BA8"/>
                                    </StackPanel>

                                    <!-- Remove Button -->
                                    <Button DockPanel.Dock="Right" Style="{StaticResource MaterialDesignIconButton}"
                                            Width="28" Height="28" VerticalAlignment="Top"
                                            Click="BtnRemoveWorker_Click" Tag="{Binding Id}"
                                            ToolTip="Remove Worker">
                                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Foreground="#6B6B8A"/>
                                    </Button>
                                </DockPanel>

                                <!-- Status Badge -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,12">
                                    <Border Background="{Binding StatusBadgeBackground}" CornerRadius="4"
                                            Padding="8,4" Margin="0,0,8,0">
                                        <TextBlock Text="{Binding StatusText}" FontSize="11"
                                                   Foreground="{Binding StatusBadgeForeground}"/>
                                    </Border>
                                    <Border Background="#1E1E3F" CornerRadius="4" Padding="8,4"
                                            Visibility="{Binding CurrentTaskVisibility}">
                                        <TextBlock Text="{Binding CurrentTaskShort}" FontSize="11"
                                                   Foreground="#A78BFA" MaxWidth="180" TextTrimming="CharacterEllipsis"/>
                                    </Border>
                                </StackPanel>

                                <!-- VRAM Usage -->
                                <Grid Grid.Row="2" Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="VRAM Usage" FontSize="10" Foreground="#6B6B8A" Margin="0,0,0,4"/>
                                        <Grid Height="6">
                                            <Border Background="#2D2D3F" CornerRadius="3"/>
                                            <Border Background="{Binding VramBarColor}" CornerRadius="3"
                                                    HorizontalAlignment="Left"
                                                    Width="{Binding VramBarWidth}"/>
                                        </Grid>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="{Binding VramText}" FontSize="12"
                                               Foreground="#8B8BA8" VerticalAlignment="Bottom" Margin="12,0,0,0"/>
                                </Grid>

                                <!-- Current Model -->
                                <StackPanel Grid.Row="3" Margin="0,0,0,12"
                                            Visibility="{Binding CurrentModelVisibility}">
                                    <TextBlock Text="Current Model" FontSize="10" Foreground="#6B6B8A" Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding CurrentModel}" FontSize="12" Foreground="#A78BFA"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Stats Row -->
                                <Grid Grid.Row="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Tasks Completed -->
                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <TextBlock Text="Tasks" FontSize="10" Foreground="#6B6B8A"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding TasksCompleted}" FontSize="16" FontWeight="Bold"
                                                   Foreground="White" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Uptime -->
                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                        <TextBlock Text="Uptime" FontSize="10" Foreground="#6B6B8A"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding UptimeText}" FontSize="14"
                                                   Foreground="White" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Ping/Latency -->
                                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                        <TextBlock Text="Ping" FontSize="10" Foreground="#6B6B8A"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding PingText}" FontSize="14"
                                                   Foreground="{Binding PingColor}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- No Workers Panel -->
        <Border x:Name="NoWorkersPanel" Grid.Row="3" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="ServerNetworkOff" Width="64" Height="64"
                                         Foreground="#4B4B6A" HorizontalAlignment="Center"/>
                <TextBlock Text="No GPU Workers Connected" FontSize="18" Foreground="#6B6B8A"
                           HorizontalAlignment="Center" Margin="0,16,0,8"/>
                <TextBlock Text="Add a GPU worker or run the Colab notebook to get started"
                           FontSize="12" Foreground="#4B4B6A" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#8B5CF6" Foreground="White"
                            Click="BtnAddWorker_Click" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                            <TextBlock Text="Add Worker" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                            Foreground="#10B981" BorderBrush="#10B981"
                            Click="BtnOpenColab_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="GoogleCloud" VerticalAlignment="Center"/>
                            <TextBlock Text="Open Colab" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Activity Log -->
        <Expander Grid.Row="4" Header="Activity Log" IsExpanded="False" Margin="20,10,20,20">
            <Border Background="#12121A" CornerRadius="8" MaxHeight="200">
                <ListView x:Name="ActivityLog" Background="Transparent" BorderThickness="0"
                          Foreground="#B8B8D0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}"
                                           Foreground="#6B6B8A" Width="70"/>
                                <materialDesign:PackIcon Kind="{Binding Icon}" Foreground="{Binding IconColor}"
                                                         Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding WorkerName}" Foreground="#A78BFA" Width="100"/>
                                <TextBlock Text="{Binding Message}" Foreground="#B8B8D0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
        </Expander>
    </Grid>
</Page>
