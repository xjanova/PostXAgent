<Page x:Class="AIManager.UI.Views.Pages.WebLearningPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="900" d:DesignWidth="1400"
      Title="Web Learning - Settings &amp; Control"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Step Action Colors -->
        <SolidColorBrush x:Key="StepClick" Color="#4CAF50"/>
        <SolidColorBrush x:Key="StepType" Color="#2196F3"/>
        <SolidColorBrush x:Key="StepUpload" Color="#FF9800"/>
        <SolidColorBrush x:Key="StepSelect" Color="#9C27B0"/>
        <SolidColorBrush x:Key="StepNavigate" Color="#00BCD4"/>
        <SolidColorBrush x:Key="StepSubmit" Color="#E91E63"/>

        <!-- Confidence Colors -->
        <SolidColorBrush x:Key="ConfidenceHigh" Color="#10B981"/>
        <SolidColorBrush x:Key="ConfidenceMedium" Color="#F59E0B"/>
        <SolidColorBrush x:Key="ConfidenceLow" Color="#EF4444"/>

        <!-- Pulse Animation for Recording -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1" To="0.4" Duration="0:0:0.6"
                             AutoReverse="True"/>
        </Storyboard>
    </Page.Resources>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- HEADER - Control Bar                                             -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Border Grid.Row="0" Padding="20,15" Margin="0,0,0,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#30FF6B6B" Offset="0"/>
                    <GradientStop Color="#304ECDC4" Offset="0.5"/>
                    <GradientStop Color="#308B5CF6" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title & Description -->
                <StackPanel VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="SchoolOutline" Width="28" Height="28"
                                                  Foreground="#EC4899" VerticalAlignment="Center"/>
                        <TextBlock Text="Web Learning" FontSize="26" FontWeight="Bold"
                                   Foreground="White" Margin="10,0,0,0"/>
                        <Border Background="#20FFFFFF" CornerRadius="4" Padding="8,4" Margin="15,0,0,0"
                                VerticalAlignment="Center">
                            <TextBlock Text="CONTROL PANEL" Foreground="#4ECDC4" FontSize="10" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Text="ตั้งค่าและควบคุมการสอน AI ทำงานบนเว็บไซต์"
                               Foreground="#AAFFFFFF" Margin="38,5,0,0" FontSize="13"/>
                </StackPanel>

                <!-- Open Browser Button -->
                <Button Grid.Column="1" x:Name="OpenBrowserButton" Click="OpenBrowserButton_Click"
                        Padding="20,12" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#EC4899" Offset="0"/>
                                        <GradientStop Color="#8B5CF6" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="OpenInNew" VerticalAlignment="Center" Width="20" Height="20"/>
                        <TextBlock Text="เปิด Browser" Margin="10,0,0,0" FontWeight="SemiBold" FontSize="14"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!-- MAIN CONTENT                                                     -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <Grid Grid.Row="1" Margin="15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- LEFT PANEL: Settings & Configuration                            -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,15,0">
                <StackPanel>
                    <!-- Browser Status Card -->
                    <Border x:Name="BrowserStatusCard" Background="#25000000" CornerRadius="12" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Border Background="#30EC4899" CornerRadius="10" Width="44" Height="44">
                                    <materialDesign:PackIcon Kind="Web" Width="24" Height="24"
                                                              Foreground="#EC4899" VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"/>
                                </Border>
                                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="Browser Window" FontWeight="Bold" FontSize="16" Foreground="White"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse x:Name="BrowserStatusDot" Width="8" Height="8" Fill="#EF4444"
                                                 VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <TextBlock x:Name="BrowserStatusText" Text="Not Open"
                                                   Foreground="#80FFFFFF" FontSize="12"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <!-- Current Page Info -->
                            <Border x:Name="CurrentPageInfo" Background="#15FFFFFF" CornerRadius="8" Padding="12"
                                    Visibility="Collapsed">
                                <StackPanel>
                                    <TextBlock Text="Current Page" Foreground="#80FFFFFF" FontSize="11"/>
                                    <TextBlock x:Name="TxtCurrentPageTitle" Text="-" Foreground="White"
                                               FontWeight="SemiBold" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock x:Name="TxtCurrentPageUrl" Text="-" Foreground="#60FFFFFF"
                                               FontSize="11" TextTrimming="CharacterEllipsis" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Platform & Task Settings -->
                    <Border Background="#25000000" CornerRadius="12" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <materialDesign:PackIcon Kind="Cog" Width="22" Height="22"
                                                          Foreground="#8B5CF6" VerticalAlignment="Center"/>
                                <TextBlock Text="Settings" FontWeight="Bold" FontSize="16"
                                           Foreground="White" Margin="10,0,0,0"/>
                            </StackPanel>

                            <!-- Platform Selection -->
                            <TextBlock Text="Platform" Foreground="#80FFFFFF" FontSize="12" Margin="0,0,0,8"/>
                            <ComboBox x:Name="PlatformComboBox" Width="Auto"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      Foreground="White" Margin="0,0,0,15">
                                <ComboBoxItem Content="Facebook" Tag="facebook"/>
                                <ComboBoxItem Content="Instagram" Tag="instagram"/>
                                <ComboBoxItem Content="TikTok" Tag="tiktok"/>
                                <ComboBoxItem Content="Twitter/X" Tag="twitter"/>
                                <ComboBoxItem Content="LINE" Tag="line"/>
                                <ComboBoxItem Content="YouTube" Tag="youtube"/>
                                <ComboBoxItem Content="Threads" Tag="threads"/>
                                <ComboBoxItem Content="LinkedIn" Tag="linkedin"/>
                                <ComboBoxItem Content="Pinterest" Tag="pinterest"/>
                                <ComboBoxItem Content="Custom" Tag="custom" IsSelected="True"/>
                            </ComboBox>

                            <!-- Task Type -->
                            <TextBlock Text="Task Type" Foreground="#80FFFFFF" FontSize="12" Margin="0,0,0,8"/>
                            <ComboBox x:Name="TaskTypeComboBox" Width="Auto"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      Foreground="White" Margin="0,0,0,15">
                                <ComboBoxItem Content="Post Content" Tag="post" IsSelected="True"/>
                                <ComboBoxItem Content="Login" Tag="login"/>
                                <ComboBoxItem Content="Upload Media" Tag="upload"/>
                                <ComboBoxItem Content="Comment" Tag="comment"/>
                                <ComboBoxItem Content="Search" Tag="search"/>
                                <ComboBoxItem Content="Send Message" Tag="message"/>
                                <ComboBoxItem Content="Custom" Tag="custom"/>
                            </ComboBox>

                            <!-- URL Input -->
                            <TextBlock Text="Start URL" Foreground="#80FFFFFF" FontSize="12" Margin="0,0,0,8"/>
                            <TextBox x:Name="UrlTextBox"
                                     Text="https://www.facebook.com"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Foreground="White" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <!-- AI Command (Ollama) -->
                    <Border Background="#25000000" CornerRadius="12" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Brain" Width="22" Height="22"
                                                              Foreground="#8B5CF6" VerticalAlignment="Center"/>
                                    <TextBlock Text="AI Command" FontWeight="Bold" FontSize="16"
                                               Foreground="White" Margin="10,0,0,0"/>
                                </StackPanel>

                                <!-- Ollama Status -->
                                <Border Grid.Column="2" Background="#20FFFFFF" CornerRadius="4" Padding="8,4"
                                        Cursor="Hand" MouseLeftButtonDown="OllamaStatus_Click"
                                        ToolTip="Click for troubleshooting">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse x:Name="OllamaStatusDot" Width="6" Height="6" Fill="#10B981"
                                                 VerticalAlignment="Center" Margin="0,0,5,0"/>
                                        <TextBlock x:Name="OllamaStatusText" Text="Checking..." Foreground="#80FFFFFF" FontSize="10"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Prompt Input -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="AiPromptTextBox"
                                         materialDesign:HintAssist.Hint="Ask AI for help..."
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Foreground="White" FontSize="12"
                                         AcceptsReturn="False"
                                         KeyDown="AiPromptTextBox_KeyDown"/>

                                <Button Grid.Column="1" x:Name="SendAiPromptButton" Click="SendAiPromptButton_Click"
                                        Margin="10,0,0,0" Padding="12,8" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#8B5CF6" Offset="0"/>
                                                        <GradientStop Color="#7C3AED" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                    <materialDesign:PackIcon Kind="Send" Width="18" Height="18"/>
                                </Button>
                            </Grid>

                            <!-- AI Response -->
                            <Border x:Name="AiResponsePanel" Background="#208B5CF6" CornerRadius="8" Padding="12"
                                    Margin="0,12,0,0" Visibility="Collapsed">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Kind="RobotOutline" Width="16" Height="16"
                                                                  Foreground="#8B5CF6" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="AI Response" Foreground="#8B5CF6"
                                                   FontWeight="SemiBold" FontSize="11" Margin="6,0,0,0"/>
                                        <Button Grid.Column="2" Style="{StaticResource MaterialDesignIconButton}"
                                                Click="DismissAiResponseButton_Click" Width="20" Height="20">
                                            <materialDesign:PackIcon Kind="Close" Width="12" Height="12" Foreground="#60FFFFFF"/>
                                        </Button>
                                    </Grid>
                                    <TextBlock x:Name="AiResponseText" Text="" Foreground="#EEFFFFFF"
                                               FontSize="12" TextWrapping="Wrap" Margin="0,8,0,0"
                                               MaxHeight="150"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Recording Controls -->
                    <Border Background="#25000000" CornerRadius="12" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <materialDesign:PackIcon Kind="Record" Width="22" Height="22"
                                                          Foreground="#EF4444" VerticalAlignment="Center"/>
                                <TextBlock Text="Recording" FontWeight="Bold" FontSize="16"
                                           Foreground="White" Margin="10,0,0,0"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="StartRecordingButton" Click="StartRecordingButton_Click"
                                        Padding="12,12" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#10B981" Offset="0"/>
                                                        <GradientStop Color="#059669" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Record" Width="16" Height="16" Foreground="White"/>
                                        <TextBlock Text="Start" Margin="6,0,0,0" FontWeight="SemiBold" Foreground="White"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="2" x:Name="StopRecordingButton" Click="StopRecordingButton_Click"
                                        IsEnabled="False" Padding="12,12" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#EF4444" Offset="0"/>
                                                        <GradientStop Color="#DC2626" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Stop" Width="16" Height="16" Foreground="White"/>
                                        <TextBlock Text="Stop" Margin="6,0,0,0" FontWeight="SemiBold" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Save Workflow -->
                    <Border Background="#25000000" CornerRadius="12" Padding="20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <materialDesign:PackIcon Kind="ContentSave" Width="22" Height="22"
                                                          Foreground="#06B6D4" VerticalAlignment="Center"/>
                                <TextBlock Text="Save Workflow" FontWeight="Bold" FontSize="16"
                                           Foreground="White" Margin="10,0,0,0"/>
                            </StackPanel>

                            <TextBlock Text="Workflow Name" Foreground="#80FFFFFF" FontSize="12" Margin="0,0,0,8"/>
                            <TextBox x:Name="WorkflowNameTextBox"
                                     materialDesign:HintAssist.Hint="e.g., Facebook Post Upload"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Foreground="White" FontSize="12" Margin="0,0,0,12"/>

                            <TextBlock Text="Description (optional)" Foreground="#80FFFFFF" FontSize="12" Margin="0,0,0,8"/>
                            <TextBox x:Name="WorkflowDescriptionTextBox"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Foreground="White" FontSize="12"
                                     TextWrapping="Wrap" AcceptsReturn="True" Height="60"
                                     Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" Click="TestWorkflowButton_Click" Padding="12,12" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                            <Setter Property="BorderBrush" Value="#06B6D4"/>
                                            <Setter Property="Foreground" Value="#06B6D4"/>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="PlayCircleOutline" Width="16" Height="16" Foreground="#06B6D4"/>
                                        <TextBlock Text="Test" Margin="6,0,0,0" FontWeight="SemiBold" Foreground="#06B6D4"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="2" Click="SaveWorkflowButton_Click" Padding="12,12" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#8B5CF6" Offset="0"/>
                                                        <GradientStop Color="#7C3AED" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Style>
                                    </Button.Style>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ContentSave" Width="16" Height="16" Foreground="White"/>
                                        <TextBlock Text="Save" Margin="6,0,0,0" FontWeight="SemiBold" Foreground="White"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- ═══════════════════════════════════════════════════════════════ -->
            <!-- RIGHT PANEL: Recorded Steps Display                             -->
            <!-- ═══════════════════════════════════════════════════════════════ -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Steps Header -->
                <Border Grid.Row="0" Background="#25000000" CornerRadius="12" Padding="15" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ListStatus" Width="22" Height="22"
                                                          Foreground="#8B5CF6" VerticalAlignment="Center"/>
                                <TextBlock Text="Recorded Steps" FontWeight="Bold" FontSize="16"
                                           Foreground="White" Margin="8,0,0,0"/>
                            </StackPanel>
                            <TextBlock x:Name="StepCountText" Text="0 steps recorded"
                                       Foreground="#80FFFFFF" FontSize="12" Margin="30,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                    x:Name="UndoButton" Click="UndoButton_Click"
                                    ToolTip="Undo" IsEnabled="False" Width="32" Height="32">
                                <materialDesign:PackIcon Kind="Undo" Width="18" Height="18" Foreground="#B0B0C0"/>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                    x:Name="RedoButton" Click="RedoButton_Click"
                                    ToolTip="Redo" IsEnabled="False" Width="32" Height="32">
                                <materialDesign:PackIcon Kind="Redo" Width="18" Height="18" Foreground="#B0B0C0"/>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                    Click="ClearStepsButton_Click" ToolTip="Clear All" Width="32" Height="32">
                                <materialDesign:PackIcon Kind="DeleteSweep" Width="18" Height="18" Foreground="#EF4444"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Steps List -->
                <Border Grid.Row="1" Background="#15000000" CornerRadius="12" Padding="10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="StepsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#20000000" CornerRadius="10" Padding="12" Margin="0,0,0,8"
                                            BorderThickness="1" BorderBrush="#15FFFFFF" Cursor="Hand">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Step Number Badge -->
                                            <Border Grid.Column="0" Width="32" Height="32" CornerRadius="16"
                                                    Background="{Binding ActionColor}" Margin="0,0,12,0">
                                                <TextBlock Text="{Binding StepNumber}"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                                           Foreground="White" FontWeight="Bold" FontSize="12"/>
                                            </Border>

                                            <!-- Step Details -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding ActionText}"
                                                               FontWeight="SemiBold" Foreground="White" FontSize="13"/>
                                                    <Border CornerRadius="3" Padding="5,2" Margin="8,0,0,0"
                                                            Background="{Binding ConfidenceColor}">
                                                        <TextBlock Text="{Binding ConfidenceDisplay}"
                                                                   Foreground="White" FontSize="9" FontWeight="Bold"/>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock Text="{Binding ElementDescription}"
                                                           Foreground="#90FFFFFF" FontSize="11"
                                                           TextTrimming="CharacterEllipsis" MaxWidth="400"
                                                           Margin="0,3,0,0"/>
                                                <TextBlock Text="{Binding ValueText}"
                                                           Foreground="#60FFFFFF" FontSize="10"
                                                           Visibility="{Binding HasValue, Converter={StaticResource BoolToVis}}"
                                                           TextTrimming="CharacterEllipsis" MaxWidth="400"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <!-- Delete Button -->
                                            <Button Grid.Column="2" Style="{StaticResource MaterialDesignIconButton}"
                                                    Click="DeleteStepButton_Click" Tag="{Binding Index}"
                                                    Width="28" Height="28" ToolTip="Delete Step">
                                                <materialDesign:PackIcon Kind="Close" Width="16" Height="16"
                                                                         Foreground="#EF4444"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
