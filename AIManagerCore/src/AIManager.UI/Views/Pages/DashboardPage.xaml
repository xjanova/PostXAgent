<Page x:Class="AIManager.UI.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      mc:Ignorable="d"
      d:DesignHeight="900" d:DesignWidth="1200"
      Title="Dashboard">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <!-- ROW 0: STATS CARDS                                                   -->
            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <UniformGrid Grid.Row="0" Rows="1" Columns="5" Margin="0,0,0,15">
                <!-- CPU Usage Card -->
                <Border Background="#1E1E2E" CornerRadius="15" Margin="0,0,8,0" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="CPU Usage" Foreground="#B8B8D0" FontSize="12"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="TxtCpuUsage" Text="0" FontSize="28" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="%" FontSize="16" Foreground="#B8B8D0" VerticalAlignment="Bottom" Margin="2,0,0,5"/>
                            </StackPanel>
                            <TextBlock x:Name="TxtCpuCores" Text="0 cores" Foreground="#4CAF50" FontSize="11"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="45" Height="45" VerticalAlignment="Top">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#7C4DFF" Offset="0"/>
                                    <GradientStop Color="#536DFE" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.CornerRadius>10</Border.CornerRadius>
                            <materialDesign:PackIcon Kind="Cpu64Bit" Width="24" Height="24" Foreground="White"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Memory Card -->
                <Border Background="#1E1E2E" CornerRadius="15" Margin="4,0" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Memory" Foreground="#B8B8D0" FontSize="12"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="TxtMemoryUsage" Text="0" FontSize="28" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text=" MB" FontSize="14" Foreground="#B8B8D0" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                            </StackPanel>
                            <TextBlock x:Name="TxtMemoryPercent" Text="0% used" Foreground="#00BCD4" FontSize="11"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="45" Height="45" VerticalAlignment="Top">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#00BCD4" Offset="0"/>
                                    <GradientStop Color="#26C6DA" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.CornerRadius>10</Border.CornerRadius>
                            <materialDesign:PackIcon Kind="Memory" Width="24" Height="24" Foreground="White"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Active Workers Card -->
                <Border Background="#1E1E2E" CornerRadius="15" Margin="4,0" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Workers" Foreground="#B8B8D0" FontSize="12"/>
                            <TextBlock x:Name="TxtActiveWorkers" Text="0" FontSize="28" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="9 platforms" Foreground="#4CAF50" FontSize="11"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="45" Height="45" VerticalAlignment="Top">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#4CAF50" Offset="0"/>
                                    <GradientStop Color="#66BB6A" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.CornerRadius>10</Border.CornerRadius>
                            <materialDesign:PackIcon Kind="AccountGroup" Width="24" Height="24" Foreground="White"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Tasks Completed Card -->
                <Border Background="#1E1E2E" CornerRadius="15" Margin="4,0" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Tasks Done" Foreground="#B8B8D0" FontSize="12"/>
                            <TextBlock x:Name="TxtTasksCompleted" Text="0" FontSize="28" FontWeight="Bold" Foreground="White"/>
                            <TextBlock x:Name="TxtTasksPerSecond" Text="0/sec" Foreground="#FF9800" FontSize="11"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="45" Height="45" VerticalAlignment="Top">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#FF9800" Offset="0"/>
                                    <GradientStop Color="#FFB74D" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.CornerRadius>10</Border.CornerRadius>
                            <materialDesign:PackIcon Kind="CheckCircle" Width="24" Height="24" Foreground="White"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Uptime Card -->
                <Border Background="#1E1E2E" CornerRadius="15" Margin="8,0,0,0" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Uptime" Foreground="#B8B8D0" FontSize="12"/>
                            <TextBlock x:Name="TxtUptime" Text="00:00:00" FontSize="28" FontWeight="Bold" Foreground="White"/>
                            <TextBlock x:Name="TxtSystemStatus" Text="Running" Foreground="#4CAF50" FontSize="11"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="45" Height="45" VerticalAlignment="Top">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#E91E63" Offset="0"/>
                                    <GradientStop Color="#F06292" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.CornerRadius>10</Border.CornerRadius>
                            <materialDesign:PackIcon Kind="ClockOutline" Width="24" Height="24" Foreground="White"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </UniformGrid>

            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <!-- ROW 1: REAL-TIME CHARTS                                              -->
            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- CPU & Memory Chart -->
                <Border Grid.Column="0" Background="#1E1E2E" CornerRadius="15" Margin="0,0,8,0" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="180"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="System Performance" FontSize="16" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Real-time" Foreground="#4CAF50" FontSize="11" Margin="10,4,0,0"/>
                            <Ellipse Width="6" Height="6" Fill="#4CAF50" Margin="5,5,0,0"/>
                        </StackPanel>
                        <lvc:CartesianChart Grid.Row="1" x:Name="PerformanceChart"/>
                    </Grid>
                </Border>

                <!-- Tasks Throughput Chart -->
                <Border Grid.Column="1" Background="#1E1E2E" CornerRadius="15" Margin="8,0,0,0" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="180"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Tasks Throughput" FontSize="16" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Last 60s" Foreground="#FF9800" FontSize="11" Margin="10,4,0,0"/>
                        </StackPanel>
                        <lvc:CartesianChart Grid.Row="1" x:Name="TasksChart"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <!-- ROW 2: PLATFORM DISTRIBUTION & NETWORK                               -->
            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <Grid Grid.Row="2" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Platform Distribution Pie Chart -->
                <Border Grid.Column="0" Background="#1E1E2E" CornerRadius="15" Margin="0,0,8,0" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="200"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Platform Distribution" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                        <lvc:PieChart Grid.Row="1" x:Name="PlatformChart"/>
                    </Grid>
                </Border>

                <!-- Network & API Status -->
                <Border Grid.Column="1" Background="#1E1E2E" CornerRadius="15" Margin="8,0,0,0" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Network Activity" FontSize="16" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="API Calls" Foreground="#00BCD4" FontSize="11" Margin="10,4,0,0"/>
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Requests/sec -->
                            <Border Grid.Column="0" Background="#2A2A3E" CornerRadius="10" Margin="0,0,5,0" Padding="12">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Requests/s" Foreground="#B8B8D0" FontSize="11" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="TxtRequestsPerSec" Text="0" FontSize="24" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="ArrowUp" Width="12" Height="12" Foreground="#4CAF50"/>
                                        <TextBlock x:Name="TxtRequestsTrend" Text="0%" FontSize="10" Foreground="#4CAF50"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Latency -->
                            <Border Grid.Column="1" Background="#2A2A3E" CornerRadius="10" Margin="5,0" Padding="12">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Avg Latency" Foreground="#B8B8D0" FontSize="11" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock x:Name="TxtLatency" Text="0" FontSize="24" FontWeight="Bold" Foreground="#00BCD4"/>
                                        <TextBlock Text="ms" FontSize="12" Foreground="#B8B8D0" VerticalAlignment="Bottom" Margin="2,0,0,4"/>
                                    </StackPanel>
                                    <TextBlock Text="Good" FontSize="10" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Success Rate -->
                            <Border Grid.Column="2" Background="#2A2A3E" CornerRadius="10" Margin="5,0" Padding="12">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Success Rate" Foreground="#B8B8D0" FontSize="11" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock x:Name="TxtSuccessRate" Text="0" FontSize="24" FontWeight="Bold" Foreground="#4CAF50"/>
                                        <TextBlock Text="%" FontSize="12" Foreground="#B8B8D0" VerticalAlignment="Bottom" Margin="2,0,0,4"/>
                                    </StackPanel>
                                    <TextBlock x:Name="TxtTotalRequests" Text="0 total" FontSize="10" Foreground="#B8B8D0" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Errors -->
                            <Border Grid.Column="3" Background="#2A2A3E" CornerRadius="10" Margin="5,0,0,0" Padding="12">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Errors" Foreground="#B8B8D0" FontSize="11" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="TxtErrors" Text="0" FontSize="24" FontWeight="Bold" Foreground="#F44336" HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="TxtErrorRate" Text="0% rate" FontSize="10" Foreground="#F44336" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <!-- ROW 3: PLATFORM STATUS GRID                                          -->
            <!-- ═══════════════════════════════════════════════════════════════════ -->
            <TextBlock Grid.Row="3" Text="Platform Workers Status" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

            <ItemsControl Grid.Row="4" x:Name="PlatformStatusList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="2" Columns="5"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#1E1E2E" CornerRadius="12" Margin="4" Padding="12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <Border Background="{Binding Color}" CornerRadius="8" Width="32" Height="32">
                                        <materialDesign:PackIcon Kind="{Binding Icon}" Width="18" Height="18" Foreground="White"
                                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Margin="8,0,0,0">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="White" FontSize="13"/>
                                        <TextBlock Text="{Binding WorkerCount}" Foreground="#B8B8D0" FontSize="10"/>
                                    </StackPanel>
                                    <Ellipse Width="8" Height="8" Fill="{Binding StatusColor}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <ProgressBar Grid.Row="1" Value="{Binding Progress}" Height="4" Margin="0,8,0,0"
                                             Background="#2A2A3E" Foreground="{Binding Color}"/>

                                <Grid Grid.Row="2" Margin="0,6,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding TasksPerMin}" Foreground="#B8B8D0" FontSize="10"/>
                                    <TextBlock Grid.Column="1" Text="{Binding SuccessRate}" Foreground="#4CAF50" FontSize="10" HorizontalAlignment="Right"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </ScrollViewer>
</Page>
