<Window x:Class="AIManager.UI.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="PostXAgent AI Manager"
        Width="600" Height="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True">

    <Window.Resources>
        <!-- Floating Animation -->
        <Storyboard x:Key="FloatingAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetName="FloatingLogo"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="0" To="-15" Duration="0:0:2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Pulse Animation -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetName="GlowEffect"
                           Storyboard.TargetProperty="Opacity"
                           From="0.3" To="0.8" Duration="0:0:1.5">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Rotate Animation for Particles -->
        <Storyboard x:Key="RotateAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="ParticleContainer"
                           Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:30"/>
        </Storyboard>
    </Window.Resources>

    <Border CornerRadius="20" Background="#1a1a2e">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" Color="#7B1FA2" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <!-- Background Gradient -->
            <Border CornerRadius="20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1a1a2e" Offset="0"/>
                        <GradientStop Color="#16213e" Offset="0.5"/>
                        <GradientStop Color="#0f0f23" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <!-- Animated Particles Background -->
            <Canvas x:Name="ParticleContainer" ClipToBounds="True" Opacity="0.3"
                    RenderTransformOrigin="0.5,0.5">
                <Canvas.RenderTransform>
                    <RotateTransform Angle="0"/>
                </Canvas.RenderTransform>

                <!-- Particle Circles -->
                <Ellipse Canvas.Left="50" Canvas.Top="80" Width="8" Height="8" Fill="#7B1FA2" Opacity="0.5"/>
                <Ellipse Canvas.Left="150" Canvas.Top="150" Width="6" Height="6" Fill="#E040FB" Opacity="0.4"/>
                <Ellipse Canvas.Left="450" Canvas.Top="100" Width="10" Height="10" Fill="#7B1FA2" Opacity="0.3"/>
                <Ellipse Canvas.Left="500" Canvas.Top="250" Width="5" Height="5" Fill="#E040FB" Opacity="0.6"/>
                <Ellipse Canvas.Left="100" Canvas.Top="300" Width="7" Height="7" Fill="#7B1FA2" Opacity="0.4"/>
                <Ellipse Canvas.Left="350" Canvas.Top="50" Width="4" Height="4" Fill="#CDDC39" Opacity="0.5"/>
                <Ellipse Canvas.Left="520" Canvas.Top="180" Width="6" Height="6" Fill="#CDDC39" Opacity="0.3"/>
                <Ellipse Canvas.Left="80" Canvas.Top="200" Width="5" Height="5" Fill="#E040FB" Opacity="0.4"/>
            </Canvas>

            <!-- Main Content -->
            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo Section -->
                <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- Glow Effect Behind Logo -->
                    <Ellipse x:Name="GlowEffect" Width="160" Height="160" Opacity="0.5">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#7B1FA2" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>

                    <!-- Logo Container -->
                    <Border x:Name="FloatingLogo" RenderTransformOrigin="0.5,0.5">
                        <Border.RenderTransform>
                            <TranslateTransform Y="0"/>
                        </Border.RenderTransform>

                        <!-- Logo Container with Border - Image fits inside -->
                        <Border CornerRadius="24" Width="100" Height="100"
                                BorderBrush="#7B1FA2" BorderThickness="3"
                                Background="#2a2a4e" ClipToBounds="True">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="25" Color="#7B1FA2" ShadowDepth="0" Opacity="0.9"/>
                            </Border.Effect>

                            <Grid>
                                <!-- Logo Image - clipped to fit inside rounded border -->
                                <Border CornerRadius="21" ClipToBounds="True">
                                    <Image x:Name="LogoImage" Source="/logo.png"
                                           Stretch="UniformToFill"
                                           RenderOptions.BitmapScalingMode="HighQuality"
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>

                                <!-- Fallback Text Logo if image fails -->
                                <TextBlock x:Name="FallbackLogo" Visibility="Collapsed"
                                           Text="PX" FontSize="42" FontWeight="Bold"
                                           Foreground="#E040FB"
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Border>
                </Grid>

                <!-- App Title -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,20,0,10">
                    <TextBlock Text="PostXAgent"
                               FontSize="32" FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="10" Color="#7B1FA2" ShadowDepth="0" Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="AI Manager"
                               FontSize="16" FontWeight="Light"
                               Foreground="#B39DDB"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Loading Progress -->
                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Progress Bar -->
                    <Border Grid.Row="0" CornerRadius="10" Height="8" Background="#2a2a4e">
                        <Border x:Name="ProgressFill" CornerRadius="10" HorizontalAlignment="Left" Width="0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#7B1FA2" Offset="0"/>
                                    <GradientStop Color="#E040FB" Offset="0.5"/>
                                    <GradientStop Color="#CDDC39" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" Color="#E040FB" ShadowDepth="0" Opacity="0.6"/>
                            </Border.Effect>
                        </Border>
                    </Border>

                    <!-- Progress Text -->
                    <TextBlock x:Name="TxtProgress" Grid.Row="1"
                               Text="Initializing..."
                               FontSize="12"
                               Foreground="#9575CD"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </Grid>

                <!-- Version, Copyright & Status -->
                <Grid Grid.Row="3" Margin="0,15,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Version and Status -->
                    <Grid Grid.Row="0">
                        <TextBlock Text="Version 1.1.0"
                                   FontSize="10"
                                   Foreground="#7070A0"
                                   HorizontalAlignment="Left"/>
                        <TextBlock x:Name="TxtStatus" Text=""
                                   FontSize="10"
                                   Foreground="#7070A0"
                                   HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Copyright -->
                    <TextBlock Grid.Row="1"
                               Text="Â© 2025 Xman Studio. All rights reserved."
                               FontSize="9"
                               Foreground="#5c5c8a"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
