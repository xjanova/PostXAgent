<Window x:Class="AIManager.UI.Views.SetupWizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="PostXAgent - Setup Wizard"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Modern gradient background -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1a1a2e" Offset="0"/>
            <GradientStop Color="#16213e" Offset="0.5"/>
            <GradientStop Color="#0f3460" Offset="1"/>
        </LinearGradientBrush>

        <!-- Step indicator style -->
        <Style x:Key="StepIndicator" TargetType="Border">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Background" Value="#2a2a3e"/>
            <Setter Property="BorderBrush" Value="#3a3a5e"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="StepIndicatorActive" TargetType="Border" BasedOn="{StaticResource StepIndicator}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#00d4ff" Offset="0"/>
                        <GradientStop Color="#0080ff" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#00d4ff"/>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundGradient}" CornerRadius="15">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="PostXAgent Setup Wizard"
                          FontSize="32"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Let's get you started with AI-powered social media automation"
                          FontSize="14"
                          Foreground="#aaaaaa"
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Step Indicators -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                <Border x:Name="Step1Indicator" Style="{StaticResource StepIndicatorActive}">
                    <TextBlock Text="1" Foreground="White" FontSize="18" FontWeight="Bold"
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Rectangle Width="50" Height="2" Fill="#3a3a5e" Margin="0,20,0,0"/>
                <Border x:Name="Step2Indicator" Style="{StaticResource StepIndicator}">
                    <TextBlock Text="2" Foreground="White" FontSize="18" FontWeight="Bold"
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Rectangle Width="50" Height="2" Fill="#3a3a5e" Margin="0,20,0,0"/>
                <Border x:Name="Step3Indicator" Style="{StaticResource StepIndicator}">
                    <TextBlock Text="3" Foreground="White" FontSize="18" FontWeight="Bold"
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Rectangle Width="50" Height="2" Fill="#3a3a5e" Margin="0,20,0,0"/>
                <Border x:Name="Step4Indicator" Style="{StaticResource StepIndicator}">
                    <TextBlock Text="4" Foreground="White" FontSize="18" FontWeight="Bold"
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>

            <!-- Content Area -->
            <Border Grid.Row="2" Background="#1e1e2e" CornerRadius="10" Padding="30" MinHeight="350">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
                </ScrollViewer>
            </Border>

            <!-- Navigation Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="BtnBack"
                       Content="Back"
                       Width="120" Height="40"
                       Margin="0,0,10,0"
                       Click="BtnBack_Click"
                       Visibility="Collapsed"
                       Style="{StaticResource MaterialDesignOutlinedButton}"
                       Foreground="White"/>

                <Button x:Name="BtnNext"
                       Content="Next"
                       Width="120" Height="40"
                       Margin="0,0,10,0"
                       Click="BtnNext_Click"
                       Style="{StaticResource MaterialDesignRaisedButton}">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#00d4ff" Offset="0"/>
                            <GradientStop Color="#0080ff" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <Button x:Name="BtnFinish"
                       Content="Finish"
                       Width="120" Height="40"
                       Click="BtnFinish_Click"
                       Visibility="Collapsed"
                       Style="{StaticResource MaterialDesignRaisedButton}">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#00ff88" Offset="0"/>
                            <GradientStop Color="#00aa55" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
