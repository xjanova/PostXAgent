<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#7C4DFF"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="#00BCD4"/>
    <SolidColorBrush x:Key="AccentColor" Color="#FF4081"/>

    <!-- Background Colors -->
    <SolidColorBrush x:Key="DarkBackground" Color="#0D1117"/>
    <SolidColorBrush x:Key="CardBackground" Color="#1E1E2E"/>
    <SolidColorBrush x:Key="CardBackgroundLight" Color="#2A2A3E"/>

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryText" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryText" Color="#808080"/>
    <SolidColorBrush x:Key="MutedText" Color="#606060"/>

    <!-- Status Colors -->
    <SolidColorBrush x:Key="SuccessColor" Color="#4CAF50"/>
    <SolidColorBrush x:Key="WarningColor" Color="#FF9800"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#F44336"/>
    <SolidColorBrush x:Key="InfoColor" Color="#2196F3"/>

    <!-- Platform Colors -->
    <SolidColorBrush x:Key="FacebookColor" Color="#1877F2"/>
    <SolidColorBrush x:Key="InstagramColor" Color="#DD2A7B"/>
    <SolidColorBrush x:Key="TikTokColor" Color="#00F2EA"/>
    <SolidColorBrush x:Key="TwitterColor" Color="#1DA1F2"/>
    <SolidColorBrush x:Key="LineColor" Color="#00B900"/>
    <SolidColorBrush x:Key="YouTubeColor" Color="#FF0000"/>
    <SolidColorBrush x:Key="ThreadsColor" Color="#000000"/>
    <SolidColorBrush x:Key="LinkedInColor" Color="#0A66C2"/>
    <SolidColorBrush x:Key="PinterestColor" Color="#E60023"/>

</ResourceDictionary>
