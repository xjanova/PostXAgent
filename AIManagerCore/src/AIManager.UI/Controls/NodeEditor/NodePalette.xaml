<UserControl x:Class="AIManager.UI.Controls.NodeEditor.NodePalette"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="250">

    <UserControl.Resources>
        <!-- Category Expander Style -->
        <Style x:Key="CategoryExpanderStyle" TargetType="Expander">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="IsExpanded" Value="True"/>
        </Style>

        <!-- Node Item Style -->
        <Style x:Key="NodeItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#20FFFFFF"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#40FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <Border Grid.Row="0" Background="#20FFFFFF" CornerRadius="8" Margin="10,10,10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Kind="Magnify" Width="18" Height="18"
                                         Margin="10,0,5,0" Opacity="0.5"
                                         VerticalAlignment="Center"/>

                <TextBox x:Name="SearchBox" Grid.Column="1"
                         Style="{StaticResource MaterialDesignTextBox}"
                         materialDesign:HintAssist.Hint="Search nodes..."
                         materialDesign:TextFieldAssist.HasClearButton="False"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         VerticalAlignment="Center"
                         TextChanged="SearchBox_TextChanged"/>

                <Button Grid.Column="2" Click="ClearSearch_Click"
                        Style="{StaticResource MaterialDesignIconButton}"
                        Width="28" Height="28"
                        Visibility="{Binding Text.Length, ElementName=SearchBox, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <materialDesign:PackIcon Kind="Close" Width="14" Height="14"/>
                </Button>
            </Grid>
        </Border>

        <!-- Node Categories List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,5">
            <StackPanel x:Name="CategoriesPanel"/>
        </ScrollViewer>
    </Grid>
</UserControl>
