<UserControl x:Class="AIManager.UI.Controls.NodeEditor.NodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="200">

    <UserControl.Resources>
        <!-- Port Style -->
        <Style x:Key="PortStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="Cursor" Value="Cross"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Width" Value="18"/>
                    <Setter Property="Height" Value="18"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Duplicate" Icon="{materialDesign:PackIcon Kind=ContentCopy}" Click="Duplicate_Click"/>
            <MenuItem Header="Delete" Icon="{materialDesign:PackIcon Kind=Delete}" Click="Delete_Click"/>
            <Separator/>
            <MenuItem Header="Collapse" x:Name="CollapseMenuItem" Icon="{materialDesign:PackIcon Kind=ChevronUp}" Click="Collapse_Click"/>
            <MenuItem Header="Enable/Disable" Icon="{materialDesign:PackIcon Kind=CheckboxBlankOutline}" Click="ToggleEnable_Click"/>
        </ContextMenu>
    </UserControl.ContextMenu>

    <Grid x:Name="RootGrid">
        <!-- Main Node Border -->
        <Border x:Name="NodeBorder" CornerRadius="12" MinWidth="180" MinHeight="80">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#30000000" Offset="0"/>
                    <GradientStop Color="#50000000" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border x:Name="HeaderBorder" Grid.Row="0" CornerRadius="12,12,0,0" Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <Border Grid.Column="0" Width="28" Height="28" CornerRadius="6"
                                Background="#30FFFFFF" Margin="0,0,10,0">
                            <materialDesign:PackIcon x:Name="NodeIcon" Kind="Circle"
                                                     Width="18" Height="18"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                        </Border>

                        <!-- Title -->
                        <TextBlock x:Name="TitleText" Grid.Column="1"
                                   Text="Node Name"
                                   FontWeight="SemiBold" FontSize="13"
                                   Foreground="#EEFFFFFF"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"/>

                        <!-- Execution Indicator -->
                        <Border x:Name="ExecutionIndicator" Grid.Column="2"
                                Width="10" Height="10" CornerRadius="5"
                                Background="#6B7280" Margin="10,0,0,0"
                                Visibility="Collapsed"/>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <Grid Grid.Row="1" x:Name="ContentArea">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Input Ports -->
                    <StackPanel x:Name="InputPortsPanel" Grid.Column="0"
                                Margin="-7,8,0,8" VerticalAlignment="Top"/>

                    <!-- Properties Area -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto"
                                  MaxHeight="200" Margin="10,5">
                        <StackPanel x:Name="PropertiesPanel"/>
                    </ScrollViewer>

                    <!-- Output Ports -->
                    <StackPanel x:Name="OutputPortsPanel" Grid.Column="2"
                                Margin="0,8,-7,8" VerticalAlignment="Top"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Selection Border -->
        <Border x:Name="SelectionBorder" CornerRadius="14"
                BorderThickness="2" BorderBrush="#8B5CF6"
                Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect Color="#8B5CF6" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
            </Border.Effect>
        </Border>

        <!-- Disabled Overlay -->
        <Border x:Name="DisabledOverlay" CornerRadius="12"
                Background="#80000000" Visibility="Collapsed">
            <TextBlock Text="DISABLED" FontWeight="Bold" FontSize="12"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Foreground="#88FFFFFF"/>
        </Border>
    </Grid>
</UserControl>
